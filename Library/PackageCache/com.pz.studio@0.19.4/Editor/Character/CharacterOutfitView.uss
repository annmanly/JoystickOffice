/*

    Character Outfit View
  
*/

CharacterOutfitView {
    flex-grow: 1;
    background-image: url("project://database/Packages/com.pz.studio/Editor/Character/CharacterGrid.png");
    background-repeat: repeat;
    background-size: 96px;
    padding: 4px;
}

CharacterOutfitView Image {
    flex-grow: 1;
}

#_color {
    position: absolute;
    right: 10%;
    top: 4%;
    width: 10%; /* Scale width relative to the container */
    height: 0; /* Set height to 0 to enable padding-based scaling */
    padding-bottom: 10%; /* Set padding-bottom to match width for a square */
    border-radius: 6px;
    border-color: black;
    border-width: 1px;
}