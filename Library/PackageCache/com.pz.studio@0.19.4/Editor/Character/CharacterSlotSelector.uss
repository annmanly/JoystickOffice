.slot-selector .unity-toolbar-search-field {
    width: auto;
}

.slot-selector UICollection {
    flex-grow: 1;
}

.slot-selector UICollection .unity-scroll-view {
    flex-grow: 1;
    background-color: var(--unity-colors-tab-background-hover);
}

.slot-selector UICollectionSection {
    padding: 8px;
}

.slot-selector .slot-cell {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    -unity-text-align: middle-center;
    border-radius: 8px;
    background-color: var(--unity-colors-box-background);
    border-width: 2px;
    border-color: var(--unity-colors-box-background);
}

.slot-selector .slot-cell:checked {
    border-width: 4px;
    border-color: var(--unity-colors-highlight-text);
    background-color: var(--unity-colors-tab-background-hover);
    padding: 3px;
}

.slot-selector .slot-cell > VisualElement {
    flex-grow: 1;
    border-radius: 4px;
}

.slot-selector .slot-cell UIImage {
    width: 100%;
    height: 64px;
    flex-shrink: 0;
}

.slot-selector .slot-cell Label {
    width: 100%;
    font-size: 70%;
    flex-grow: 1;
}

.slot-selector .slot-cell .copy {
    background-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_copy.png");
    width: 16px;
    height: 16px;
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0.5;
    display: none;
}

.slot-selector .slot-cell .copy:hover {
    opacity: 1;
}

.slot-selector .slot-cell:hover:checked .copy {
    display: flex;
}
.slot-selector .slot-cell .copy.none {
    display: none;
}

