.emote-list-view Toolbar {
    background-color: var(--unity-colors-tab-background-checked);
    border-bottom-width: .5px;
    border-bottom-color: var(--unity-colors-toolbar-border);
    flex-direction: row;
    height: var(--unity-metrics-toolbar-height);
    padding: 0;
    margin: 0;
}

.emote-list-view ToolbarSearchField {
    margin: auto 4px;
    flex-grow: 1;
}

.emote-list-view UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-box-background);
}

.emote-list-view UICollection .unity-scroll-view {
    flex-grow: 1;
}

.emote-list-view UICollectionSection {
    padding: 0 8px;
    padding-right: 20px;
}

.emote-list-view .emote-cell {
    width: 72px;
    height: 72px;
    flex-shrink: 0;
    -unity-text-align: middle-center;
}

.emote-list-view .emote-cell:checked {
    background-color: var(--unity-colors-highlight-background);
}

.emote-list-view .emote-cell > VisualElement {
    flex-grow: 1;
    border-radius: 4px;
}

.emote-list-view .emote-cell UIImage {
    width: 50px;
    height: 50px;
    margin: 3px auto;
    flex-shrink: 0;
}

.emote-list-view .emote-cell Label {
    width: 100%;
    font-size: 70%;
    flex-grow: 1;
    height: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
}

.emote-list-view .emote-cell .copy {
    background-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_copy.png");
    width: 16px;
    height: 16px;
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0.5;
    display: none;
}

.emote-list-view .emote-cell .copy:hover {
    opacity: 1;
}

.emote-list-view .emote-cell:hover .copy {
    display: flex;
}

.emote-list-view .emote-cell .copy.none {
    display: none;
}

