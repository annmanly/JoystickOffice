/*

    Character Palette Inspector
  
*/

.character-palette-inspector #_editButton {
    margin-top: 16px;
    margin-bottom: 16px;
}

.character-palette-inspector #_colorsContainer {
    margin-top: 16px;
}

.character-palette-inspector #_colorsContainer Label {
    height: 100%;
    -unity-text-align: middle-left;
}

.character-palette-inspector #_colorsContainer #index {
    -unity-text-align: middle-center;
}

.character-palette-inspector #_colorsContainer #id,
.character-palette-inspector #_colorsContainer #name,
.character-palette-inspector #_colorsContainer #hex {
    -unity-text-align: middle-left;
    margin-left: 6px;
}

.character-palette-inspector #color,
.character-palette-inspector .colorCell {
    width: auto;
    height: 16px;
    margin: auto 2px;
}

.character-palette-inspector .premiumHeader {
    width: 18px;
    height: 18px;
    margin: auto;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconHighrisePlus.png")
}

.character-palette-inspector .premium {
    width: 20px;
    height: 20px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 2px;
}

.character-palette-inspector .premium:checked {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconHighrisePlus.png")
}

.character-palette-inspector .unity-list-view__empty-label {
    display: none;
}
