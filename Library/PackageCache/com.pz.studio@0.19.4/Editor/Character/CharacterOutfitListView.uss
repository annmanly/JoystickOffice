.character-outfit-list-view Toolbar {
    width: 100%;
    height: var(--unity-metrics-toolbar-height);
    flex-direction: row;
    border-bottom-width: .5px;
    border-top-width: .5px;
    border-color: var(--unity-colors-toolbar-border);
}

.character-outfit-list-view ToolbarSearchField {
    flex-grow: 1;
    margin: auto 4px;
}

.character-outfit-list-view UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.character-outfit-list-view UICollectionSection {
    padding: 8px;
    padding-right: 16px;
}

.character-outfit-list-view UICollection .unity-scroll-view {
    flex-grow: 1;
}

.character-outfit-list-view .outfit-display-top-row{
    flex-direction: row;
}

.character-outfit-list-view .add-outfit-display {
    width: 20px;
    height: 20px;
    --unity-image: resource("d_Toolbar Plus");
}

.add-outfit-display:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.character-outfit-list-item {
    width: 72px;
    height: 72px;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
}

.character-outfit-list-item:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.character-outfit-list-item:checked {
    background-color: var(--unity-colors-highlight-background);
}

.character-outfit-list-item > .unity-image {
    margin: 2px auto;
    width: 54px;
    height: 54px;
    flex-shrink: 0;
}

.character-outfit-list-item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 10px;
    height: 14px;
    -unity-text-align: middle-center;
}

.character-outfit-list-item UIImage.none-icon {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconHidden.png");
    --unity-image-tint-color: rgba(255,255,255,0.5);
    padding: 20px;
}
