/*

    Character Skeleton Inspector
  
*/

.character-skeleton-inspector {
    margin-top: 8px;
}

.character-skeleton-inspector .icon {
    width: 22px;
    height: 22px;
    opacity: 0.3;
    margin-top: auto;
    margin-bottom: auto;
    flex-shrink: 0;
}

.character-skeleton-inspector #_clothingLabel {
    margin-top: 16px;
}

.character-skeleton-inspector #_clothing {
    -unity-text-align: middle-left;
    margin-top: 8px;
}

.character-skeleton-inspector .clothing {
    flex-direction: row;
    height: 48px;
}

.character-skeleton-inspector .clothing UIImage {
    background-color: var(--unity-colors-box-background);
    border-radius: 4px;
    width: 46px;
    height: 46px;
    padding: 2px;
    margin-top: 1px;
    margin-left: 4px;
    flex-shrink: 0;
}

.character-skeleton-inspector .clothing Label {
    height: 100%;
    margin-left: 8px;
    opacity: 0.5;
}

.character-skeleton-inspector .copy {
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_copy.png");
    width: 16px;
    height: 16px;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 8px;
    opacity: 0.5;
    display: none;
}

.character-skeleton-inspector .clothing:hover .copy {
    display: flex;
}

.character-skeleton-inspector #_skeleton {
    margin-top: 8px;
}

.character-skeleton-inspector HelpBox {
    margin-bottom: 8px;
}





.character-skeleton-inspector TabbedView {
    margin-left: -10px;
}