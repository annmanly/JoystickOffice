.palette-display-list {
    flex-grow: 1;
    border-right-width: 1px;
    border-right-color: var(--unity-colors-toolbar-border);
}

.palette-display-list ToolbarSearchField {
    width: 95%;
}

.palette-display-list UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.palette-display-list UICollectionSection {
    padding: 8px;
    padding-right: 16px;
}

.palette-display-list UICollection .unity-scroll-view {
    flex-grow: 1;
}

.title-bar {
    height: 20px;
    flex-shrink: 1;
    justify-content: center;
    background-color: var(--unity-colors-box-background);
}

.title {
    -unity-font-style: bold;
}

.palette-display-item {
    height: 72px;
    width: 72px;
    border-radius: 8px;
    align-items: center;
    justify-content: flex-start;
    border-width: 1px;
}

.palette-display-item:checked {
    background-color: var(--unity-colors-highlight-background);
}

.palette-display-item:hover {
    border-width: 1px;
    border-color: white;
}

.palette-display-item Image {
    border-radius: 8px;
    width: 24px;
    height: 24px;
}

.palette-display-item > .unity-label {
    font-size: 11px;
    height: 14px;
    flex-grow: 1;
    white-space: normal;
    -unity-text-align: middle-left;
}