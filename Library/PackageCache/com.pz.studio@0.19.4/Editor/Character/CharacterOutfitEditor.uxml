<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="character-outfit-editor">
    <TwoPaneSplitView fixed-pane-index="1" fixed-pane-initial-dimension="480">
        <VisualElement name="_left">
            <VisualElement name="_top">
                <VisualElement name="_tabs">
                    <VisualElement name="_tabAll" class="tab">
                        <Label text="All"/>
                    </VisualElement>
                    <VisualElement name="_tabLiked" class="tab">
                        <Label text="Liked"/>
                    </VisualElement>
                    <VisualElement name="_tabProject" class="tab">
                        <Label text="Project"/>
                    </VisualElement>
                    <VisualElement name="_tabOutfit" class="tab">
                        <Label text="Outfit"/>
                    </VisualElement>
                    <editor:ToolbarSearchField name="_search"/>
                    <VisualElement name="_refresh"/>
                </VisualElement>                    
            </VisualElement>
    
            <VisualElement name="_content">
                <hr:UICollection editor="true">
                    <hr:UICollectionSection name="_contentSection">
                        <hr:UICollectionCells layout="grid" layout-spacing="2" fixed-height="true"/>
                    </hr:UICollectionSection>
                </hr:UICollection>
            </VisualElement>

            <VisualElement name="_bottom">
                <VisualElement name="_groups">
                </VisualElement>
            </VisualElement>
        </VisualElement>
        <VisualElement name="_right">
            <VisualElement name="_preview">

                <VisualElement name="_toolbar">
                    <VisualElement name="_toolbarLeft">
                        <editor:ToolbarButton name="_exportSvgButton">
                            <Label text="Export as SVG"/>
                        </editor:ToolbarButton>
                    </VisualElement>
                    <VisualElement name="_toolbarRight">
                    </VisualElement>
                </VisualElement>

                <Image name="_previewImage" scale-mode="scaleToFit"/>
                <hr:UIImage name="_emoteImage"/>
                <hr:UIImage name="_rotateImage"/>
                <hr:UIImage name="_skeletonImage"/>
                <Image name="_randomizeImage"/>
            </VisualElement>
        </VisualElement>
    </TwoPaneSplitView>
  </VisualElement>
</UXML>