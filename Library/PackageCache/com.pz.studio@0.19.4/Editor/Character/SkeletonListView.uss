.skeleton-display-list {
    flex-grow: 1;
}

.skeleton-display-list Toolbar {
    height: var(--unity-metrics-toolbar-height);
    flex-direction: row;
    border-bottom-width: .5px;
    border-top-width: .5px;
    border-color: var(--unity-colors-toolbar-border);
}

.skeleton-display-list ToolbarSearchField {
    flex-grow: 1;
    margin: auto 4px;
}

.skeleton-display-list UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.skeleton-display-list UICollectionSection {
    padding: 8px;
    padding-right: 16px;
}

.skeleton-display-list UICollection .unity-scroll-view {
    flex-grow: 1;
}

.skeleton-display-item {
    width: 72px;
    height: 72px;
    align-items: center;
    flex-shrink: 0;
    justify-content: center;
}

.skeleton-display-item:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.skeleton-display-item:checked {
    background-color: var(--unity-colors-highlight-background);
}

.skeleton-display-item UIImage {
    margin: 2px auto;
    width: 54px;
    height: 54px;
    flex-shrink: 0;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconSkeleton.png");
}

.skeleton-display-item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 10px;
    height: 14px;
    -unity-text-align: middle-center;
}