<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:studio="Highrise.Studio.Characters"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="character-palette-editor">
    <VisualElement name="_toolbar">
        <editor:ToolbarButton name="_saveButton">
            <Image/>
        </editor:ToolbarButton>
        <editor:ToolbarMenu name="_toolbarMenu">
        </editor:ToolbarMenu>
        <editor:ToolbarToggle name="_lockToggle" value="true">
            <Image/>
        </editor:ToolbarToggle>
        <editor:ToolbarToggle name="_sortToggle">
            <Image/>
        </editor:ToolbarToggle>
        <editor:ToolbarToggle name="_previewToggle">
            <Image/>
        </editor:ToolbarToggle>
    </VisualElement>
      <TwoPaneSplitView fixed-pane-index="1" fixed-pane-initial-dimension="300">
          <VisualElement name="_content">
              <VisualElement name="_empty">
                  <Button name="_importButton" text="Import CSV" />
              </VisualElement>
              <VisualElement name="_rows"/>
          </VisualElement>
          <TwoPaneSplitView fixed-pane-index="1" fixed-pane-initial-dimension="300" orientation="Vertical">
              <VisualElement name="_preview">
                  <VisualElement name="_previewOptionsToolbar">
                      <editor:ToolbarButton name="_rotateButton">
                          <Image/>
                      </editor:ToolbarButton>
                  </VisualElement>
                  <studio:CharacterOutfitView name="_preview"/>
              </VisualElement>
              <VisualElement name="_previewOptions">
                  <VisualElement name="_previewOptionsContent"/>
              </VisualElement>
          </TwoPaneSplitView>        
          
      </TwoPaneSplitView>
  </VisualElement>
  
</UXML>
