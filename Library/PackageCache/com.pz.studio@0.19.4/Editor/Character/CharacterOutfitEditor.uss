/*

    Outfit Asset Editor
  
*/

.character-outfit-editor {
    flex-grow: 1;
}

.character-outfit-editor #_bottom,
.character-outfit-editor #_top {
    flex-shrink: 0;
}

.character-outfit-editor #_content {
    background-color: var(--unity-colors-window-background);
    flex-grow: 1;
    overflow: hidden;
}

.character-outfit-editor #_content UICollection {
    flex-grow: 1;
}

.character-outfit-editor #_contentSection {
    padding: 8px;
}

.character-outfit-editor #_emoteImage {
    position: absolute;
    right: 16px;
    top: 30px;
    width: 48px;
    height: 48px;
    background-color: #333333;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/emotes_emotes.png");
    padding: 4px;
}

.character-outfit-editor #_rotateImage {
    position: absolute;
    right: 16px;
    top: 94px;
    width: 48px;
    height: 48px;
    background-color: #333333;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_rotate.png");
    padding: 4px;
}

.character-outfit-editor #_skeletonImage {
    position: absolute;
    left: 16px;
    top: 30px;
    width: 48px;
    height: 48px;
    background-color: #333333;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/IconSkeleton.png");
    padding: 4px;
}

.character-outfit-editor #_randomizeImage {
    position: absolute;
    right: 16px;
    bottom: 16px;
    width: 48px;
    height: 48px;
    background-color: #333333;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_random.png");
    padding: 4px;
}

/*

    Tabs
  
*/

.character-outfit-editor #_tabs {
    flex-direction: row;
    padding-left: 8px;
    background-color: var(--unity-colors-toolbar-background);
    flex-shrink: 0;
    border-color: var(--unity-colors-toolbar-border);
    border-bottom-width: 1px;
    height: 24px;
}

.character-outfit-editor #_tabs .tab {
    width: 60px;
    -unity-text-align: middle-center;
    height: 20px;
    margin-top: auto;
    margin-bottom: -2px;
    flex-shrink: 0;
}

.character-outfit-editor #_tabs .tab Label {
    flex-grow: 1;
    margin-top: -2px;
}

.character-outfit-editor .tab:checked {
    background-color: var(--unity-colors-tab-background-hover);
    border-color: var(--unity-colors-toolbar-border);
    border-width: 1px;
    border-bottom-width: 0;
    -unity-font-style: bold;
}

.character-outfit-editor #_search {
    max-width: 300px;
    min-width: 20px;
    flex-shrink: 1;
    margin-left: auto;
    margin-right: 8px;
    width: auto;
}

.character-outfit-editor #_refresh {
    height: 18px;
    width: 18px;
    background-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_swap_small.png");
    opacity: 0.5;
    margin-right: 8px;
    margin-top: auto;
    margin-bottom: auto;
    flex-shrink: 0;
}

.character-outfit-editor #_refresh:hover {
    opacity: .8;
}

/*

    Filters

*/

.character-outfit-editor #_groups {
    flex-shrink: 0;
    height: 32px;
    background-color: var(--unity-colors-toolbar-background);
    flex-direction: row;
    border-color: var(--unity-colors-toolbar-border);
    border-top-width: 1px;
}

.character-outfit-editor #_groups .filter {
    flex-grow: 1;
    opacity: 0.5;
    padding: 4px;
}

.character-outfit-editor #_groups .filter:checked {
    opacity: 1;
    border-radius: 4px;
    background-color: var(--unity-colors-box-background);
}


/*

    Preview

*/

.character-outfit-editor #_preview {
    flex-grow: 1;
    background-image: url("project://database/Packages/com.pz.studio/Editor/Character/CharacterGrid.png");
    background-repeat: repeat;
    background-size: 96px;
}

.character-outfit-editor #_previewImage {
    width: 100%;
    height: 100%;
}

/*

    Clothing

*/

.character-outfit-editor .clothing {
    width: 100px;
    height: 130px;
    flex-shrink: 0;
    font-size: 85%;
    -unity-text-align: middle-center;
}

.character-outfit-editor .clothing:checked {
    background-color: var(--unity-colors-highlight-background);
}

.character-outfit-editor .clothing UIImage {
    width: 94px;
    height: 94px;
    flex-shrink: 0;
    margin: auto;
    margin-top: 4px;
}

.character-outfit-editor .clothing Label {
    overflow: hidden;
    text-overflow: ellipsis;
    flex-grow: 1;
    padding-left: 4px;
    padding-right: 4px;
}

.character-outfit-editor .clothing .color {
    width: 18px;
    height: 18px;
    position: absolute;
    right: 3px;
    top: 3px;
    opacity: 1;
    display: none;
}

.character-outfit-editor .clothing:checked .color {
    display: flex;
}

.character-outfit-editor .clothing .likeButton {
    width: 18px;
    height: 18px;
    position: absolute;
    left: 3px;
    top: 3px;
    display: none;
    background-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_like_empty.png");
}

.character-outfit-editor .clothing .liked {
    background-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_like_full.png");
}

.character-outfit-editor .clothing:hover .likeButton {
    display: flex;
}

.character-outfit-editor .clothing.dragging {
    background-color: rgb(40,40,40);
    opacity: 0.75;
}

.character-outfit-editor .clothing .after
{
    display: none;
    position: absolute;
    right: -9px;
    top: -4px;
    bottom: -4px;
    width: 3px;
    background-color: white;
}

.character-outfit-editor .clothing.insert-after .after
{
    display: flex;
}

.character-outfit-editor .clothing .before
{
    display: none;
    position: absolute;
    left: -9px;
    top: -4px;
    bottom: -4px;
    width: 3px;
    background-color: white;
}

.character-outfit-editor .clothing.insert-before .before
{
    display: flex;
}

/*

    Toolbar
  
*/

.character-outfit-editor #_toolbar {
    height: var(--unity-metrics-toolbar-height);
    width: 100%;
    background-color: var(--unity-colors-toolbar-background);
    padding-left: 8px;
    padding-right: 8px;
    flex-direction: row;
}

#_toolbarLeft {
    flex-direction: row;
}

#_toolbarRight {
    position: absolute;
    right: 0px;
    height: 100%;
    flex-grow: 1;
    flex-direction: row;
}

#_exportSvgButton {
    -unity-text-align: middle-center;
    align-items: center;
    justify-content: center;
}
