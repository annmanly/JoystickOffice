<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement class="validator-window">

        <VisualElement name="_header">
            <Label name="_headerText"/>
            
            <Button name="_fixAllButton">
                <Label text="Fix"/>
            </Button>
            <DropdownField name="_fixOptionsDropDown" />
        </VisualElement>
    
        <hr:UICollection editor="true">
            <hr:UICollectionSection>
                <hr:UICollectionCells name="_resultCells" layout="stack"/>
            </hr:UICollectionSection>
        </hr:UICollection>
        
    </VisualElement>
</UXML>