
.validator-window {
    flex-grow: 1;
}

.validator-window #_header {
    flex-direction: row;
    border-color: var(--unity-colors-toolbar-border);
    border-bottom-width: 1px;
    padding-top: 4px;
    padding-bottom: 4px;
    flex-shrink: 0;
}

.validator-window #_headerText {
    padding-left: 8px;
    -unity-text-align: middle-left;
}

.validator-window #_fixAllButton {
    margin-left: auto;
    margin-right: 0px;
    width: 40px;
    height: 20px;
    flex-shrink: 0;
}

.validator-window #_fixOptionsDropDown {
    margin-left: 0px;
    margin-right: 7px;
    width: 60px;
    height: 20px;
    flex-shrink: 0;
}

.validator-window .collection {
    flex-grow: 1;
}

.validator-window .validator-result {
    flex-direction: row;
    align-items: center;
    max-height: 50px;
    padding: 2px 4px;
}

.validator-window #_icon {
    width: 20px;
    height: 20px;
    margin: 4px;
    flex-shrink: 0;
}

.validator-window .info {
    --unity-image: var(--unity-icons-console_entry_info);
}

.validator-window .warning {
    --unity-image: var(--unity-icons-console_entry_warn);
}

.validator-window .error {
    --unity-image: var(--unity-icons-console_entry_error);
}

.validator-window #_message {
    -unity-text-align: middle-left;
    margin-right: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    flex-shrink: 1;
}

.validator-window #_fixButton {
    width: 50px;
    height: 20px;
    flex-shrink: 0;
}