<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement class="localization-string-editor">
        <VisualElement name="_top">
            <Button name="_boldButton">
                <Label name="_boldText" text="&lt;b&gt;Bold&lt;/b&gt;"/>
            </Button>
            <Button name="_italicsButton">
                <Label name="_italicsText" text="&lt;i&gt;Italic&lt;/i&gt;"/>
            </Button>
            <Button name="_colorButton">
                <Label name="_colorText" text="Color"/>
                <editor:ColorField name="_colorField" show-eye-dropper="false" show-alpha="false"/>
            </Button>
        </VisualElement>
        
        <VisualElement name="_middle">
            <Label text="Key" />
            <TextField name="_keyField"/>
            <Label text="Text" />
            <TextField name="_textField" multiline="true"/>
        </VisualElement>
        
        <VisualElement name="_bottom">
            <Button name="_saveButton">
                <Label text="Save"/>
            </Button>
            <Button name="_cancelButton">
                <Label text="Cancel"/>
            </Button>
        </VisualElement>
        
    </VisualElement>
</UXML>