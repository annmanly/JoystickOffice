.localization-editor {
    flex-grow: 1;
}

.localization-editor #_top {
    flex-direction: row;
    border-color: var(--unity-colors-toolbar-border);
    border-bottom-width: 1px;
    padding-top: 4px;
    padding-bottom: 4px;
    flex-shrink: 0;
}

.localization-editor #_addButton {
    margin-left: auto;
}

.localization-editor #_addIcon {
    width: 15px;
    height: 15px;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/IconAdd.png");
}

.localization-editor #_removeIcon {
    width: 15px;
    height: 15px;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_trade_status_removed.png");
}

.localization-editor .unity-toolbar-search-field {
    margin-left: auto;
}

.localization-editor #_stringList {
    flex-grow: 1;
}

.localization-editor .unity-multi-column-view__row-container:hover {
    color: var(--unity-colors-default-text-hover);
    background-color: var(--unity-colors-highlight-background-hover);
}

.localization-editor .unity-multi-column-view__row-container:checked {
    background-color: var(--unity-colors-highlight-background);
    color: white;
}

.localization-editor .unity-multi-column-view__cell {
    padding-left: 6px;
    justify-content: center;
}

.localization-editor .unity-list-view__empty-label {
    display: none;
}

.localization-editor #_bottom {
    flex-direction: row;
    border-color: var(--unity-colors-toolbar-border);
    border-top-width: 1px;
    padding: 4px;
    flex-shrink: 0;
}