<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement class="localization-editor">
        <VisualElement name="_top">
            <editor:ToolbarSearchField name="_search"/>
        </VisualElement>
        
        <MultiColumnListView name="_stringList" show-alternating-row-backgrounds="ContentOnly">
            <Columns>
                <Column name="_key" title="Key" width="30%" />
                <Column name="_text" title="Text" width="70%" />
            </Columns>
        </MultiColumnListView>
        
        <VisualElement name="_bottom">
            <Button name="_addButton">
                <Image name="_addIcon"/>
            </Button>
            <Button name="_removeButton">
                <Image name="_removeIcon"/>
            </Button>
        </VisualElement>
    </VisualElement>
</UXML>