/*

    Built In Inspector
  
*/

.builtin-component-inspector {
    flex-grow: 1;
    margin-left: -14px;
    margin-right: -6px;
}

.builtin-component-inspector #_headerImage {
    flex-grow: 1;
    height: 200px;
    background-color: var(--unity-colors-tab-background-hover);
    border-bottom-width: 1px;
    border-top-width: 1px;
    border-color: black;
    justify-content: center;
}

.builtin-component-inspector #_header {
    flex-direction: row;
    padding: 8px;
    width: 100%;
}

.builtin-component-inspector #_headerRight {
    flex-grow: 1;
    flex-direction: row;
    height: 100%;
}

.builtin-component-inspector #_headerVertical {
    flex-direction: column;
    flex-grow: 1;
    height: 100%;
}

.builtin-component-inspector #_assetIcon {
    width: 64px;
    height: 64px;
    background-color: var(--unity-colors-tab-background-hover);
    margin-right: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.builtin-component-inspector #_assetName {
    font-size: 125%;
    -unity-font-style: bold;
}

.builtin-component-inspector #_assetDescription {
    margin-top: 8px;
    font-size: 13px;
    white-space: normal;
}

.builtin-component-inspector #_mainDisplay {
    flex-direction: column;
    padding: 8px;
    margin-top: 40px;
    align-items: center;

}

.builtin-component-inspector #_dragDisplay {
    background-color: var(--color-fishbase-eel-80);
    border-radius: 4px;
    padding: 8px;
    height: 100px;
    width: 100%;
    align-items: center;
    justify-content: center;
    flex-direction: row;
}

.builtin-component-inspector #_dragDisplay:hover {
    border-color: yellow;
    border-width: 1px;
}

.builtin-component-inspector #_dragAssetIcon {
    width: 70px;
    height: 70px;
    background-color: var(--unity-colors-tab-background-hover);
    margin-right: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.builtin-component-inspector #_addToSceneButton {
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 24px;
    font-size: 14px;
    height: 40px;
    width: 100%;
    border-radius: 6px;
    white-space: normal;
    -unity-text-align: middle-center;
    justify-content: center;
}

.builtin-component-inspector #_dragText {
    width: 140px;
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 8px;
    font-size: 14px;
    white-space: normal;
    -unity-text-align: middle-center;
}

.builtin-component-inspector #_addSceneLabel {
    margin-left: 8px;
    margin-right: 8px;
    font-size: 14px;
    white-space: normal;
    -unity-text-align: middle-center;
}

.builtin-component-inspector #_orText {
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 8px;
    margin-bottom: 8px;
    font-size: 16px;
    white-space: normal;
    -unity-font-style:  bold
}