<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="asset-store-upload">
    <VisualElement class="select-asset">
      <Label text="Select target Store Asset" class="title"/>
      <VisualElement name="_createAssetInfo" class="create-asset-info">
        <VisualElement class="create-asset-info-row">
          <Label text="Name"/>
          <TextField name="_createAssetName"/>  
        </VisualElement>
        <VisualElement class="create-asset-info-row">
          <Label text="Category"/>
          <DropdownField name="_createAssetCategory" />
        </VisualElement>
      </VisualElement>
      <VisualElement name="_updateAssetInfo" class="update-asset-info">
        <VisualElement class="create-asset-info-row">
          <Label text="Name"/>
          <Label name="_existingAssetName"/>  
        </VisualElement>
        <VisualElement class="create-asset-info-row">
          <Label text="Update Images"/>
          <Toggle name="_updateAssetImages"/>
        </VisualElement>
      </VisualElement>
      <VisualElement class="create-asset-info-row">
        <Label text="Is Bundle" tooltip="If true, double clicking this asset in the catalog will open a secondary window to allow drag and drop of all of the prefabs in the asset."/>
        <Toggle name="_isBundle"/>
      </VisualElement>
      
    </VisualElement>

    <VisualElement class="upload-options">
        <Button name="_createReadmeButton" text="Create README file"/>
        <Button name="_selectAssetButton" text="Select Asset..."/>
    </VisualElement>
    
    <VisualElement class="included-files">
      <MultiColumnTreeView name="_treeView" show-alternating-row-backgrounds="ContentOnly" show-border="true">
        <Columns>
          <Column name="name" title="Items To Upload" width="100%" />
        </Columns>
      </MultiColumnTreeView>
      <Label text="Optionally, you can drag and drop additional assets or a README file if needed" class="description"/>
    </VisualElement>
    
    <VisualElement class="footer">
      <Button name="_uploadButton" text="Upload"/>
    </VisualElement>
  </VisualElement>
</UXML>