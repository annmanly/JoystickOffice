.asset-selector {
    width: 100%;
    flex-grow: 1;
}

.asset-selector #_search {
    margin: 4px;
    width: auto;
}

.asset-selector #_listView
{
    flex-grow: 1;
    background-color: rgba(0,0,0,0.1);
    margin-bottom: 4px;
}

.asset-selector .bottom {
    flex-direction: row;
    margin-left: auto;
    margin-bottom: 4px;
}

.asset-selector .name-cell {
    -unity-text-align: middle-left;
    height: 22px;
    padding-left: 8px;
}

.asset-selector .id-cell {
    -unity-text-align: middle-left;
    height: 22px;
}
