<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="store-asset-inspector">
    <VisualElement name="_header">
        <Image name="_assetIcon"/>
        <VisualElement name="_headerRight">
            <Label name="_assetName" text="Name"/>
            <Button name="_likeButton">
                <Image name="_likeImage"/>
            </Button>
            <Button name="_installButton">
                <Label name="_buyButtonLabel" text="Buy for "/>
                <Image name="_goldIcon"/>
                <Label name="_buttonName" text="Install"/>
            </Button>
            <VisualElement name="_installed">
                <Image name="_installedIcon"/>
                <Label text="Installed"/>
            </VisualElement>
            <ProgressBar name="_progressBar" />
        </VisualElement>
    </VisualElement>
    
    <Image name="_headerImage">
        <Image name="_previousImage"/>
        <Image name="_nextImage"/>
    </Image>
    <Label name="_assetDescription" text="Description"/>
    <VisualElement name="_showFolderDisplay">
        <Button name="_showFolderButton">
            <Image name="_showFolderIcon"/>
            <Label name="_showFolderLabel" text="Show Asset"/>
        </Button>
    </VisualElement>
    <VisualElement name="_openReadmeDisplay">
        <Button name="_openReadmeButton">
            <Image name="_readmeIcon"/>
            <Label name="_openReadmeLabel" text="Open README"/>
        </Button>
    </VisualElement>
    <VisualElement name="_interactionDisplay">
        <Button name="_addToSceneButton">
            <Image name="_addToSceneIcon"/>
            <Label name="_addSceneLabel" text="Add To Scene As Prefab"/>
        </Button>
        <VisualElement name="_dragDisplay">
            <Image name="_dragAssetIcon"/>
            <Label name="_dragText" picking-mode="ignore"/>
        </VisualElement>  
    </VisualElement>  

    <VisualElement name="_bundleDisplay">
        <Button name="_openBundleButton">
            <Image name="_openBundleIcon"/>
            <Label name="_openBundleText" text="Open Pack"/>
        </Button>
    </VisualElement>
  </VisualElement>
</UXML>
