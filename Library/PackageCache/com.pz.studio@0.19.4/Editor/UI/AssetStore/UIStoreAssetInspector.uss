/*

    Asset Store
  
*/

.store-asset-inspector {
    flex-grow: 1;
    margin-left: -14px;
    margin-right: -6px;
}

.store-asset-inspector #_headerImage {
    flex-grow: 1;
    height: 200px;
    background-color: var(--unity-colors-tab-background-hover);
    border-bottom-width: 1px;
    border-top-width: 1px;
    border-color: black;
    justify-content: center;
}

.store-asset-inspector #_previousImage {
    width: 40px;
    height: 40px;
    left: 8px;
    position: absolute;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_back.png");
}

.store-asset-inspector #_nextImage {
    width: 40px;
    height: 40px;
    right: 8px;
    position: absolute;
    scale: -1 1 1;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_back.png");
}

.store-asset-inspector #_installButton {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 140px;
    margin-top: auto;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 110%;
    padding: 2px 2px;
}

.like-button {
    position: absolute;
    left: 0px;
    bottom: 0;
    width: 40px;
    height: 40px;
}

.like-button-empty {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_like_empty.png");
}

.like-button-full {
	--unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_like_full.png");
}

.store-asset-inspector #_goldIcon {
    width:20px;
    height:20px;
    padding: 2px;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/gold_asset_store.png")
}

.store-asset-inspector #_installed {
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 110%;
    flex-direction: row;
    margin-right: 6px;
    color: greenyellow;
}

.store-asset-inspector #_installedIcon {
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/icon_save.png");
    --unity-image-tint-color: greenyellow;
    width: 16px;
    height: 16px;
    margin-right: 6px;
}

.store-asset-inspector #_progressBar {
    height: 18px;
    width: 180px;
    position: absolute;
    right: 0;
    bottom: 2px;
}

.store-asset-inspector #_progressBar .unity-progress-bar__background {
    border-radius: 8px;
}

.store-asset-inspector #_progressBar .unity-progress-bar__progress {
    border-radius: 6px;
    background-color: greenyellow;
}

.store-asset-inspector #_header {
    flex-direction: row;
    padding: 8px;
    width: 100%;
}

.store-asset-inspector #_headerRight {
    flex-grow: 1;
    flex-direction: row;
    height: 100%;
}

.store-asset-inspector #_assetIcon {
    width: 64px;
    height: 64px;
    background-color: var(--unity-colors-tab-background-hover);
    margin-right: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.store-asset-inspector #_assetName {
    font-size: 125%;
    -unity-font-style: bold;
}

.store-asset-inspector #_assetDescription {
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 8px;
    font-size: 100%;
    white-space: normal;
}

    
.store-asset-inspector #_interactionDisplay, #_showFolderDisplay, #_openReadmeDisplay, #_bundleDisplay {
    align-items: center;
    align-items: center;
}

.store-asset-inspector #_dragDisplay {
    background-color: var(--color-fishbase-eel-80);
    border-radius: 4px;
    padding: 8px;
    height: 100px;
    width: 90%;
    margin-top: 16px;
    align-items: center;
    justify-content: center;
    flex-direction: row;
}

.store-asset-inspector #_dragDisplay:hover {
    border-color: yellow;
    border-width: 1px;
}

.store-asset-inspector #_dragAssetIcon {
    width: 70px;
    height: 70px;
    background-color: var(--unity-colors-tab-background-hover);
    margin-right: 8px;
    border-radius: 4px;
    overflow: hidden;
}

.store-asset-inspector #_addToSceneButton, #_showFolderButton, #_openReadmeButton, #_openBundleButton {
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 24px;
    font-size: 14px;
    height: 40px;
    width: 90%;
    border-radius: 6px;
    white-space: normal;
    -unity-text-align: middle-center;
    justify-content: center;
    flex-direction: row;
    align-items: center;
}

.store-asset-inspector #_dragText {
    width: 140px;
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 8px;
    font-size: 14px;
    white-space: normal;
    -unity-text-align: middle-center;
}

.store-asset-inspector #_addSceneLabel, #_showFolderLabel, #_openReadmeLabel {
    margin-left: 8px;
    margin-right: 8px;
    font-size: 14px;
    white-space: normal;
    -unity-text-align: middle-center;
}

.store-asset-inspector #_openBundleText {
    margin-left: 8px;
    margin-right: 8px;
    font-size: 14px;
    white-space: normal;
    -unity-text-align: middle-center;
}

.store-asset-inspector #_readmeIcon {
    width: 24px;
    height: 24px;
    --unity-image: resource("d_TextScriptImporter Icon");
}

.store-asset-inspector #_openBundleIcon {
    width: 24px;
    height: 24px;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/StoreAssetBundleIcon.png");
}

.store-asset-inspector #_showFolderIcon {
    width: 24px;
    height: 24px;
    --unity-image: resource("Folder");
}

.store-asset-inspector #_addToSceneIcon {
    width: 24px;
    height: 24px;
    --unity-image: resource("Prefab Icon");
}