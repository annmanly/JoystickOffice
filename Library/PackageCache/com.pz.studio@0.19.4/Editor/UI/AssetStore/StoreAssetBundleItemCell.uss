.asset-store-bundle-item {
    flex-grow: 1;
    width: 100px;
    height: 125px;
    -unity-text-align: middle-center;
    background-color: #252629;
    padding: 5px;
    border-radius: 8px;
}

.asset-store-bundle-item > .unity-image {
    width: 100%;
    height: 100px;
    margin-left: auto;
    margin-right: auto;
}

.asset-store-bundle-item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
}

.asset-store-bundle-item:checked > .unity-label {
    background-color: var(--unity-colors-highlight-background);
    border-radius: 3px;
    color: white;
}