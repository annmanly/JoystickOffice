.diff-element {
    position: relative;
    width: 160px;
    height: 22px;
}

.diff-element > .diff-background {
    top:2px;
}

.diff-element > .diff-background > .diff-background-left {
    height: 1px;
    background-color: #00ff00;
}

.diff-element > .diff-background > .diff-background-right {
    height:1px;
    left: 80px;
    background-color: #ff0000;
}

.diff-element .diff-label {
    -unity-text-align: middle-center;
    
}