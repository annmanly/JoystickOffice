<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrb="Highrise.Builder"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="create-portal-login-2fa">
    <VisualElement name="_header">
      <VisualElement name="_title">
        <Label name="_titleLabel" text="Enter 2FA Code" />
        <Label name="_descriptionLabel" text="Enter the 6-digit code generated by your Authenticator app so we can confirm it's you." />
      </VisualElement>
    </VisualElement>

    <VisualElement name="_controls">
      <TextField name="_2faCodeField" />
      <Label name="_errorMessageLabel" text="" />
    </VisualElement>

    <VisualElement name="_buttons">
      <Button name="_verifyButton" class="button-primary">
        <Label name="_verifyButtonLabel" text="Verify" />
      </Button>
    </VisualElement>
  </VisualElement>
</UXML>

