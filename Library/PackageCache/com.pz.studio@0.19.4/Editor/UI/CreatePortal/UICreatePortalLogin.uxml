<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

  <VisualElement class="create-portal-login">
    <VisualElement name="_header">
      <Image name="_logo"/>
      <VisualElement name="_title">
        <Label name="_titleLabel" text="Highrise Studio" />
        <Label name="_descriptionLabel" text="Log in to start creating and managing your Studio projects." />
      </VisualElement>
    </VisualElement>

    <VisualElement name="_controls">
      <TextField name="_usernameField" placeholder="username" clear="true"/>
      <TextField name="_passwordField" placeholder="password" password="true" clear="true"/>
      <Label name="_errorMessageLabel" text="" />
      <Button name="_forgotPasswordButton">
        <Label name="_forgotPasswordLabel" text="Forgot your password?"/>
      </Button>
    </VisualElement>

    <VisualElement name="_buttons">
      <Button class="button button-primary" name="_loginButton">
        <Label text="Log in"/>
      </Button>
      <Button class="button" name="_createAccountButton">
        <Label text="Create Account"/>
      </Button>
    </VisualElement>
  </VisualElement>
</UXML>