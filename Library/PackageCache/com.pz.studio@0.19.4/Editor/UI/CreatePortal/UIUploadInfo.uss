
/*

    Info

*/

.upload-info {
    flex-grow: 1;
    background-color: var(--color-fishbase-tuna);
    margin-left: 8px;
    margin-right: 8px;
}

.upload-info #summary
{
    display: none;
}

.upload-info .file-cell
{
    flex-direction: row;
    height: 100%;
}

.upload-info .file-cell > Image
{
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.upload-info .folder-cell {
    opacity: 0.5;
}

.upload-info .file-cell > Label
{
    -unity-text-align: middle-left;   
    height: 100%;
}

.upload-info .top {
    height: 64px;
    flex-shrink: 0;
}

.upload-info #_assetPreview {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
    margin-right: 8px;
    background-color: rgba(0,0,0,0.1);
    border-radius: 8px;
    padding: 4px;
}