.create-portal-login {
    align-items: center;
}

.create-portal-login #_header {
    background-color: var(--color-fishbase-tuna);
    padding: 32px 56px 24px 56px;
    width: 100%;
    height: 128px;
    flex-direction: row;
}

.create-portal-login #_controls {
    background-color: var(--color-fishbase-tuna);
    width: 100%;
    height: 136px;
    padding: 0 56px 16px 56px;
}

.create-portal-login #_buttons {
    background-color: var(--color-fishbase-eel);
    padding: 16px 56px 32px 56px;
    width: 100%;
    height: 88px;
    flex-direction: column;
}

.create-portal-login #_title {
    height: 100%;
    flex: 1;
    justify-content: space-between;
}

.create-portal-login #_loginButton, .create-portal-login #_createAccountButton {
    border-radius: 4px;
    height: 28px;
    align-items: center;
    -unity-font-style: bold;
}

.create-portal-login #_loginButton {
}

.create-portal-login #_passwordField {
    margin-top: 8px;
}

.create-portal-login TextField {
    height: 32px;
}

.create-portal-login TextField TextInput, .create-portal-login TextField TextElement {
    background-color: var(--color-fishbase-blackfish);
    padding-left: 4px;
}

.create-portal-login TextField Label {
    min-width: 70px;
    align-self: center;
}

.create-portal-login #_createAccountButton {
    margin-top: 8px;
    background-color: transparent;
    border-color: transparent;
    color: var(--color-fishbase-mackerel);
}

.create-portal-login #_errorMessageLabel {
    font-size: 12px;
    color: var(--color-basic-alert);
    margin-top: 12px;
}

.create-portal-login #_forgotPasswordButton {
    margin: 8px auto 0 0;
    color: var(--color-fishbase-anchovy);
    background-color: transparent;
    border-width: 0;
    border-bottom-width: 1px;
    border-color: var(--color-fishbase-anchovy);
    padding: 0;
}

.create-portal-login #_forgotPasswordLabel {
    margin-bottom: -1px;
}

.create-portal-login #_logo {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/ColoredLogo.png");
    width: 72px;
    height: 72px;

    flex: 0 72px;

    padding: 0;
    margin: 0 20px 0 0;
}

.create-portal-login #_titleLabel {
    color: var(--color-fishbase-whitefish);
    font-size: 22px;
    -unity-font-style: bold;
    margin-top: auto;
}

.create-portal-login #_descriptionLabel {
    margin-bottom: auto;
    font-size: 12px;
    color: var(--color-fishbase-bonito);
    white-space: normal;
}
