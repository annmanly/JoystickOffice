.world-upload {
    flex-grow: 1;
}

.world-upload #_uploadHelp {
    padding: 8px;
    margin: 8px;
    flex-shrink: 0;
    min-height: 0;
}

.world-upload .bottom {
    flex-direction: row;
    flex-shrink: 0;
    background-color: rgba(0,0,0,0.1);
}

.world-upload .top {
    margin: 8px;
    margin-bottom: 8px;
    height: 96px;
    flex-shrink: 0;
    flex-direction: row;
}

.world-upload .top .left {
    flex-shrink: 0;
}

.world-upload .top .right {
    margin-top: auto;
    margin-bottom: auto;
}

.world-upload .top .buttons {
    flex-shrink: 0;
    margin-left: auto;
    margin-top: auto;
}

.world-upload .row {
    flex-direction: row;
    height: 24px;
    -unity-text-align: middle-left;
}

.world-upload .row-name {
    width: 90px;
    height: 100%;
    -unity-font-style: bold;
}

.world-upload .row-value {
    height: 100%;
}

.world-upload .row Toggle {
    padding: 0;
    margin: 0;
}

.world-upload #_defaultWorldIcon {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/IconWorld.png");
    width: 96px;
    height: 96px;
    flex-shrink: 0;
    margin-right: 8px;
    background-color: rgba(0,0,0,0.1);
    padding: 4px;
}

.world-upload #_worldIcon {
    flex-grow:1;
}

.world-upload #_worldNameEntry {
    display: none;
    width: 180px;
    margin-left: 0px;
}

.world-upload #_gameJamRoot {
    display: none;
    flex-direction: row;
    padding-left: 8px;
    padding-right: 8px;
    padding-bottom: 8px;
}

.world-upload #_gameJamText {
    -unity-text-align: middle-left;
    white-space: normal;
    flex-shrink: 1;
}

.world-upload #_uploadButton {
    margin-right: 8px;
    margin-top: 8px;
    margin-bottom: 8px;
    margin-left: auto;
}

.world-upload #_worldSettingsButton {
    margin-left: 8px;
    margin-top: 8px;
    margin-bottom: 8px;
}

.world-upload #_uploadInfo {
    flex-grow: 1;
}

.world-upload #_loginButton {
    margin-top: auto;
    margin-bottom: auto;
    margin-left: auto;
    margin-right: 8px;
}

.world-upload #_uploadHelp {
    height: auto;
}