.collection .scroll-view,
.collection .unity-scroll-view
{
    flex-grow: 1;
}

/*

    Loading Indicator

*/

.loading-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -24px;
    margin-top: -24px;
    width: 48px;
    height: 48px;
    flex-grow: 0;
    flex-shrink: 1;
    opacity: 0.3;
    background-image: var(--image-loading-indicator);
    -unity-background-image-tint-color: var(--color-fishbase-mackerel);
}

.loading-indicator-small .loading-indicator, 
.loading-indicator-small.loading-indicator {
    margin-left: -12px;
    margin-top: -12px;
    width: 24px;
    height: 24px;
}

.loading-indicator.intense {
    opacity: 1;
}

UIImage > .loading-indicator {
    opacity: 0;
}

