    --color-accents-primary-light: #7D69F6;
    --color-accents-primary-selection: #3F35AD;
}

/***** Button *****/

.button {
    border-radius: 4px;
    padding-left: 24px;
    padding-right: 24px;
    height: 44px;
    align-items: center;
    justify-content: center;
}

.button:hover {
    border-radius: 4px;
}

/***** Primary button *****/

.button-primary:hover {
    border-radius: 4px;
}

.button-primary,
.button-primary:active,
.button-primary:hover,
.button-primary:hover:focus,
.button-primary:focus {
    background-color: var(--color-accents-primary);
    border-color: var(--color-accents-primary);
    color: var(--color-fishbase-whitefish);
}

.button-primary Image
{
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.button-primary Image
{
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}


/***** Outline button *****/

.button-outline,
.button-outline:active,
.button-outline:hover,
.button-outline:hover:focus,
.button-outline:focus {
    background-color: var(--color-fishbase-blackfish);
    border-color: var(--color-fishbase-anchovy);
    border-width: 1px;
    color: var(--color-fishbase-whitefish);
}

.button-secondary Image
{
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}


