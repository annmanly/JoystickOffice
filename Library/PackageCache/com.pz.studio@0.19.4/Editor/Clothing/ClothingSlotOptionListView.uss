.clothing-slot-options-list-view {
    flex-grow: 1;
}

.clothing-slot-options-list-view Toolbar {
    height: var(--unity-metrics-toolbar-height);
    flex-direction: row;
}

.clothing-slot-options-list-view ToolbarSearchField {
    margin: auto 4px;
    flex-grow: 1;
    width: 0;
}

.clothing-slot-options-list-view UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.clothing-slot-options-list-view UICollectionSection {
}

.clothing-slot-options-list-view UICollection .unity-scroll-view {
    flex-grow: 1;
}

.clothing-slot-option-list-view--item {
    height: 30px;
    width: 100%;
    align-items: center;
    flex-direction: row;
    padding-left: 6px;
}

.clothing-slot-option-list-view--item:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.clothing-slot-option-list-view--item .slot-image {
    overflow: hidden;
    width: 26px;
    height: 26px;
    margin-left: 2px;
    flex-shrink: 0;
}

.slot-visibility {
    width: 14px;
    height: 14px;
    margin-right: 2px;
    flex-shrink: 0;
}

.slot-visible {
    --unity-image: resource("d_VisibilityOn")
}

.slot-invisible {
    --unity-image: resource("d_VisibilityOff")
}

.slot-disabled {
    --unity-image: resource("Warning")
}

.slot-disabled {
    --unity-image: resource("Warning")
}

.clothing-slot-option-list-view--item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 12px;
    height: 14px;
    -unity-text-align: middle-center;
    margin-left: 4px;
    flex-shrink: 1;
}

.clothing-slot-options-list-view .unity-toggle__input {
    flex-grow: 0;
    margin-right: 4px;
    margin-left: 2px;
}

.clothing-slot-options-list-view Label {
    margin-right: auto;
    margin-top: auto;
    margin-bottom: auto;
}

.clothing-slot-options-list-view Toggle {
    margin-top: 3px;
    -unity-text-align: middle-left;
    flex-direction: row-reverse;
}

.clothing-slot-options-list-view UIImage.none-icon {
    background-color: rgba(0,0,0,0.06);
}
