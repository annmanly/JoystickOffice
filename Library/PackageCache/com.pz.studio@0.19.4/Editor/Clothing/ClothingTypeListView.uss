/*

    ClothingTypeListview

*/

.clothingtype-list-view {
    flex-grow: 1;
}

.clothingtype-list-view GroupBox {
    padding: 0;
    margin: 0;
    height: 100%;
}

.clothingtype-list-view UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.clothingtype-list-view UICollectionSection {
    padding: 4px;
}

.clothingtype-list-view UICollection .unity-scroll-view {
    flex-grow: 1;
}

.clothingtype-list-view--item {
    height: 24px;
    width: 100%;
    border-radius: 1px;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    border-width: 1px;
}

.clothingtype-list-view--item:hover {
}

.clothingtype-list-view--item .clothingtype-image {
    border-radius: 8px;
    overflow: hidden;
    width: 40px;
    height: 40px;
    margin-left: 8px;
}

.clothingtype-disabled {
    color: var(--unity-colors-toggle-text-disabled);
}

.clothingtype-toggle-disabled{
    background-color: var(--unity-colors-toggle_checkmark-background-disabled);
}

.clothingtype-checkbox {
    width: 16px;
    height: 16px;
    margin-right: 4px;
}

.clothingtype-enabled {
    --unity-image: resource("d_Toggle Icon")
}

.clothingtype-disabled {
}

.clothingtype-list-view--item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 12px;
    height: 14px;
    -unity-text-align: middle-center;
}

.clothingtype-list-view--item Toggle,
.clothingtype-list-view--item RadioButton {
    flex-direction: row-reverse;
}

.clothingtype-list-view--item Toggle Label,
.clothingtype-list-view--item RadioButton Label {
    width: auto;
    min-width: 0;
}

.clothingtype-list-view--item .unity-toggle__input,
.clothingtype-list-view--item .unity-radio-button__input {
    flex-grow: 0;
    margin-right: 4px;
}

.color-inclusive-icon {
    background-image: url("/Packages/com.pz.studio/Assets/Sprites/Icons/icon_concepts.png");
    width: 12px;
    height: 12px;
    margin-left: auto;
    -unity-background-image-tint-color: rgba(255,255,255,0.5);
}
