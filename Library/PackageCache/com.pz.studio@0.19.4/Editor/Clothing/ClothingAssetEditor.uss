/*

    Clothing Asset Editor
  
*/

.clothing-asset-editor {
    flex-grow: 1;
}

.clothing-asset-editor #_centerDisplay {
    background-color: var(--unity-colors-window-background);
    flex-grow: 1;
    width: 100%;
    height: 100%;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: row;
    border-top-width: 1px;
    border-top-color: var(--unity-colors-toolbar-border);
}

.clothing-asset-editor #_previewOptionsToolbar {
    background-color: var(--unity-colors-tab-background-checked);
    border-bottom-width: .5px;
    border-bottom-color: var(--unity-colors-toolbar-border);
    flex-direction: row;
    flex-shrink: 0;
    width: 100%;
    height: var(--unity-metrics-toolbar-height);
    display: flex;
}

#_left {
    flex-shrink: 1;
    height: 100%;
    flex-direction: row;
}

#_right {
    flex-grow: 1;
}

.clothing-asset-editor #_palettesContainer {
    width: 110px;
    flex-grow: 1;
}

#_customPaletteDisplayContainer{
    width: 200px;
    height: 100%;
}

#_clothingTypeContainer{
    width: 110px;
    height: 100%;
}

.clothing-asset-editor #_colorsContainer {
    flex-grow: 1;
    flex-direction: row;
}

/*

    Toolbar
  
*/

.clothing-asset-editor #_toolbar {
    height: var(--unity-metrics-toolbar-height);
    width: 100%;
    background-color: var(--unity-colors-toolbar-background);
    padding-left: 8px;
    padding-right: 8px;
    flex-direction: row;
}

#_toolbarLeft {
    flex-direction: row;
}

#_toolbarRight {
    position: absolute;
    right: 0;
    height: 100%;
    flex-grow: 1;
    flex-direction: row;
}

#_saveButton Image{
    width: 16px;
    height: 16px;
    --unity-image-tint-color: rgba(255,255,255,0.7);
    margin-right: 0;
}

#_uploadButton {
    flex-direction: row;
    -unity-text-align: middle-center;
    align-items: center;
}

#_uploadButton:hover {
    border-radius: 0px;
}

#_uploadButton Image {
    width: 16px;
    height: 16px;
}

#_exportMenu {
    margin-right: 4px;
}

/*

    Preview

*/

#_preview, #_previewContainer {
    flex-grow: 1;
}

#_previewOptions,
#_previewOptions TabbedView {
    flex-grow: 1;
}

#_previewOptions .unity-tabbed-view__content-container {
    padding: 0;
}

.clothing-asset-editor #_outfitView {
    flex-grow: 1;
}

#_rotateButton {
    width: 26px;
    padding: 0;
}

#_rotateButton Image {
    width: 16px;
    height: 16px;
    margin: auto;
    --unity-image-tint-color: rgba(255,255,255,0.7);
   --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconRotate.png");
}

#_refreshButton {
    width: 26px;
    padding: 0;
}

#_refreshButton Image {
    width: 16px;
    height: 16px;
    margin: auto;
    --unity-image-tint-color: rgba(255,255,255,0.7);
   --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_swap_small.png");
}

.clothing-asset-editor #_slotOptionsContainer .column-title,
.clothing-asset-editor #_clothingTypeContainer .column-title,
.clothing-asset-editor ClothingSlotOptionListView,
.clothing-asset-editor ClothingTypeListView {
    border-right-width: 1px;
    border-right-color: var(--unity-colors-toolbar-border);
}

.clothing-asset-editor .column-title {
    height: 20px;
    background-color: var(--unity-colors-box-background);
    flex-shrink: 0;
    justify-content: center;
    -unity-font-style: bold;
    padding-left: 5px;
}

.clothing-asset-editor #_slotOptionsContainer {
    flex-direction: row;
}

.clothing-asset-editor .slot-options {
    flex-grow: 1;
    width: 180px;
}

.clothing-asset-editor .colors {
    width: 66px;
}


.clothing-asset-editor .used {
    background-color: red;
}

#_openExternalButton Image {
    width: 14px;
    height: 14px;
    margin: auto;
    --unity-image-tint-color: rgba(255,255,255,0.7);
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconExternalEditor.png");
}

#_showAllColors {
    margin-right: 16px;
}

#_showAllColors Image {
    width: 14px;
    height: 14px;
    margin: auto;
    --unity-image-tint-color: rgba(255,255,255,0.7);
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconCharacterPalette.png");
}

#_showAllColors:checked {
    background-color: var(--unity-colors-app_toolbar_button-background-checked);
}