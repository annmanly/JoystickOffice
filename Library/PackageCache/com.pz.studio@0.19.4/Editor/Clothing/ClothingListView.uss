.clothing-list-view {
    flex-grow: 1;
}

.clothing-list-view Toolbar {
    height: var(--unity-metrics-toolbar-height);
    flex-direction: row;
    border-bottom-width: .5px;
    border-top-width: .5px;
    border-color: var(--unity-colors-toolbar-border);
}

.clothing-list-view ToolbarSearchField {
    flex-grow: 1;
    margin: auto 4px;
}

.clothing-list-view UICollection {
    flex-grow: 1;
    background-color: var(--unity-colors-window-background);
}

.clothing-list-view UICollectionSection {
    padding: 8px;
    padding-right: 16px;
}

.clothing-list-view UICollection .unity-scroll-view {
    flex-grow: 1;
}

.title-bar {
    height: 20px;
    flex-shrink: 1;
    justify-content: center;
    background-color: var(--unity-colors-box-background);
}

.title {
    font-size: 14px;
    margin-left: 8px;
}

.clothing-display-item {
    height: 72px;
    width: 72px;
    align-items: center;
    flex-shrink: 0;
    justify-content: center;
    border-width: 1px;
}

.large-icons .clothing-display-item {
    width: 144px;
    height: 144px;
}

.clothing-display-item:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.clothing-display-item:checked {
    background-color: var(--unity-colors-highlight-background);
}

.clothing-display-item UIImage {
    margin: 2px auto;
    width: 54px;
    height: 54px;
    flex-shrink: 0;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/CharacterClothing.png");
}

.large-icons .clothing-display-item UIImage {
    width: 108px;
    height: 108px;
}

.clothing-display-item > .unity-label {
    font-size: 11px;
    height: 14px;
    flex-grow: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -unity-text-align: middle-center;
}

.clothing-display-item UIImage.none-icon {
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconHidden.png");
    --unity-image-tint-color: rgba(255,255,255,0.5);
    padding: 20px;
}
