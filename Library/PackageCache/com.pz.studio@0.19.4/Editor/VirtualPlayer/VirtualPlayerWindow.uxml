<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement name="virtual-player" class="virtual-player">
        <VisualElement name="_viewContainer">
            <VisualElement name="_transformContainer">
                <Image name="_view" /> 
                <Image name="_primaryTouchIcon" picking-mode="Ignore"/>   
                <Image name="_secondaryTouchIcon"/>
            </VisualElement>
        </VisualElement> 
        <VisualElement name="_toolbar">
            <VisualElement class="left-group">
                <Button name="_autoConnect" text="Auto Connect"/>
                <Button name="_connect" text="Connect"/>
                <Button name="_disconnect" text="Disconnect"/>
                <Button name="_simulateMultiTouch" text="Simulate Multi-Touch" />
                <Button name="_triggerCameraReset" text="Reset Camera" />
            </VisualElement>
            <VisualElement class="right-group">
                <Button name="_editProfile" text="Edit Profile" />
                <editor:ToolbarMenu name="_latency"/>
            </VisualElement>
        </VisualElement>
    </VisualElement>
</UXML>
