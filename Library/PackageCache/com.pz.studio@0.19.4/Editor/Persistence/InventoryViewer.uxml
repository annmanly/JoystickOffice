<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement class="inventory-viewer">
        <TwoPaneSplitView fixed-pane-initial-dimension="300">
            <VisualElement name="_left">
                <VisualElement name="_topLeft">
                    <Button name="_refreshButton">
                        <Image name="_refreshIcon"/>
                        <Label text="Refresh"/>
                    </Button>
                    <DropdownField name="_holderSortingDropdown"/>
                </VisualElement>
            
                <hr:UICollection editor="true">
                    <hr:UICollectionSection>
                        <hr:UICollectionCells name="_holderCells" layout="stack"/>
                    </hr:UICollectionSection>
                </hr:UICollection>
                
                <VisualElement name="_bottomLeft">
                    <editor:ToolbarSearchField name="_holderSearch"/>
                </VisualElement>
                
            </VisualElement>
            <VisualElement name="_right">
                <VisualElement name="_topRight">
                    <Button name="_addButton" text="Add"/> 
                    <Button name="_editButton" text="Edit"/> 
                    <Button name="_deleteButton" text="Delete"/> 
                </VisualElement>
                
                <MultiColumnListView name="_itemList" fixed-item-height="20">
                    <Columns>
                        <Column name="_id" title="Id" width="40%" />
                        <Column name="_totalAmount" title="Amount" width="15%" />
                        <Column name="_amountAvailable" title="Available" width="15%" />
                        <Column name="_creationTime" title="Created At" width="30%" />
                    </Columns>
                </MultiColumnListView>
                
                <VisualElement name="_bottomRight">
                    <editor:ToolbarSearchField name="_itemSearch"/>
                </VisualElement>
            </VisualElement>
        </TwoPaneSplitView>
    </VisualElement>
</UXML>