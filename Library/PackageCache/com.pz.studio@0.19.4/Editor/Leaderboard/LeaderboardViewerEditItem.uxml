<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement class="leaderboard-viewer-edit-item">
        <VisualElement name="_add">
            <Label text="Leaderboard Id" />
            <TextField name="_leaderboardId"/>
            
            <Label text="Entry Id" />
            <TextField name="_entryId"/>
            
            <Label text="Name" />
            <TextField name="_name"/>
        </VisualElement>
        
        <VisualElement name="_edit"/>

        <Label text="Score" />
        <FloatField name="_scoreField"/>
        
        <VisualElement name="_buttons">
            <Button name="_saveButton">
                <Label name="_saveButtonText" />
            </Button>
            <Button name="_cancelButton">
                <Label text="Cancel"/>
            </Button>
        </VisualElement>
        
    </VisualElement>
</UXML>