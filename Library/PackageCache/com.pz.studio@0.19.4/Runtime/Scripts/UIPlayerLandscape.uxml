<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrs="Highrise.Studio"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

    <hrs:UIPlayerLandscape class="player overlay">
        <VisualElement name="_roomContainer">
            <VisualElement name="_controller" class="overlay"/>
            <hr:UIWorld name="_world" class="overlay" picking-mode="Ignore"/>
            <VisualElement name="_indicators" class="overlay" picking-mode="Ignore"/>
            <VisualElement name="_roomCustom" picking-mode="Ignore"/>
            <VisualElement name="_chatOverlay" class="overlay"  picking-mode="Ignore"/>
        </VisualElement>
        <VisualElement name="_rightButtonContainer" class="top-right overlay-top-right">
            <VisualElement name="_rightButtons" class="top-right-buttons">
                <VisualElement name="_cameraButton">
                    <hr:UIBlur class="overlay"/>
                    <Image class="icon-camera"/>
                </VisualElement>
                <hr:UIRoomInfoButton name="_worldInfoButton"/>
            </VisualElement>
        </VisualElement>
        <VisualElement name="_right">
            <hr:UIRoomInfo name="_worldInfo"/>
        </VisualElement>
        <VisualElement name="_leftToolbar" class="toolbar">
            <VisualElement name="_hamburgerButton" class="toolbar-button">
                <hr:UIImage class="icon-hamburger"/>
            </VisualElement>
            <VisualElement name="_worldButton" class="toolbar-button">
                <hr:UIImage class="icon-locate"/>
            </VisualElement>
            <VisualElement name="_travelButton" class="toolbar-button">
                <hr:UIImage class="icon-travel"/>
            </VisualElement>
            <VisualElement name="_feedButton" class="toolbar-button">
                <hr:UIImage class="icon-tab-feed"/>
            </VisualElement>
            <VisualElement name="_inboxButton" class="toolbar-button">
                <hr:UIImage class="icon-tab-inbox"/>
            </VisualElement>
            <VisualElement name="_shopButton" class="toolbar-button">
                <hr:UIImage class="icon-marketplace"/>
            </VisualElement>
            <VisualElement name="_profileButton" class="toolbar-button">
                <hr:UIImage class="icon-profile"/>
            </VisualElement>
        </VisualElement>
        <VisualElement name="_loading"/>
    </hrs:UIPlayerLandscape>

</UXML>