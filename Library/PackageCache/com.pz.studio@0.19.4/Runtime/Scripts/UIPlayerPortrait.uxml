<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrs="Highrise.Studio"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

    <hrs:UIPlayerPortrait class="player overlay">
        <VisualElement name="_roomContainer">
            <VisualElement name="_controller" class="overlay"/>
            <hr:UIWorld name="_world" class="overlay" picking-mode="Ignore"/>
            <VisualElement name="_indicators" class="overlay" picking-mode="Ignore"/>
            <VisualElement name="_roomCustom" picking-mode="Ignore"/>
            <VisualElement name="_chatOverlay" class="overlay"  picking-mode="Ignore"/>
        </VisualElement>
        <VisualElement class="top-left" picking-mode="Ignore">
            <VisualElement name="_hamburgerButton">
                <VisualElement name="_hamburgerBackground" />
                <hr:UIImage name="_hamburgerIcon" class="icon-hamburger"/>
            </VisualElement>
        </VisualElement>
        <VisualElement name="_rightButtonContainer" class="top-right overlay-top-right">
            <VisualElement name="_rightButtons" class="top-right-buttons">
                <VisualElement name="_cameraButton">
                    <hr:UIBlur class="overlay"/>
                    <Image class="icon-camera"/>
                </VisualElement>
                <hr:UIRoomInfoButton name="_worldInfoButton"/>
            </VisualElement>
        </VisualElement>
        <VisualElement class="bottom-menu-bar">
            <VisualElement class="background">
                <hr:UIImage class="icon-travel"/>
            </VisualElement>
        </VisualElement>
        <VisualElement name="_touchBlocker" class="overlay"/>
        <VisualElement name="_right">
            <hr:UIRoomInfo name="_worldInfo"/>
        </VisualElement>
        <VisualElement name="_loading"/>
        <VisualElement class="bottom-safe"/>
    </hrs:UIPlayerPortrait>

</UXML>