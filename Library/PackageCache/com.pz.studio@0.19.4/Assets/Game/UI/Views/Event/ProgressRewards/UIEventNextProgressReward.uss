.event-next-progress-reward {
    
}

.event-next-progress-reward #_nextContainer {
    flex-direction: row;
    background-color: var(--color-fishbase-catfish);
    border-radius: 12px;
}

.event-next-progress-reward #_finalRewardContainer {
    margin-bottom: 8px;
    align-self: flex-end;
    flex-shrink: 1;
    flex-grow: 0;
}

.event-next-progress-reward #_finalRewardImageBackground {
    background-color: var(--color-fishbase-whitefish);
    width: 58px;
    height: 58px;
    border-radius: 7px;
}

.event-next-progress-reward #_finalRewardImage {
    width: 52px;
    height: 52px;
    border-radius: 4px;
    margin: 3px;
}

.event-next-progress-reward #_finalRewardCarrot {
    align-self: center;
    width: 16px;
    height: 8px;
}

.event-next-progress-reward #_rewardImage {
    width: 52px;
    height: 52px;
    border-radius: 8px;
    margin: auto;
}

.event-next-progress-reward #_rewardImageBackground {
    width: 64px;
    border-radius: 8px;
    background-color: var(--color-rarities-rare-dark);
    height: 64px;
    margin: 8px;
}

.event-next-progress-reward #_amountLabel {
    -unity-font-definition: var(--font-bold);
    color: var(--color-fishbase-anchovy);
    margin-top: -3px;
    margin-right: -3px;
}

.event-next-progress-reward__middle-content {
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 4px;
    margin-right: 12px;
    flex-grow: 1;
}

.event-next-progress-reward__progress-container {
    align-items: center;
    flex-direction: row;
}

.event-next-progress-reward #_ticketsIcon {
    width: 18px;
    height: 18px;
}

.event-next-progress-reward #_progressLabel {
    font-size: 15px;
    flex-shrink: 1;
    color: var(--color-fishbase-anchovy);
    margin-left: 4px;
}

.event-next-progress-reward #_progressBar {
    margin-top: 8px;
}

.event-next-progress-reward #_homingButton {
    margin-top: auto;
    margin-bottom: auto;
    margin-right: 12px;
    padding: 0;
    width: 36px;
    height: 36px;
    background-color: var(--color-accents-secondary-25);
}

.event-next-progress-reward #_homingButton UIImage {
    width: 24px;
    height: 24px;
    --unity-image-tint-color: white;
}
