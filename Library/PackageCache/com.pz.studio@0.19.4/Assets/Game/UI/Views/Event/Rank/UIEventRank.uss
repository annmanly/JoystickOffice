.event-rank {
    height: 44px;
    flex-shrink: 0;
}

.event-rank .rank-icon-amount {
    margin-top: auto;
    margin-bottom: auto;
    flex-direction: row;
    background-color: var(--color-fishbase-tuna);
    border-radius: 8px;
}

.event-rank #_rankTitle {
    color: var(--color-fishbase-mackerel);
    font-size: 15px;
    -unity-font-definition: var(--font-bold);
    margin-left: 12px;
    margin-top: auto;
    margin-bottom: auto;
    margin-right: auto;
}

.event-rank #_rankContainer {
    margin-right: 8px;
}

.event-rank .rank-icon-amount UIImage {
    width: 18px;
    height: 18px;
    margin: 4px;
}

.event-rank .disabled-rank-icon {
    --unity-image-tint-color: var(--color-fishbase-eel);
}

.event-rank .rank-icon-amount UILabel {
    flex-grow: 1;
    -unity-font-definition: var(--font-bold);
    color: var(--color-fishbase-bonito);
    font-size: 15px;
    margin-top: 4px;
    margin-bottom: 4px;
    margin-right: 8px;
}

.event-rank #_moreDetailsButton {
    margin-left: 0px;
    padding-right: 12px;
    padding-left: 8px;
}

.event-rank #_moreDetailsButton UIImage {
    rotate: 180deg;
    width: 16px;
    height: 16px;
    --unity-image-tint-color: var(--color-fishbase-anchovy)
}

.event-rank #_joinCrewButton {
    display: none;
    padding-right: 0;
}

.event-rank #_joinCrewButton UILabel {
    color: var(--color-accents-secondary);
    font-size: 15px;
}