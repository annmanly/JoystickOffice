.event-boost-items {
}

.event-boost-items__card {
    flex-shrink: 0;
    background-color: var(--color-fishbase-catfish);
    border-radius: 12px;
    padding: 12px;
}

.event-boost-items__title {
    font-size: 17px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-bold);
}

.event-boost-items__description {
    font-size: 15px;
    color: var(--color-fishbase-mackerel);
    white-space: normal;
    margin-top: 8px;
}

.event-boost-items__progress {
    margin-top: 12px;
}

.event-boost-items__subtitle{
    font-size: 17px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-bold);
    margin-top: 28px;
}

.event-boost-items__subtitle-lucky-gacha {
    margin-top: 16px;
}

.event-boost-items__separator.separator {
    margin-top: 16px;
    background-color: var(--color-fishbase-tuna);
}

.event-boost-items #_emptyState {
    display: none;
}

.event-boost-items #_luckyGachaBoostItemsEmptyState {
    display: none;
}

.event-boost-items .empty-state #_emptyLabel {
    color: var(--color-fishbase-salmon);
    margin-bottom: 24px;
}

.event-boost-items .empty-state #_iconBackground {
    margin-top: 40px;
    background-color: var(--color-fishbase-tuna);
}

.event-boost-items .empty-state #_emptyImage {
    --unity-image-tint-color: var(--color-fishbase-catfish);
}

.event-boost-items__grid {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-right: -8px;
    margin-top: 8px;
}
