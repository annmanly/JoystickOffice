.event-super-boost-item-cell {
    flex: 1;
}

.event-super-boost-item-cell__card {
    height: 144px;
    border-radius: 12px;
    flex: 1;
    background-color: var(--color-fishbase-tuna);
    margin: 4px;
    padding-left: 8px;
    padding-right: 8px;
    padding-bottom: 8px;
}

.event-super-boost-item-cell__image {
    width: 112px;
    height: 112px;
    margin-top: 0px;
    margin-left: auto;
    margin-right: auto;
}

.event-super-boost-item-cell__amount-label {
    margin-top: 1px;
    margin-right: 1px;
    color: var(--color-fishbase-anchovy);
    background-color: var(--color-fishbase-salmon);
}
