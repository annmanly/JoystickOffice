.donate-event {
    border-radius: 16px;
    background-color: var(--color-fishbase-eel);
    margin-top: auto;
    align-self: center;
    width: 100%;
}

.landscape .donate-event {
    max-width: var(--lanscape-dialog-max-width);
}

.donate-event #_header {
    align-items: center;
    margin-top: 16px;
    margin-left: 16px;
    margin-right: 16px;
    justify-content: center;
}

.donate-event #_npcName {
    color: var(--color-fishbase-bonito);
    font-size: 17px;
    -unity-font-style: bold;
}

.donate-event #_heartsContainer {
    margin-left: 8px;
}

.donate-event #_heartsContainer > *{
    margin-left: 1px;
    margin-right: 1px;
    width: 16px;
    height: 16px;
}

.donate-event #_chooseItemLabel {
    margin-top: 16px;
    margin-left: 16px;
    margin-right: 16px;
    -unity-text-align: middle-center;
    -unity-font-style: italic;
    color: var(--color-fishbase-salmon);
    font-size: 15px;
}

.donate-event #_itemsContainer {
    height: 136px;
    flex-direction: row;
    justify-content: center;
    margin-top: 8px;
    margin-left: 12px;
    margin-right: 12px;
}

.donate-event #_itemsContainer > * {
    margin-left: 4px;
    margin-right: 4px;
}

.donate-event #_resultsContainer {
    display: none;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    background-color: var(--color-fishbase-eel);
}

.donate-event #_tapToContinueLabel {
    -unity-text-align: middle-center;
    white-space: normal;
    margin-top: 16px;
    margin-left: 16px;
    margin-right: 16px;
    margin-bottom: 16px;
    padding-top: 11px;
    padding-bottom: 11px;
    color: var(--color-fishbase-salmon);
    -unity-font-definition: var(--font-regular-italic);
}

.donate-event #_results {
    margin-top: 16px;
}