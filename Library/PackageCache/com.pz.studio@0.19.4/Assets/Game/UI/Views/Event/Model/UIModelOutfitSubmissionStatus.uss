.model-outfit-submission-status {
    border-radius: 12px;
    flex-direction: row;
    flex-shrink: 0;
    background-color: var(--color-fishbase-catfish);
}

.model-outfit-submission-status__text-container {
    margin-top: auto;
    flex-grow: 1;
    margin-bottom: auto;
}

.model-outfit-submission-status #_outfit {
    height: 44px;
    width: 44px;
    margin: 12px;
    border-radius: 12px;
    overflow: hidden;
}

.model-outfit-submission-status .user-thumbnail-user .user-thumbnail__image-container  {
    background-color: var(--color-fishbase-eel);
}

.model-outfit-submission-status #_title {
    color: var(--color-basic-alert);
    -unity-font-style: bold;
    overflow: hidden;
}

.model-outfit-submission-status #_description {
    color: var(--color-fishbase-mackerel);
    margin-bottom: 0px;
    margin-top: 4px;
    font-size: 15px;
    white-space: normal;
}

.model-outfit-submission-status__title-container {
    margin-top: 4px;
    flex-direction: row;
}

.model-outfit-submission-status--existing #_title {
    color: var(--color-accents-secondary);
}

.model-outfit-submission-status #_alertBadge {
    width: 14px;
    height: 14px;
    align-self: center;
    margin-left: 4px;
    --unity-image-tint-color: var(--color-basic-alert);
    display: none;
}

.model-outfit-submission-status #_submitOutfitButton {
    margin-top: auto;
    margin-bottom: auto;
    margin-left: auto;
    padding-left: 12px;
    padding-right: 12px;
}

.model-outfit-submission-status #_submitOutfitButton UIImage {
    rotate: 180deg;
    width: 16px;
    height: 16px;
    --unity-image-tint-color: var(--color-fishbase-anchovy)
}

.model-outfit-submission-status .user-thumbnail__image-container {
    border-radius: 12px;
    background-color: var(--color-fishbase-eel);
}