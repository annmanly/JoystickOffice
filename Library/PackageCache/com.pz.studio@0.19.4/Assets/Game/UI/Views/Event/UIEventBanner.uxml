<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIEventBanner class="event-banner">
    <hr:UIImage name="_image" class="overlay"/>
    <VisualElement class="event-banner_scrim"/>
    <VisualElement class="event-banner__footer overlay-bottom-left">
      <hr:UILabel name="_title" class="event-banner__title"/>
      <VisualElement class="rtl-reverse">
        <hr:UILabel name="_timer" class="event-banner__timer"/>
        <hr:UILabel name="_eventTimespan" class="event-banner__timer"/>
      </VisualElement>
    </VisualElement>
  </hr:UIEventBanner>

</UXML>