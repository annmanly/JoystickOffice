.event-super-boost-hud-head {
}

.event-super-boost-hud-head__indicator {
    visibility: hidden;
    width: 45px;
    height: 22px;
    margin-bottom: 2px;
    margin-left: auto;
    margin-right: auto;
}

.event-super-boost-hud-head__indicator-label {
    font-size: 11px;
    margin-top: 1px;
    color: var(--color-fishbase-blackfish);
    -unity-font-definition: var(--font-black-italic);
    -unity-text-align: middle-center;
}

.event-super-boost-hud-head__progress-container {
    border-radius: 20px;
    overflow: hidden;
}

.event-super-boost-hud-head__progress {
    width: 54px;
    height: 54px;
    --progress-color: var(--color-tertiary-tangerine);
    --track-color: rgba(0, 0, 0, 0);
}

.event-super-boost-hud-head__button {
    width: 44px;
    height: 44px;
    margin: 5px;
    border-radius: 16px;
    background-color: var(--color-tertiary-banana);
    overflow: hidden;
}

.event-super-boost-hud-head__button-gradient {
    margin: -16px;
    background-image: var(--image-vgradient-180);
    -unity-background-image-tint-color: var(--color-tertiary-tangerine);
    rotate: 45deg;
}

.event-super-boost-hud-head__button-icon {
    width: 44px;
    height: 44px;
    margin: auto;
}

.event-super-boost-hud-head__button-icon.event-super-boost-hud-head-no-boost-item {
    --unity-image: var(--image-rocket);
    height: 28px;
    width: 28px;
    --unity-image-tint-color: var(--color-fishbase-blackfish);
}
