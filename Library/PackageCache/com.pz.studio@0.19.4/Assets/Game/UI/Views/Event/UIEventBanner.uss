.event-banner {
    height: 172px;
}

.event-banner_scrim {
    background-image: var(--image-hgradient);
    -unity-background-image-tint-color: var(--color-fishbase-blackfish-20);
    width: 100%;
    height: 100%;
}

.event-banner #_image {
    --unity-image-size: scale-and-crop;
}

.event-banner__footer {
    align-items: flex-start;
    margin-left: 12px;
    margin-bottom: 12px
}

.rtl .event-banner__footer {
    margin-left: 0;
    margin-right: 12px;
}

.event-banner__title {
    font-size: 20px;
    visibility: hidden;
    padding: 0;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-bold);
    margin-bottom: 4px;
    text-shadow: 0px 1px 8px rgba(0, 0, 0, 0.25);
}

.event-banner__timer {
    font-size: 15px;
    padding: 3px 8px;
    visibility: hidden;
    background-color: var(--color-fishbase-bonito);
    color: var(--color-fishbase-eel);
    border-radius: 8px;
    -unity-font-definition: var(--font-bold);
}

.event-banner #_eventTimespan {
    margin-left: 4px;
}

.rtl .event-banner #_eventTimespan {
    margin-left: 0;
    margin-right: 4px;
}
