.event-item-cell {
    border-radius: 12px;
    flex: 1;
    background-color: var(--color-fishbase-catfish);
}

.event-item-cell #_itemImage {
    width: 80px;
    height: 80px;
    margin-top: 8px;
    margin-left: auto;
    margin-right: auto;
}

.event-item-cell #_labelsContainer {
    flex-grow: 1;
    justify-content: center;
    margin: 8px;
}

.event-item-cell #_subtitleLabel {
    display: none;
    font-size: 11px;
    color: var(--color-accents-secondary);
    -unity-text-align: middle-center;
    white-space: normal;
    -unity-font-definition: var(--font-black-italic);
}

.event-item-cell #_chanceLabel {
    margin-left: 4px;
    margin-right: 4px;
    display: none;
    font-size: 11px;
    -unity-text-align: middle-center;
    color: var(--color-accents-secondary);
    -unity-font-definition: var(--font-bold-italic);
}

.event-item-cell #_amountLabel {
    margin-top: -3px;
    margin-right: -3px;
}