.event-crew-chest-cycle {
    margin-top: 20px;
}

.event-crew-chest-cycle__title-container {
    align-items: center;
    flex-direction: row;
}

.event-crew-chest-cycle #_title {
    font-size: 22px;
    -unity-font-style: bold;
    margin-right: auto;
    color: var(--color-fishbase-whitefish);
}

.event-crew-chest-cycle #_timeIcon {
    width: 16px;
    height: 16px;
    margin-left: 8px;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.event-crew-chest-cycle #_timeLeft {
    font-size: 15px;
    margin-left: 4px;
    color: var(--color-fishbase-bonito);
    -unity-font-definition: var(--font-bold);
}

.event-crew-chest-cycle #_description {
    font-size: 15px;
    margin-top: 8px;
    white-space: normal;
    margin-right: auto;
    color: var(--color-fishbase-mackerel);
}

.event-crew-chest-cycle__progress-container {
    padding: 12px;
    background-color: var(--color-fishbase-catfish);
    border-radius: 12px;
    margin-top: 16px;
    margin-bottom: 16px;
}

.event-crew-chest-cycle #_rewardsContainer {
    flex-direction: row;
    justify-content: center;
    height: 50px;
    flex-grow: 1;
}

.event-crew-chest-cycle #_progressStatus {
    margin-top: 16px;
    margin-bottom: 12px;
    font-size: 15px;
    white-space: normal;
    -unity-text-align: middle-center;
    color: var(--color-fishbase-anchovy);
}

.event-crew-chest-cycle #_progressBar {

}

.event-crew-chest-cycle--expiring-soon #_timeLeft {
    color: var(--color-basic-alert);
}

.event-crew-chest-cycle--expiring-soon #_timeIcon {
    --unity-image-tint-color: var(--color-basic-alert);
}

.event-crew-chest-cycle #_joinCrewButton {
    margin-top: 8px;
}