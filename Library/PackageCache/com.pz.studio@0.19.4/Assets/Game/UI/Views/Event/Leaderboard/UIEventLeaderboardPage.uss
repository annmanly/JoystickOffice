.event-leaderboard-page {
    flex-grow: 1;
    
}

.event-leaderboard-page UICollectionSection {
    padding-left: 16px;
    padding-right: 16px;    
}

.event-leaderboard-page__leaderboard-section {
    margin-top: 16px;
    padding-bottom: 80px;
}

.event-leaderboard-page__scroll-up-container {

    width: 100%;
    position: absolute;
    bottom: var(--safe-area-bottom);    
}

.event-leaderboard-page__scroll-up-button {
    translate: 0 100px 0;
    margin: auto;
    margin-bottom: 12px;
    width: 36px;
    height: 36px;
    rotate: 90deg;
    border-radius: 12px;
    padding: 4px;
    --unity-image-tint-color: var(--color-fishbase-eel);
    background-color: var(--color-fishbase-bonito);
}
