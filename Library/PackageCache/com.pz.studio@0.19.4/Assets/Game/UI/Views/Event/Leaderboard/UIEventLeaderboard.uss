.event-leaderboard {
    background-color: var(--color-fishbase-eel);
}

.event-leaderboard__tabs {
    background-color: var(--color-fishbase-eel);
    flex-grow: 0;
    flex-direction: row;
    align-content: flex-start;
}

.event-leaderboard__tabs .scroll-view__content-container {
    padding-left: 16px;
}

.event-leaderboard__tabs UIScrollBar {
    display: none;
}

.event-leaderboard__tab {
    margin-right: 24px;
    height: 44px;
    border-bottom-width: 4px;
    border-color: var(--color-accents-blackfish);
    flex-direction: row;
    align-items: center;
}

.event-leaderboard__tab:checked {
    border-color: var(--color-accents-secondary);
}

.event-leaderboard__tab:checked UILabel {
    color: var(--color-fishbase-whitefish);
}

.event-leaderboard__tab UILabel {
    color: var(--color-fishbase-tuna);
    font-size: 18px;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
}

.event-leaderboard__pages {
    flex-grow: 1;
}
