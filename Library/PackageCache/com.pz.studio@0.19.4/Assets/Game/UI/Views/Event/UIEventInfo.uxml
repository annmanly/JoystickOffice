<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIEventInfo class="event-info">
    <VisualElement class="event-info-container" name="_scrollView">
      <hr:UIEventBanner name="_banner"/>
      <hr:UIScrollView name="_tabs" mode="Horizontal" class="event-info__tabs"/>
      <hr:UIPageView class="event-info__pages" name="_pageView"/>
    </VisualElement>
    
    <hr:UIButton name="_closeButton" class="overlay-top-safe">
      <Image class="icon-close"/>
    </hr:UIButton>
    
    <hr:UIWallet name="_wallet" class="overlay-top-right-safe" custom="true"/>

    <VisualElement class="event-info__cta-button-container">
      <hr:UIButton class="button-primary" name="_goToEventRoomButton">
        <hr:UIImage class="icon-leave" name="_leaveIcon"/>
        <hr:UILabel key="go_to_event"/>
      </hr:UIButton>
    </VisualElement>

    <VisualElement name="_loadingIndicatorContainer" class="overlay">
      <hr:LoadingIndicator name="_loadingIndicator"/>
    </VisualElement>
  </hr:UIEventInfo>

</UXML>