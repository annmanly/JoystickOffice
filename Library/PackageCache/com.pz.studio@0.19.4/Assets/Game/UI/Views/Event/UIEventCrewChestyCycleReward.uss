.event-crew-chesty-cycle-reward {
    width: 50px;
    height: 50px;
    margin-left: 6px;
    margin-right: 6px;
    border-radius: 12px;
    background-image: var(--image-background-crew-chest-reward-broken);
}

.event-crew-chesty-cycle-reward--claimed {
    background-image: none;
}

.event-crew-chesty-cycle-reward--claimed #_rewardImage {
    opacity: 0.5;
}

.event-crew-chesty-cycle-reward--claimed #_amountLabel {
    opacity: 0.5;
}

.event-crew-chesty-cycle-reward--ready-to-claim {
    background-image: var(--image-background-crew-chest-reward-full);
}

.event-crew-chesty-cycle-reward #_rewardImage {
    width: 28px;
    height: 28px;
    margin: auto;
}

.event-crew-chesty-cycle-reward #_amountLabel {
    margin-top: 5px;
    -unity-font-style: bold;
    margin-right: 5px;
    background-color: var(--color-fishbase-tuna);
    border-radius: 4px;
    color: var(--color-fishbase-anchovy);
    font-size: 11px;
    padding-left: 2px;
    padding-right: 2px;
}