.event-reward-animation {
    align-items: center;
    width: 100%;
    flex-grow: 1;
}

.event-reward-animation-top-tickets {
    flex-direction: row;
    align-items: center;
}

.event-reward-animation-top-tickets > UIImage {
    width: 18px;
    height: 18px;
    margin-right: 4px;
}

.event-reward-animation-top-tickets-amount {
    font-size: 15px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-regular);
}

.event-reward-animation-top-title {
    font-size: 22px;
    margin-top: 4px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-black);
}

.event-reward-animation-bottom-title {
    font-size: 17px;
    -unity-font-definition: var(--font-bold);
    color: var(--color-fishbase-whitefish);
    margin-left: 20px;
    margin-right: 20px;
    white-space: normal;
    -unity-text-align: middle-center;
}

#_topContent {
    align-items: center;
    justify-content: flex-end;
    height: 30%;
}

#_bottomContent {
    flex-grow: 0;
    margin-top: auto;
    height: 30%;
    padding-bottom: 8px;
}

.event-reward-animation-bottom-description {
    font-size: 15px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-regular);
    margin-top: 8px;
    margin-left: 20px;
    margin-right: 20px;
    white-space: normal;
    -unity-text-align: middle-center;
}
