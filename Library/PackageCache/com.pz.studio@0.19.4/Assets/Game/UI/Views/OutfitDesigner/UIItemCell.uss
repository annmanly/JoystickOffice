.item-cell {
    margin-left: auto;
    margin-right: auto;
    border-radius: 8px;
    overflow: hidden;
}

.item-cell #_clothingImage {
    overflow: hidden;
    border-radius: 8px;
}

.item-cell-on-head-item #_clothingImage {
    right: -1px;
}

.item-cell-border-container {
    display: none;
    border-width: 3px;
    border-color: var(--color-accents-primary);
    border-radius: 8px;
}

.item-cell:checked .item-cell-border-container {
    display: flex;
}

.item-cell #_nonTradableOverlay {
    position: relative;
    width: 18px;
    height: 18px;
    margin-top: auto;
    margin-bottom: 4px;
    margin-left: 4px;
    --unity-image-tint-color: var(--color-fishbase-anchovy);
    background-color: var(--color-fishbase-catfish);
    border-radius: 4px;
}

.item-cell #_nfi {
    display: none;
    position: absolute;
    margin: 0;
    padding: 0;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-bonito);
    font-size: 11px;
    -unity-font-definition: var(--font-bold);
    border-radius: 4px;
    padding-top: 1px;
    padding-bottom: 1px;
    padding-left: 2px;
    padding-right: 2px;
    margin-bottom: 4px;
    margin-left: 4px;
}

.item-cell #_nft {
    display: none;
    position: absolute;
    width: 18px;
    height: 18px;
    left: -4px;
    bottom: -4px;
    background-color: var(--color-tertiary-blueberry);
    --unity-image-tint-color: var(--color-fishbase-catfish);
    border-radius: 4px;
    margin-bottom: 7px;
    margin-left: 7px;
}

.item-cell #_newBadge {
    background-image: var(--image-star);
    -unity-background-image-tint-color: var(--color-basic-alert);
    height: 28px;
    width: 28px;
    align-items: center;
    justify-content: center;
}

.item-cell #_newBadge > UILabel {
    color: var(--color-fishbase-eel);
    font-size: 8px;
    -unity-font-definition: var(--font-black-italic);
    -unity-text-align: middle-center;
    rotate: -11deg;
    margin: 0;
    padding: 0;
}

.dark-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(30, 30, 30, 0.8);
}

.item-cell #_amountContainer {
    display: none;
    border-radius: 4px;
    margin-top: -0px;
    margin-right: 0px;
    align-items: center;
    padding: 2px;
    background-color: var(--color-fishbase-catfish);
}

.item-cell #_amountContainer Label {
    font-size: 11px;
    color: var(--color-fishbase-anchovy);
    margin: 0;
    padding: 3px 2px;
}

/* Mythical background */

.item-cell UIMythicalBackground {
    display: none;
}

.item-cell .mythical-background-mask {
    display: none;
}

.item-cell.rarity-mythical UIMythicalBackground {
    display: flex;
}
