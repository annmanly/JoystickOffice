.get-from-other-place-button {
}

.unity-disabled.get-from-other-place-button {
    opacity: 1.0;
}

.get-from-other-place-button UIImage {
    --unity-image-tint-color: var(--color-accents-primary);
    height: 24px;
    width: 24px;
    margin-right: 4px;
}

.get-from-other-place-button LoadingIndicator {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -16px;
    margin-top: -16px;
    width: 32px;
    height: 32px;
    flex-grow: 0;
    flex-shrink: 1;
    opacity: 0.3;
    background-image: var(--image-loading-indicator);
    -unity-background-image-tint-color: var(--color-accents-primary);
}

.get-from-other-place-button .button:disabled,
.get-from-other-place-button .button:disabled:hover {
    opacity: 1;
    background-color: var(--color-accents-primary-25);
    color: var(--color-fishbase-tuna);
}
