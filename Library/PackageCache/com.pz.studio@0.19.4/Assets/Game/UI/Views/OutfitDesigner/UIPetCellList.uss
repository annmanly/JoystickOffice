.pet-cell-list {
    flex-grow: 1;
}

.pet-cell-list UICollectionSection {
    padding-left: 16px;
    padding-right: 16px;
    padding-bottom: 100px;
}

.pet-cell-list UIPetCell {
    width: var(--4-column-item-min-width);
    height: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    max-height: var(--4-column-item-max-width);
}

.pet-cell-list__save-button {
}

.landscape .pet-cell-list__save-button {
    align-self: center;
    width: 50%;
}

.pet-cell-list-button-container {
    padding-right: 16px;
    padding-left: 16px;
    margin-top: 0px;
    padding-bottom: 32px;
}

.pet-cell-list-gradient {
    background-image: var(--image-vgradient-180);
    -unity-background-image-tint-color: var(--color-fishbase-eel);
    height: 117px;
    position: absolute;
    padding-bottom: var(--safe-area-bottom);
    bottom: 0px;
    left: 0px;
    right: 0px;
}