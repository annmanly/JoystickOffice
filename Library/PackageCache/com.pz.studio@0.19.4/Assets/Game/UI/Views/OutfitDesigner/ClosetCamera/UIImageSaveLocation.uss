.image-save-location {
    border-radius: 20px;
    background-color: var(--color-fishbase-eel);
    height: 400px;
    width: 400px;
    align-self: center;
    margin-top: auto;
    margin-bottom: auto;
    padding: 20px;
}

.image-save-location__title {
    font-size: 20px;
    color: var(--color-fishbase-whitefish);
    -unity-text-align: middle-center;
    margin-bottom: 20px;
}

.image-save-location #_chooseFolderButton {
    margin-bottom: 20px;
}

.image-save-location__path {
    font-size: 17px;
    color: var(--color-fishbase-bonito);
    flex-grow: 1;
    white-space: normal;
    margin-bottom: 20px;
}

.image-save-location__save-path {
    font-size: 13px;
    color: var(--color-fishbase-anchovy);
}

.image-save-location__spacer {
    flex-grow: 1;
}
