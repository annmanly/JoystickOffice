.closet-pet-inventory {
    flex-grow: 1;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    overflow: hidden;
}

.view-loaded.closet-pet-inventory  {
    background-color: var(--color-transparent);
}

.closet-pet-inventory-container {
    position: absolute;
    bottom: 0;
    margin: 0;
    width: 100%;
}

.closet-pet-inventory-customization {
    background-color: var(--color-fishbase-eel);
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    padding-right: 0px;
    padding-left: 0px;
    margin: 0px;
    margin-bottom:30px;
    height: 336px;
}

.closet-pet-inventory-cell-container {
    padding-right: 16px;
    padding-left: 16px;
    flex-grow:1;
}

.closet-pet-inventory .collection-section {
    padding-top: 12px;
    padding-right: 16px;
    padding-left: 16px;
}

.landscape .closet-pet-inventory .collection-section {
    padding-top: 0;
}

.closet-pet-inventory UIPetBindCell {
    width: var(--4-column-item-min-width);
    height: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    max-height: var(--4-column-item-max-width);
}

.closet-pet-inventory UIPetInventoryCell {
    width: var(--4-column-item-min-width);
    height: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    max-height: var(--4-column-item-max-width);
}

.closet-pet-inventory-button-container {
    padding-right: 16px;
    padding-left: 16px;
    bottom:0;
    height: 40px;
    padding-bottom: 80px;
    background-image: var(--image-vgradient-180);
    -unity-background-image-tint-color: var(--color-fishbase-eel);
}

.closet-pet-inventory #_emptyDisplay {
    justify-content: center;
    align-items: center;
}

.closet-pet-inventory__save-button {
    margin-top: 0px;
    width: 50%;
}

.landscape .closet-pet-inventory__save-button {
    width: 50%;
    align-self: center;
}

.closet-pet-inventory-label .label {
    color: var(--color-fishbase-bonito);
    font-size: var(--font-size-xl);
    -unity-text-align: middle-center;
    -unity-font-definition: var(--font-bold);
    width:auto;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    align-self: flex-start;
}


.closet-pet-inventory__preview #_undoButton {
    margin-right: 8px;
}

.closet-pet-inventory__preview #_undoButton {
    padding-left: 12px;
    padding-right: 12px;
    font-size: 15px;
}

.closet-pet-inventory-display-name-gradient {
    background-image: var(--image-vgradient-180);
    -unity-background-image-tint-color: var(--color-fishbase-eel);
    height: 117px;
    padding-bottom: 32px;
    justify-content: flex-end;
    align-items: center;
}

.closet-pet-inventory #_controls {
    height: 52%;
}

.closet-pet-inventory #_actions {
    margin-left: 12px;
    margin-bottom: 12px;
    border-radius: 12px;
    width: 36px;
    background-color: var(--color-fishbase-blackfish-40);
}

.closet-pet-inventory .action-icon {
    padding: 7px;
    width: 36px;
    height: 36px;
}

.closet-pet-inventory .action-spacer {
    height: 1px;
    width: 28px;
    background-color: rgba(255, 255, 255, 0.1);
    margin-left: auto;
    margin-right: auto;
}

.closet-pet-inventory__drawer-safe-space {
    height: var(--safe-area-top);
}

.closet-pet-inventory #_drawer {
    background-color: var(--color-fishbase-eel);
    border-top-right-radius: 20px;
    border-top-left-radius: 20px;
}

.closet-pet-inventory #_pull {
    height: 24px;
}

.closet-pet-inventory #_pullHandle {
    height: 6px;
    width: 58px;
    margin-top: 8px;
    margin-left: auto;
    margin-right: auto;
    border-radius: 2px;
    background-color: var(--color-fishbase-catfish);
}

.collection-extra-space {
    padding-bottom: 80px;
}

.closet-pet-inventory__landscape-header {
    height: 44px;
    align-items: center;
}

.closet-pet-inventory__landscape-header > UIImage {
    height: 36px;
    width: 36px;
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    margin-left: 6px;
}

.rtl .closet-pet-inventory__landscape-header > UIImage {
    margin-left: 0;
    margin-right: 6px;
    rotate: 180deg;
}

.portrait .closet-pet-inventory__landscape-header {
    display: none;
}