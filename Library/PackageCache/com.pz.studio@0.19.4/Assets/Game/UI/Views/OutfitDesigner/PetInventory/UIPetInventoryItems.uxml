<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrui="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIPetInventoryItems class="pet-inventory-items">
    <VisualElement class="pet-inventory-items-top">
        <hr:UILabel key="pet_inventory" class="pet-inventory-items-top__label"/>
        <hr:UIButton name="_seeAllButton" class="button-secondary-transparent">
            <hr:UILabel key="see_all" class="pet-inventory-items__see-label"/>
        </hr:UIButton>
    </VisualElement>
    <hr:UICollection class="flex-grow" mode="Horizontal">
        <hr:UICollectionSection>
          <hr:UICollectionCells name="_itemGrid" layout="stack" layout-spacing="2"/>
        </hr:UICollectionSection>
    </hr:UICollection>
  </hr:UIPetInventoryItems>

</UXML>