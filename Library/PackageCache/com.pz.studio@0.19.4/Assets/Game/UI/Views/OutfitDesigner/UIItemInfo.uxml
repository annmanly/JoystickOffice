<?xml version="1.0" encoding="utf-8"?>

<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrui="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd">

    <hr:UIItemInfo name="item-info" class="item-info" picking-mode="Ignore">
        <hr:UIScrollView name="_scrollView">
            <VisualElement class="item-info-main-container" name="_mainContainer">
                <VisualElement name="_rarityBackground" class="rarity-bg" focusable="true">
                    <hr:UIMythicalBackground class="overlay" />

                    <hr:UILabel name="_rarity" key="rarity_legendary" uppercase="true" class="rarity-text" />
                    <hr:UIImage name="_effectsIcon" class="icon-outfit-auras" />

                    <VisualElement name="_imageContainer">
                        <hr:UIImage name="_image" />
                    </VisualElement>

                    <hr:UILabel name="_name" class="rarity-text" auto-sizing-font-size="32" />
                    <VisualElement name="_subContainer">
                        <hr:UILabel name="_subName" class="rarity-text" />
                    </VisualElement>

                </VisualElement>

                <hr:UIItemInfoTextLabels name="_textLabelsContainer" />
                <hr:UIItemInfoCountdown name="_countdown" />

                <VisualElement class="item-info__footer" name="_footer">

                    <VisualElement class="item-info__footer-title">
                        <hr:UILabel name="_bonusRewardTypeLabel" />
                        <hr:UILabel name="_bonusRewardProgressLabel" />
                    </VisualElement>

                    <VisualElement class="item-info__footer-extra-info">
                        <hr:UIItemInfoHashtag name="_hashtag" />
                        <hr:UISkeletonLabel name="_inspiredByLabel" lines="1" starting-width-percent="40"/>
                        <hr:UILabel name="_belongsToLabel" />
                        <VisualElement name="_eventProgressInfo" class="flex-row">
                            <hr:UIImage name="_eventProgressInfoIcon" />
                            <hr:UILabel name="_eventProgressInfoLabel" />
                        </VisualElement>

                        <VisualElement name="_traitsContainer">
                            <hr:UILabel name="_traits" />
                        </VisualElement>

                        <Label name="_ownedAmount" />
                        
                        <VisualElement name="_tradabilityTimerContainer" class="flex-row">
                            <hr:UIImage class="icon-trade-small"/>
                            <hr:UILabel name="_tradabilityTimer"/>
                        </VisualElement>
                        
                        <hr:UISkeletonLabel name="_caption" lines="2" entity-url-decoration="All"/>
                        <hr:UILabel name="_bonusRewardDescriptionLabel" />
                        <hr:UILabel name="_note" />
                        <hr:UILabel name="_nftInfo" text="placeholder" />
                    </VisualElement>

                    <VisualElement name="_petItemInventory">
                    </VisualElement>

                    <VisualElement class="item-info__buttons-container">
                        <hr:UIItemInfoQuantity name="_quantityPicker" />
                        <hr:UIItemInfoShowcase name="_itemShowcaseButton" />

                        <hr:UIButton name="_tryItOnBigButton" class="button-primary-25">
                            <hr:UIImage name="_tryItOnBigIcon" />
                            <hr:UILabel name="_tryItOnBigLabel" />
                        </hr:UIButton>

                        <hr:UIGetFromOtherPlaceButton class="item-info-get-from-other-place-button"
                                                      name="_getFromOtherPlaceButton" />

                        <hr:UIItemInfoPurchaseButton name="_itemPurchaseButton" />
                    </VisualElement>

                </VisualElement>

                <VisualElement class="overlay item-info__buttons">
                    <hr:UIButton class="item-info__close" name="_closeButton">
                        <Image name="_closeButtonImage" class="icon-close" />
                    </hr:UIButton>

                    <hr:UIButton name="_moreButton" class="button-icon">
                        <hr:UIImage class="icon-more" />
                    </hr:UIButton>

                    <hr:UIButton name="_tryItOnSmallButton" class="button-icon">
                        <hr:UIImage class="icon-closet" name="_tryItOnSmallIcon" />
                    </hr:UIButton>

                    <hr:UIButton name="_wishlistButtonSmall" class="button-icon">
                        <hr:UIImage class="icon-bookmark-unfilled" name="_wishlistButtonSmallIcon" />
                    </hr:UIButton>

                </VisualElement>

            </VisualElement>
            <hr:UIKeyboardContainer />
        <hr:UISafeAreaBottom name="_safeAreaBottom" />
        </hr:UIScrollView>
    </hr:UIItemInfo>

</UXML>