<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

    <hr:UIImageSaveLocation class="image-save-location">
        <hr:UILabel key="save_image" class="image-save-location__title"/>
        <hr:UIButton name="_chooseFolderButton" class="button-secondary">
            <hr:UILabel key="choose_directory" />
        </hr:UIButton>
        <VisualElement name="_pathContainer">
            <hr:UILabel key="save_path" class="image-save-location__save-path"/>
            <hr:UILabel name="_pathLabel" class="image-save-location__path" />
            <hr:UILabel key="filename" class="image-save-location__save-path"/>
            <hr:UITextField name="_fileNameField" class="image-save-location__file-name"/>
        </VisualElement>
        <VisualElement class="image-save-location__spacer"/>
        <hr:UIButton name="_saveButton" class="button-primary">
            <hr:UILabel key="save" />
        </hr:UIButton>
    </hr:UIImageSaveLocation>

</UXML>