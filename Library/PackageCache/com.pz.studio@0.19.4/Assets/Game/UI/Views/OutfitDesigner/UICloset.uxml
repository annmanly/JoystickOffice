<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UICloset class="closet overlay" name="_mainContainer">
    <hr:UIButton name="_backButton" class="button-icon">
      <hr:UIImage class="icon-back rtl-rotate"/>
    </hr:UIButton>
    
    <!--Avatar-->
    <VisualElement class="closet__preview overlay">
      <VisualElement name="_avatarContainer" class="overlay" focusable="true">
        <!--Overlay Buttons-->
        <VisualElement name="_rightButtons">
          <hr:UIButton name="_undoButton" focusable="true">
            <hr:UILabel key="undo"/>
          </hr:UIButton>
          <hr:UIButton name="_saveButton" focusable="true">
            <hr:UILabel key="save" name="_saveButtonText"/>
          </hr:UIButton>
        </VisualElement>

        <!-- Rotate -->
        <VisualElement name="_extraButtons">
          <hr:UIButton name="_rotateButton">
            <hr:UIImage class="icon-rotate"/>
          </hr:UIButton>
          <hr:UIButton name="_cameraButton">
            <hr:UIImage class="icon-camera"/>
          </hr:UIButton>
        </VisualElement>
        <VisualElement class="closet__bottom-overlay overlay-bottom" picking-mode="Ignore">
          <!--OOTD-->
          <hr:UIButton name="_ootdButton" class="closet__ootd-button">
            <hr:UIImage class="icon-equipped"/>
            <Label text="OOTD"/>
          </hr:UIButton>

          <!--Overlay Colors-->
          <VisualElement name="_itemColors" class="outfit-designer__preview-colors">
            <hr:UICollection class="flex-grow" mode="Horizontal">
              <hr:UICollectionSection>
                <hr:UICollectionCells name="_itemColorsGrid" layout="stack" layout-spacing="0"/>
              </hr:UICollectionSection>
            </hr:UICollection>
          </VisualElement>
        </VisualElement>
      </VisualElement>

      <!--Title-->
      <hr:UILabel name="_title" class="closet__title overlay-top"/>

    </VisualElement>


    <!--Customization-->
    <VisualElement name="_bottomOverlay" class="overlay-bottom closet__customization-container">
    <VisualElement class="closet__customization" name="_closetCustomization">
      <VisualElement class="closet__customization-top" name="_closetView">
        <VisualElement name="_filterBar" class="closet__filterbar">
        <!--Filters -->
          <hr:UIScrollView mode="Horizontal">
            <VisualElement class="closet__customization-filterbottom rtl-reverse">
              <hr:UISearchControl name="_searchControl"/>
              <hr:UIButton name="_favoritesButton" class="closet__customization-favouritesbutton">
                <Image class="icon-star-unfilled"/>
              </hr:UIButton>
              <hr:UIPopupPicker name="_sortPicker"/>
              <hr:UIMultiColorPicker name="_multiColorPicker"/>
              <hr:UIPopupPicker name="_genderPicker"/>
              <hr:UIPopupPicker name="_extraTypePicker"/>
              <hr:UIPopupPicker name="_bottomTypePicker"/>
              <hr:UIPopupPicker name="_shoeTypePicker"/>
              <hr:UIPopupPicker name="_eyebrowTypePicker"/>
              <hr:UIPopupPicker name="_accessoryTypePicker"/>
              <hr:UIButton name="_clearButton" class="closet__customization-clearbutton">
                <hr:UILabel key="clear_all"/>
              </hr:UIButton>
            </VisualElement>
          </hr:UIScrollView>

        </VisualElement>

        <!--Pages-->
        <VisualElement class="closet__pages" focusable="true">
          <hr:UIPageView name="_views" class="overlay" interactable="false"/>
        </VisualElement>

      </VisualElement>

      <!--Tabs-->
      <VisualElement name="_tabsContainer">
        <hr:UIScrollView name="_tabs" mode="Horizontal" class="closet__tabs-scrollview"/>
      </VisualElement>

    </VisualElement>

    <hr:UIKeyboardContainer/>

    </VisualElement>

  </hr:UICloset>
</UXML>
