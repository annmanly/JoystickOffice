.closet-camera {
    align-items: center;
    justify-content: center;
    height: 100%;
}

.closet-camera-image-container {
    width: 100%;
    height: 100%;
}

.closet-camera #_finishButton {
    position: absolute;
    display: none;
    margin-top: 8px;
    top: var(--safe-area-top);
    right: 12px;
}

.closet-camera-close-button--tools-expanded > UIImage {
    --unity-image: var(--image-icon-back);
    rotate: -90deg;
}

.closet-camera-close-button--ootd {
    display: none;
}

.closet-camera-bottom-gradient {
    position: absolute;
    height: 80px;
    width: 100%;
    bottom: 0px;
    background-image: var(--image-vgradient-180);
    -unity-background-image-tint-color: var(--color-fishbase-blackfish-60);
    opacity: .25;
}

.landscape .closet-camera-buttons {
    margin-top: 12px;
}

.closet-camera-close-button UIImage {
    --unity-image-tint-color: var(--color-fishbase-bonito);
    width: 24px;
    height: 24px;
}

.closet-camera-photo-button {
    position: absolute;
    bottom: var(--safe-area-bottom);
    left: auto;
    right: auto;
    margin-bottom: 70px;
    width: 60px;
    height: 60px;    
    padding: 0px;
    background-color: var(--color-transparent);
}

.closet-camera-photo-button .button__content {
    justify-content: center;
    align-items: center;
}

.closet-camera-photo-button_body {
    position: absolute;
    height: 48px;
    width: 48px;
    background-color: var(--color-fishbase-whitefish);
    border-radius: 20px;
    opacity: 1;
}

.closet-camera-photo-button_border {
    width: 60px;
    height: 60px;
    border-radius: 26px;
    background-color: var(--color-fishbase-whitefish);
    opacity: .25;
}

.closet-camera-buttons {
    position: absolute;
    bottom: var(--safe-area-bottom);
    padding-bottom: 16px;
    flex-direction: row;
}

.closet-camera-buttons UIImage {
    --unity-image-tint-color: var(--color-fishbase-bonito);
    width: 24px;
    height: 24px;
}

.closet-camera-ratio-button, .closet-camera-emotes-button, .closet-camera-backgrounds-button {
    height: 36px;
    width: 36px;
    padding: 6px;
    margin-left: 4px;
    margin-right: 4px;
}

.closet-camera-tools-container {
    height: 100%;
    background-color: var(--color-fishbase-eel);
    padding-bottom: var(--safe-area-bottom);
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.closet-camera-pose-tools {
    flex-grow: 1;
}

.closet-camera #_slideoutHandle {
    background-color: var(--color-fishbase-catfish);
    border-radius: var(--border-width-s);
    width: 58px;
    height: 6px;
    margin: 9px auto;
}

.closet-camera #_sliderSection {
    display: none;
    height: 36px;
}

.closet-camera #_profileBackgroundsSection {
    padding-top: 6px;
}

.closet-camera Slider {
    min-height: 12px;
    border-radius: 2px;
    margin-left: 16px;
    margin-right: 16px;
    margin-bottom: 8px;
}

.closet-camera Slider #unity-dragger {
    background-color: var(--color-accents-secondary);
    min-height: 20px;
    height: 20px;
    width: 20px;
    margin: 0px;
    border-width: 4px;
    border-radius: 8px;
    border-color: var(--color-fishbase-tuna);
    overflow: hidden;
    position: relative;
    top: 0px;
}

.closet-camera Slider #unity-tracker {
    background-color: var(--color-fishbase-tuna);
    height: 6px;
    border-radius: 2px;
    overflow: hidden;
}

.closet-camera UICollectionSection {
    padding-left: 16px;
    padding-right: 16px;
}

.closet-camera UIEmoteCell, UIBackgroundCell {
    min-width: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    min-height: var(--4-column-item-min-width);
    max-height: var(--4-column-item-max-width);
}

.closet-camera-drawer {
    height: 30%;
}

.closet-camera-image-container--square #_watermark {
    margin-top: 16px;
}