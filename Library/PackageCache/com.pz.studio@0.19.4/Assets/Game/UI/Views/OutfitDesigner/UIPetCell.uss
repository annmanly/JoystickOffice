.pet-cell {
    min-width: 80px;
    background-color: var(--color-fishbase-tuna);
    overflow: hidden;
    border-color: var(--color-fishbase-catfish);   
}

.pet-cell #_nft {
    display: none;
    position: absolute;
    width: 18px;
    height: 18px;
    left: -4px;
    bottom: -4px;
    background-color: var(--color-tertiary-blueberry);
    --unity-image-tint-color: var(--color-fishbase-catfish);
    border-radius: 4px;
    margin-bottom: 7px;
    margin-left: 7px;
}

.pet-cell #_selectedBadge {
    display: none;
    width: 22px;
    height: 22px;
    border-radius: 8px;
    bottom: 5px;
    right: 5px;
    padding: 3px;
    background-color: var(--color-accents-primary);
    --unity-image-tint-color: var(--color-fishbase-eel);
}


.pet-cell:checked #_selectedBadge {
    display: flex;
}


