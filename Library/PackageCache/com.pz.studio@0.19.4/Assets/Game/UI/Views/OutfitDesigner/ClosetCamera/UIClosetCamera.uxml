<?xml version="1.0" encoding="utf-8"?>
<UXML
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="UnityEngine.UIElements"
        xmlns:hr="Highrise.UI"
        xmlns:editor="UnityEditor.UIElements"
        xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

    <hr:UIClosetCamera class="closet-camera landscape-narrow">
        <VisualElement name="_avatarContainer" class="closet-camera-image-container" />

        <hr:UIButton name="_finishButton" class="overlay-top-right">
            <hr:UILabel key="finish"/>
        </hr:UIButton>

        <VisualElement class="closet-camera-bottom-gradient"/>

        <VisualElement class="closet-camera-buttons" name="_buttonsContainer">

            <hr:UIButton name="_ratioButton" class="closet-camera-ratio-button">
                <hr:UIImage class="icon-portrait"/>
            </hr:UIButton>

            <hr:UIButton name="_profileBackgroundsButton" class="closet-camera-backgrounds-button">
                <hr:UIImage class="icon-inventory-background"/>
            </hr:UIButton>

            <hr:UIButton name="_emotesButton" class="closet-camera-emotes-button">
                <hr:UIImage class="icon-emotes"/>
            </hr:UIButton>

        </VisualElement>

        <hr:UIButton name="_photoButton" class="closet-camera-photo-button">
            <VisualElement class="closet-camera-photo-button_body"/>
            <VisualElement class="closet-camera-photo-button_border"/>
        </hr:UIButton>

        <hr:UIBottomDrawer name="_drawer" class="closet-camera-drawer overlay-bottom" half-expanded-position="0"
                           picking-mode="Ignore">

            <VisualElement class="closet-camera-tools-container" name="_toolsContainer">
                <VisualElement name="_slideoutHandle"/>
                <Slider class="closet-camera-pose-slider" name="_poseSlider"/>
                <VisualElement class="closet-camera-pose-tools">
                    <hr:UICollection name="_collection" class="closet-camera-emotes-collection">
                        <hr:UICollectionSection name="_emotesSection">
                            <hr:UICollectionCells layout="grid" layout-spacing="8"/>
                        </hr:UICollectionSection>
                        <hr:UICollectionSection name="_profileBackgroundsSection">
                            <hr:UICollectionCells name="_profileBackgroundsCells" layout="grid" layout-spacing="8"/>
                        </hr:UICollectionSection>
                    </hr:UICollection>
                </VisualElement>
            </VisualElement>
        </hr:UIBottomDrawer>


    </hr:UIClosetCamera>

</UXML>