<?xml version="1.0" encoding="utf-8"?>

<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrui="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd">

    <hr:UIPetInventoryDetailedView class="pet-inventory-detail">
        <VisualElement class="pet-inventory-detail-top">
            <VisualElement name="_imageContainer">
                <hr:UIImage name="_image" />
            </VisualElement>
            <VisualElement class="pet-inventory-detail-label-name">
                <hr:UILabel name="_name" key="pet_name_inventory" />
            </VisualElement>
            <VisualElement name="_subTypeContainer">
                <hr:UIImage name="_typeImage" />
                <VisualElement class="pet-inventory-detail-label-subname">
                    <hr:UILabel name="_subName" />
                </VisualElement>
            </VisualElement>
        </VisualElement>

        <VisualElement class="pet-inventory-detail-bottom">
            <hr:UICollection class="pet-inventory-detail-collection">
                <hrui:UICollectionSection>
                    <hr:UILabel key="pet_items_wearing" class="pet-inventory-detail-collection-section-title"/>
                    <hrui:UICollectionCells name="_wearingItemCells" layout="grid" layout-spacing="2" />
                </hrui:UICollectionSection>
                <hrui:UICollectionSection>
                    <hr:UILabel key="pet_items_not_wearing" class="pet-inventory-detail-collection-section-title"/>
                    <hrui:UICollectionCells name="_notWearingItemCells" layout="grid" layout-spacing="2" />
                </hrui:UICollectionSection>
            </hr:UICollection>
        </VisualElement>
    </hr:UIPetInventoryDetailedView>

</UXML>