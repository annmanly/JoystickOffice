}

.dont-ask-to-wear-again-checkbox {
    margin-top: 16px;
    align-self: center;
    flex-direction: row;
}

.dont-ask-to-wear-again-checkbox Toggle {
    flex-grow: 0;
}

.dont-ask-to-wear-again-checkbox Toggle #unity-checkmark {
    background-color: var(--color-fishbase-tuna);
}

.dont-ask-to-wear-again-checkbox Toggle:checked #unity-checkmark {
    background-color: var(--color-accents-secondary);
}

.dont-ask-to-wear-again-checkbox UILabel {
    flex-shrink: 1;
}