.pet-inventory-detail {
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--color-fishbase-eel);
}

.pet-inventory-detail-top {
    top: 0;
    height: 50%;
    background-color: var(--color-fishbase-eel);
}

.pet-inventory-detail-bottom {
    bottom: 0;
    height: 50%;
    background-color: var(--color-fishbase-blackfish);
    padding-left: 16px;
    padding-right: 16px;
}

.pet-inventory-detail UIItemCell {
    width: var(--4-column-item-min-width);
    height: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    max-height: var(--4-column-item-max-width);
}

.pet-inventory-detail-border-container {
    display: none;
    border-width: 3px;
    border-color: var(--color-accents-primary);
    border-radius: 8px;
}

.pet-inventory-detail__save-button {
    margin-top: 0px;
    margin-bottom: auto;
    padding: 13px 26px;
}

.pet-inventory-detail-collection-section-title {
    color: var(--color-fishbase-bonito);
    font-size: var(--font-size-l);
    -unity-text-align: middle-center;
    -unity-font-definition: var(--font-bold);
    width: auto;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    align-self: flex-start;
    padding-bottom: 15px;
    padding-top: 10px;
}

.pet-inventory-detail-label-name UILabel {
    color: var(--color-fishbase-bonito);
    font-size: var(--font-size-xl);
    -unity-text-align: upper-left;
    -unity-font-definition: var(--font-black);
    width: auto;
    white-space: normal;
    align-self: flex-start;
    padding-left: 16px;
    padding-bottom: 10px;
    padding-top: 0px;
}

.pet-inventory-detail-label-subname UILabel {
    color: var(--color-fishbase-bonito);
    font-size: var(--font-size-m);
    -unity-text-align: upper-left;
    -unity-font-definition: var(--font-black);
    opacity: 0.6;
    width: auto;
    white-space: normal;
    align-self: flex-start;
    margin-bottom: 4px;
}

.pet-inventory-detail #_hint {
    margin-top: 0px;
    width: 100%;
    padding-left: 16px;
    padding-right: 16px;
    padding-bottom: 16px;
}

.pet-inventory-detail-add-container {
    padding-left: 16px;
    padding-right: 16px;
    padding-bottom: 32px;
    position: absolute;
    bottom: var(--safe-area-bottom);
    left: 0;
    right: 0;
}

.pet-inventory-detail-container-gradient {
    background-image: var(--image-vgradient-180);
    width: 100%;
    height: 240px;
    align-items: center;
    padding-bottom: var(--safe-area-bottom);
    justify-content: flex-end;
}

.pet-inventory-detail #_typeImage {
    width: 18px;
    height: 18px;
    margin-right: 4px;
}

.pet-inventory-detail #_subTypeContainer {
	flex-direction: row;
    align-items: center;
    margin-left: 14px;
    margin-bottom: 16px;
    margin-top: 8px;
}
