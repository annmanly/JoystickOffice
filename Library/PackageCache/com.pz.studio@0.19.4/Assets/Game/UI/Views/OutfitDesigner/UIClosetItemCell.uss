.closet-item-cell {
    min-width: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
}

.landscape .closet-item-cell {
    min-width: 94px;
    max-width: 124px;
}

.closet-item-cell #_clothingImage {
    overflow: hidden;
    margin: auto;
}

.closet-item-cell #_selectedBadge {
    display: none;
    width: 22px;
    height: 22px;
    border-radius: 8px;
    bottom: 5px;
    right: 5px;
    padding: 3px;
    background-color: var(--color-accents-primary);
    --unity-image-tint-color: var(--color-fishbase-eel);
}

.closet-item-cell #_selectedOverlay {
    background-color: rgba(1, 1, 4, 0.35);
    display: none;
}

.closet-item-cell:checked #_selectedOverlay {
    display: flex;
}

.closet-item-cell:checked #_selectedBadge {
    display: flex;
}

.closet-item-cell__has-price #_selectedBadge {
    bottom: 29px;
}

.closet-item-cell #_accountBoundBadge {
    display: none;
    width: 18px;
    height: 18px;
    --unity-image-tint-color: var(--color-fishbase-anchovy);
    background-color: var(--color-fishbase-catfish);
    border-radius: 4px;
    left: 4px;
    bottom: 8px;
}

.closet-item-cell__has-price #_accountBoundBadge {
    bottom: 29px;
}

.closet-item-cell #_nftBadge {
    display: none;
    position: absolute;
    width: 18px;
    height: 18px;
    left: 4px;
    bottom: 8px;
    background-color: var(--color-tertiary-blueberry);
    --unity-image-tint-color: var(--color-fishbase-catfish);
    border-radius: 4px;
}

.closet-item-cell__has-price #_nftBadge {
    bottom: 29px;
}

.closet-item-cell #_nfiBadge {
    display: none;
    position: absolute;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-bonito);
    font-size: 11px;
    -unity-font-definition: var(--font-bold);
    border-radius: 4px;
    height: 16px;
    padding-left: 2px;
    padding-right: 2px;
    -unity-text-align: middle-center;
    left: 4px;
    bottom: 8px;
}

.closet-item-cell__has-price #_nfiBadge {
    bottom: 29px;
}

.closet-item-cell #_newBadge {
    display: none;
    -unity-font-definition: var(--font-black-italic);
    background-color: var(--color-basic-alert);
    color: var(--color-fishbase-eel);
    height: 16px;
    -unity-text-align: middle-center;
    width: 35px;
    border-radius: 4px;
    padding-left: 3px;
    padding-right: 3px;
    font-size: 11px;
    margin-right: 10px;
    margin-bottom: 24px;
}

.closet-item-cell #_price {
    background-color: var(--color-fishbase-catfish);
    width: 100%;
    height: 24px;
    justify-content: center;
    margin-top: 0;
    margin-bottom: 0;
}

.closet-item-cell #_price UILabel {
    font-size: 13px;
    -unity-font-definition: var(--font-bold);
}

.closet-item-cell .currency__disabled UILabel {
    color: var(--color-fishbase-bonito); 
}

.closet-item-cell #_gachaBadge {
    display: none;
    flex-shrink: 0;
    --unity-image-tint-color: var(--color-accents-primary);
    background-color: var(--color-fishbase-catfish);
    width: 100%;
    height: 24px;
    padding: 4px 0;
}

/* Mythical background */

.closet-item-cell UIMythicalBackground {
    display: none;
}

.closet-item-cell .mythical-background-mask {
    display: none;
}

.closet-item-cell.rarity-mythical UIMythicalBackground {
    display: flex;
}

.closet-item-cell.alt.rarity-mythical .mythical-background-mask {
    display: flex;
}

.closet-item-cell.profile-background-item {
    max-height: 104px;
    top: 12px;
}

.closet-item-cell.profile-background-item #_clothingImage {
    overflow: hidden;
    max-width: 72px;
    max-height: 72px;
    align-self: center;
    border-radius: 8px;
}

/* Effects icon */

.closet-item-cell #_effectsIcon {
    display: none;
    position: absolute;
    top: 2px;
    right: 2px;
    width: 24px;
    height: 24px;
    --unity-image-tint-color: var(--color-fishbase-eel-25);
}