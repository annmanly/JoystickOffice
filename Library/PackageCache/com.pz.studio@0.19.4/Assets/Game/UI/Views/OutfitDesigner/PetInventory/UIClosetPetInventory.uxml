<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrui="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIClosetPetInventory class="closet-pet-inventory">
      <VisualElement class="closet-pet-inventory__landscape-header rtl-reverse">
          <hr:UIImage class="icon-back" name="_landscapeBackButton"/>
      </VisualElement>
        <VisualElement name="_collectionDisplay" class="flex-grow">
            <hr:UICollection class="flex-grow">
                <hr:UICollectionSection>
                    <hr:UICollectionCells class="collection-extra-space" name="_itemGrid" layout="grid" layout-spacing="2"/>
                    <VisualElement name="_emptyDisplay" class="">
                        <hr:UIButton name="_addItemsButton" class="button-primary closet-pet-inventory__save-button">
                            <hr:UILabel key="pet_add_items"/>
                        </hr:UIButton>
                    </VisualElement>
                </hr:UICollectionSection>
            </hr:UICollection>
        </VisualElement>

    <VisualElement class="closet-pet-inventory-display-name-gradient overlay-bottom" name="_gradient" picking-mode="Ignore">
        <hr:UIButton name="_savePetLookButton" class="button-primary closet-pet-inventory__save-button">
            <hr:UILabel key="save_pet_look"/>
        </hr:UIButton>
    </VisualElement>

  </hr:UIClosetPetInventory>

</UXML>