<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:hrui="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

   <hr:UIPetBindItemsConfirm class="bind-items-confirm">
    <VisualElement class="bind-items-confirm-container">
        <VisualElement name="_bgContainer" class="closet__customization-top">
            <VisualElement name="_collectionDisplay">
                <hr:UICollection class="">
                    <hr:UICollectionSection name="_itemSection">
                      <hr:UICollectionCells name="_itemGrid" layout="grid" layout-spacing="6" class="bind-items-confirm-cells"/>
                    </hr:UICollectionSection>
                </hr:UICollection>
            <VisualElement class="overlay" name="_scrollBlocker"/>
            <VisualElement class="bind-items-confirm-gradient" name="_gradientImage" picking-mode="ignore"/>
            </VisualElement>
            <VisualElement class="bind-items-confirm-button-container">
                <VisualElement class="bind-items-confirm-title-label">
                    <hr:UILabel key="binding_confirm"/>
                </VisualElement>
                <VisualElement class="bind-items-confirm-label">
                    <hr:UILabel key="binding_confirm_desc"/>
                </VisualElement>
                <hr:UITimedDelayButton name="_bindItemsButton" class="button-bind-confirm" picking-mode="ignore">
                    <hr:UILabel name="_bindLabel" key="bind_pet_items_inventory" picking-mode="ignore"/>
                </hr:UITimedDelayButton>
                <hr:UIButton name="_cancelButton" class="bind-background">
                    <hr:UILabel key="cancel"/>
                </hr:UIButton>
            </VisualElement>
        </VisualElement>
    </VisualElement>

  </hr:UIPetBindItemsConfirm>

</UXML>