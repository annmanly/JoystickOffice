.image-share {
    background-color: var(--color-fishbase-eel);
    height: 100%;
}

.image-share #_image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.image-share__safe-area {
    position: absolute;
    top: var(--safe-area-top);
    right: var(--safe-area-right);
    bottom: var(--safe-area-bottom);
    left: var(--safe-area-left);
}

.image-share__top-buttons {
    position: absolute;
    left: 12px;
    top: 4px;
    width: 44px;
    flex-direction: column;
}

.rtl .image-share__top-buttons {
   left: auto;
   right: 12px;
 }

.image-share__bottom-buttons {
    position: absolute;
    bottom: 8px;
    left: 16px;
    right: 16px;
    height: 44px;
    flex-direction: row;
}

.rtl .image-share__bottom-buttons {
    flex-direction: row-reverse;
}

.image-share__button {
    background-color: transparent;
    padding: 0;
    width: 44px;
    height: 44px;
    margin-bottom: 4px;
}

.image-share__bottom-button-long {
    flex: 1;
    background-color: var(--color-fishbase-blackfish-40);
    margin-right: 8px;
}

.rtl .image-share__bottom-button-long {
    margin-right: 0;
    margin-left: 8px;
}

.image-share__bottom-button {
    flex: 0 44px;
    background-color: var(--color-fishbase-blackfish-40);
}

.image-share__button-shadow {
    border-radius: 12px;
    border-width: 0;
    height: 36px;
    width: 36px;
    align-items: center;
    justify-content: center;
}

.image-share__button-shadow,
.image-share__bottom-button,
.image-share__bottom-button-long {
    background-color: var(--color-fishbase-blackfish-40);
}

.image-share__button-shadow UIImage,
.image-share__bottom-button UIImage,
.image-share__bottom-button-long UIImage {
    width: 24px;
    height: 24px;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.image-share__bottom-button-long UILabel {
    margin: 0 4px;
    font-size: 17px;
}
