.badged-tab {
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.badged-tab #_title {
    margin: 0px;
    padding: 0px;
    font-size: 18px;
    -unity-text-align: middle-center;
}

.badged-tab #_countBadge {
    height: 18px;
    background-color: var(--color-basic-alert);
    color: var(--color-fishbase-eel);
    border-radius: 7px;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 1px;
    padding-bottom: 1px;
    font-size: 13px;
    -unity-text-align: middle-center;
    align-self: center;
    margin: 0;
    margin-left: 6px;
}
