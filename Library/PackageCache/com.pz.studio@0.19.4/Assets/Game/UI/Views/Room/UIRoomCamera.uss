.room-camera {
    background-color: var(--color-fishbase-eel);
}

.room-camera #_image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.room-camera__safe-area {
    position: absolute;
    top: var(--safe-area-top);
    right: var(--safe-area-right);
    bottom: var(--safe-area-bottom);
    left: var(--safe-area-left);
}

.room-camera .room-camera__margin {
    margin-top: auto;
}

.room-camera__button {
    background-color: transparent;
    padding: 0;
    margin-left: 12px;
    margin-bottom: 12px;
    margin-right: auto;
}

.rtl .room-camera__button {
    margin-left: auto;
    margin-right: 12px;
}

.room-camera__button-shadow, .room-camera__button-shadow-primary {
    border-radius: 12px;
    border-width: 0;
    height: 36px;
    width: 36px;
    align-items: center;
    margin-right: 12px;
}

.rtl .room-camera__button-shadow,
.rtl .room-camera__button-shadow-primary {
    margin-right: 0;
    margin-left: 12px;
}

.room-camera__button-shadow {
    background-color: var(--color-fishbase-blackfish-40);
}

.room-camera__button-shadow-primary {
    background-color: var(--color-accents-primary);
}

.room-camera__button-shadow Image, .room-camera__button-shadow-primary Image {
    width: 24px;
    height: 24px;
}

.room-camera__button-shadow Image {
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.room-camera__button-shadow-primary Image {
    --unity-image-tint-color: var(--color-fishbase-catfish);
}

.room-camera #_loadingOverlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-fishbase-blackfish-40);
}

.room-camera #_flashOverlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-fishbase-whitefish);
}
