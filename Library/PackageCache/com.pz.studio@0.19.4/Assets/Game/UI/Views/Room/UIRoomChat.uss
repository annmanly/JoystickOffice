/*

    Spectator

*/

.room-chat #_spectator {
    position: absolute;
    top: -44px;
    left: 0;
    right: 0;
    height: 44px;
    border-radius: 12px;
    color: var(--color-fishbase-mackerel);
    padding-left: 12px;
    padding-right: 6px;
    margin-left: 8px;
    margin-right: 8px;
    overflow: hidden;
    display: none;
    flex-grow: 1;
}

.portrait .room-chat .icon-spectator {
    width: 16px;
    height: 16px;
    margin-left: 0px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image-tint-color: var(--color-fishbase-mackerel);
}

.spectator .room-chat #_spectator {
    display: flex;
}

.spectator .room-chat #_chatInput {
    display: flex;
}

.spectator .room-chat #_emotesButton {
    display: none;
}

.spectator.guest .room-chat #_joinRoomButton {
    display: flex;
}

.room-chat #_joinRoomButton {
    height: 32px;
    margin: auto 0 auto auto;
    padding: 0;
    padding-left: 8px;
    padding-right: 8px;
    border-radius: 8px;
}

.room-chat .icon-spectator {
    width: 24px;
    height: 24px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image-tint-color: var(--color-fishbase-mackerel);
}


.room-chat #_spectator > .label {
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 8px;
    -unity-font-style: bold;
}

/*

    HUD heads

*/

.room-chat #_expandedEventHud {
    display: none;
    left: auto;
    right: 12px;
}

.room-chat #_backpackHud {
    display: none;
    bottom: 52px;
    left: auto;
    right: 12px;
}

.room-chat #_eventHudContainer {
    width: 100%;
    margin-left: 8px;
    margin-right: 8px;
}