.room-portrait {
    flex-grow: 1;
}

.room-portrait .game-portrait__right {
    flex-direction: row;
    position: absolute;
    right: 0px;
    top: 0px;
    bottom: 0px;
}

.room-portrait .game-portrait__left {
    flex-direction: row;
    position: absolute;
    left: 0px;
    top: 0px;
    bottom: 0px;
}

.room-portrait #_touchBlocker {
    display: none;
    width: 100%;
    height: 100%;
    background-color: var(--color-fishbase-blackfish-40);
}

.room-portrait .room-info {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    padding-top: var(--safe-area-top);
}

.room-portrait__top {
    margin-top: var(--safe-area-top);
    flex-grow: 1;
}

.room-portrait #_questsButton {
    margin-right: auto;
    margin-top: 12px;
}

.room-portrait #_questsText {
    margin-top: 4px;
    -unity-text-align: middle-center;
    font-size: 13px;
    -unity-font-definition: var(--font-bold);
    color: var(--color-fishbase-whitefish);
    text-shadow: 0px 1px 4px rgba(0, 0, 0, 0.5);
}

.room-portrait #_questsButton Image {
    width: 44px;
    height: 44px;
}

.room-portrait__top-right-buttons .button-blur {
    flex-direction:row;
}

.room-portrait__top #_editRoomButton,
.room-portrait__top #_cameraButton {
    background-color: rgba(2,0,1,0.3);
    width: 36px;
    height: 36px;
    overflow: hidden;
    border-radius: 12px;
    margin-right: 8px;
}

.rtl .room-portrait__top #_editRoomButton {
    margin-left: 8px;
    margin-right: 0;
}

.rtl .room-portrait__top #_cameraButton{
    margin-left: 8px;
    margin-right: 0;
}

.room-portrait__top #_editRoomButton > Image,
.room-portrait__top #_cameraButton > Image {
    width: 24px;
    height: 24px;
    margin: auto;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.room-portrait__top-right {
    position: absolute;
    top: 4px;
    right: 12px;
    flex-direction: column;
    align-items: flex-end;
}

.rtl .room-portrait__top-right {
    top: 4px;
    left: 12px;
    right: auto;
    align-items: flex-start;
}

.room-portrait__top-left {
    position: absolute;
    top: 0px;
    left: 6px;
    flex-direction: column;
    align-items: flex-start;
}

.rtl .room-portrait__top-left {
    top: 0;
    right: 12px;
    left: auto;
    align-items: flex-end;
}

.room-portrait__top-right-buttons {
    flex-direction: row;
    margin-bottom: 12px;
}

.rtl .room-portrait__top-right-buttons {
    flex-direction: row-reverse;
}

/**

    Recording Mode

*/

.recording-mode .room-portrait__top,
.recording-mode .room-portrait #_left,
.recording-mode .room-portrait #_right,
.recording-mode .room-portrait #_roomChat,
.recording-mode .room-portrait__top-right-buttons
{
    opacity: 0;
}

/** Custom UI for 3d worlds */
.game-portrait #_roomCustom {
    position: absolute;
    top: var(--safe-area-top);
    left: 0;
    right: 0;
    bottom: 64px;
    padding-top: 48px;
    display: none;
}

/** Disable custom ui only when in a 3d world */
.game-portrait.is-world #_roomCustom {
    display: flex;
}

.room-portrait-keyboard-dismisser {
    display: none;
}

.room-portrait #_roomChat .room-chat {
    margin-top: auto;
}

/* Home Widgets */
.room-portrait UIWidgets {
    margin: 120px 12px 64px;
    flex-grow: 1;
}