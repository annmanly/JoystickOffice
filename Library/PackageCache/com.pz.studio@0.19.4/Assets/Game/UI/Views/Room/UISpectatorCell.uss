.spectator-cell {
    padding: 4px 16px;
}

.spectator-cell #_thumbnail {
    width: 24px;
    height: 24px;
}

.spectator-cell #_thumbnail > * {
    border-radius: 8px;
}

.spectator-cell #_userName {
    color: var(--color-fishbase-anchovy);
    margin-left: 6px;
    margin-top: auto;
    margin-bottom: auto;
}

.rtl .spectator-cell #_userName {
    margin-left: 0;
    margin-right: 6px;
}

.spectator-cell__muted-indicator {
    width: 24px;
    height: 24px;
    padding: 2px;
    margin-left: auto;
    --unity-image-tint-color: var(--color-fishbase-salmon);
}

.rtl .spectator-cell__muted-indicator {
    margin-left: 0;
    margin-right: auto;
}
