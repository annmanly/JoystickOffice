<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIRoomPortrait class="room-portrait">
    <hr:UIRoom class="overlay" name="_room"/>
    <VisualElement name="_roomCustom" picking-mode="Ignore"/>
    <VisualElement name="_keyboardDismisser" class="overlay room-portrait-keyboard-dismisser"/>
    <VisualElement class="room-portrait__widgets-container overlay" picking-mode="Ignore">
      <hr:UIWidgets name="_widgets" picking-mode="Ignore"/>
    </VisualElement>
    <hr:UIChatContainer name="_roomChat" class="overlay" picking-mode="Ignore"/>

    <VisualElement class="room-portrait__top overlay-top" picking-mode="Ignore" name="_roomControls">
      <VisualElement class="room-portrait__top-left" picking-mode="Ignore">
        <hr:UIHamburgerButton name="_hamburgerButton" background="darker" />
      </VisualElement>
      <VisualElement class="room-portrait__top-right" picking-mode="Ignore">
        <VisualElement class="room-portrait__top-right-buttons" picking-mode="Ignore">
          <VisualElement name="_cameraButton" focusable="true">
            <hr:UIBlur class="overlay"/>
            <Image class="icon-camera"/>
          </VisualElement>
          <VisualElement name="_editRoomButton" focusable="true">
            <hr:UIBlur class="overlay"/>
            <Image class="icon-room-edit"/>
          </VisualElement>
          <hr:UIRoomInfoButton name="_roomInfoButton" focusable="true"/>
        </VisualElement>
      </VisualElement>
    </VisualElement>

    <VisualElement name="_touchBlocker" class="overlay"/>

  </hr:UIRoomPortrait>

</UXML>