<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UISearchControl class="search-control rtl-reverse">
    <VisualElement class="search-control-collapsed rtl-reverse" name="_collapsed">
      <hr:UIImage class="icon-search"/>
      <hr:UILabel class="search-control-query" name="_queryLabel"/>
    </VisualElement>
    <VisualElement class="search-control-expanded rtl-reverse" name="_expanded">
      <hr:UITextField name="_search" placeholder="search" clear="true" search="true" class="search-control-expanded-input"/>
      <hr:UIButton class="button-default-transparent search-control-expanded-back-button" name="_backButton">
        <hr:UIImage class="icon-back rtl-rotate"/>
      </hr:UIButton>
    </VisualElement>
  </hr:UISearchControl>

</UXML>