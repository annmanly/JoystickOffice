<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIMyItemsPage class="my-items-page">
    <hr:UIMyItemsFilters class="my-items-page-filters" name="_filters"/>
    <hr:UIPullToRefresh name="_pullToRefresh">
    <hr:UICollection name="_myItemsCollection">
      <hr:UICollectionSection name="_tradableItemsSection" hide-when-empty="false">
        <hr:UILabel key="tradable" class="my-items-page__section-title"/>
        <hr:UILabel key="you_can_trade_these" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_tradableItems" class="section-items" layout="grid" layout-spacing="8" fixed-height="true"/>
        <hr:UIEmptyState name="_emptyTradableItemsState" empty-message="no_items_found"/>
        <VisualElement name="_vaultButtonsContainer">
          <hr:UIButton name="_goToVaultButton" class="button-primary">
            <hr:UILabel key="go_to_vault"/>
          </hr:UIButton>
          <hr:UILabel key="how_do_gold_bars_work" name="_goldBarsFaqLabel"/>
        </VisualElement>
      </hr:UICollectionSection>

      <hr:UICollectionSection name="_grabItemsSection" hide-when-empty="true">
        <hr:UILabel key="currently_not_eligible" class="my-items-page__section-title"/>
        <hr:UILabel key="not_eligible_items_description" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_grabItems" class="my-items-page__cells" layout="grid" layout-spacing="8" fixed-height="true"/>
      </hr:UICollectionSection>

      <hr:UICollectionSection name="_eventItemsSection" hide-when-empty="true">
        <hr:UILabel key="currently_not_eligible_events" class="my-items-page__section-title"/>
        <hr:UILabel key="event_items_hint" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_eventItems" class="my-items-page__cells" layout="grid" layout-spacing="8" fixed-height="true"/>
      </hr:UICollectionSection>
      
      <hr:UICollectionSection name="_nonTradableItemsSection" hide-when-empty="true">
        <hr:UILabel key="account_bound" class="my-items-page__section-title"/>
        <hr:UILabel key="these_can_not_be_traded" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_nonTradableItems" class="my-items-page__cells" layout="grid" layout-spacing="8" fixed-height="true"/>
      </hr:UICollectionSection>

      <hr:UICollectionSection name="_petInventoryItemsSection" hide-when-empty="false">
        <hr:UILabel key="pet_items_tradable" class="my-items-page__section-title"/>
        <hr:UICollectionCells name="_petInventoryItems" class="my-items-page__cells" layout="grid" layout-spacing="8" fixed-height="true"/>
        <hr:UIEmptyState name="_emptyPetInventoryTradableItemsState" empty-message="no_items_found"/>
      </hr:UICollectionSection>

      <hr:UICollectionSection name="_nonTradablePetInventoryItemsSection" hide-when-empty="true">
        <hr:UILabel key="account_bound" class="my-items-page__section-title"/>
        <hr:UILabel key="these_can_not_be_traded" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_nonTradablePetInventoryItems" class="my-items-page__cells" layout="grid" layout-spacing="8" fixed-height="true"/>
      </hr:UICollectionSection>
      
      <hr:UICollectionSection name="_nftItemsSection">
        <hr:UILabel key="account_bound" class="my-items-page__section-title"/>
        <hr:UILabel key="these_can_not_be_traded" class="my-items-page__section-caption"/>
        <hr:UICollectionCells name="_nftItems" class="my-items-page__cells" layout="grid" layout-spacing="8" layout-columns="2" cell-aspect-ratio="1:1"/>
      </hr:UICollectionSection>
      
      <hr:UICollectionSection name="_noResultsSection">
        <hr:UIEmptyState empty-message="no_items_found"/>
      </hr:UICollectionSection>
      
    </hr:UICollection>
    
    </hr:UIPullToRefresh>
    
  </hr:UIMyItemsPage>

</UXML>