.avatar-view {
    align-items: center;
    justify-content: center;
    height: 100%;
    background-color: var(--color-fishbase-eel);
}

.avatar-view #_characterContainer {
    width: 100%;
    height: 100%;
}

.avatar-view.background-pattern #_characterImage {
    background-image: var(--image-closet-background-pattern);
    -unity-background-image-tint-color: var(--color-fishbase-catfish);
    background-size: auto;
    background-repeat: repeat;
}
