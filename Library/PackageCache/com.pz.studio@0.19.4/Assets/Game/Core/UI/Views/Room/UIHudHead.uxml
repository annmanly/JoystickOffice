<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIHudHead class="hud-head">
    <VisualElement class="hud-head-content" name="_content">
      <hr:UIImage class="hud-head-color-gradient overlay" name="_gradient"/>
      <VisualElement class="hud-head-gradient">
        <hr:UIImage class="hud-head-icon" name="_icon"/>
      </VisualElement>
      <hr:UIOutlinedLabel class="hud-head-label" name="_label" auto-sizing-font-size="9"/>
    </VisualElement>
    <hr:UIImage class="hud-head-header-image overlay-top" name="_headerImage"/>
    <VisualElement class="hud-head-alert-icon-container unread-indicator-bordered" name="_unreadIndicator">
    </VisualElement>
    
    <VisualElement class="hud-head-new-indicator" name="_newIndicator">
      <hr:UILabel key="_new_loud" uppercase="true" auto-sizing-font-size="13" />
    </VisualElement>

  </hr:UIHudHead>

</UXML>