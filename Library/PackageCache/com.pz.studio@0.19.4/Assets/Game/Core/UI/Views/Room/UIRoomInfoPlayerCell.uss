.room-info-player-cell-content {
    height: 36px;
    align-items: center;
    padding: 0px 4px;
}

.room-info-player-cell-in-channel .room-info-player-cell-content {
    padding: 0px 0px 0px 22px;
}

.rtl .room-info-player-cell-in-channel .room-info-player-cell-content {
    padding: 0px 22px 0px 0px;
}

.room-info-player-cell-name-container {
    align-items: center;
}

.room-info-player-cell #_name {
    white-space: normal;
}

.room-info-player-cell-name-info {
    flex-grow: 1;
    align-items: flex-start;
    justify-content: center;
    -unity-font-style: bold;
}

.rtl .room-info-player-cell-name-info {
    align-items: flex-end;
}

.room-info-player-cell-thumbnail-container {
    margin-right: 4px;
}

.rtl .room-info-player-cell-thumbnail-container {
    margin-right: 0;
    margin-left: 4px;
}

.room-info-player-cell-thumbnail-container .user-thumbnail {
    height: 24px;
    width: 24px;
    flex-shrink: 0;
}

.room-info-player-cell-thumbnail-container .user-thumbnail .user-thumbnail__image-container {
    border-radius: 8px;
}

.room-info-player-cell .icon-host {
    width: 16px;
    height: 16px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image-tint-color: var(--color-fishbase-whitefish);
    margin-right: 4px;
    display: none;
}

.rtl .room-info-player-cell .icon-host {
    margin-right: 0;
    margin-left: 4px;
}

.room-info-player-cell-host .icon-host {
    display: flex;
}

.room-info-player-cell-thumbnail-container {
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 24px;
    height: 36px;
}

.room-info-player-cell-thumbnail-container #_thumbnailBorder {
    border-color: var(--color-accents-secondary);
    border-radius: 8px;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.room-info-player-cell #_name {
    margin: 0;
    margin-top: auto;
    margin-bottom: auto;
    padding: 0;
    -unity-font-style: bold;
    font-size: 15px;
    color: var(--color-fishbase-anchovy);
    flex-grow: 1;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.room-info-player-cell-icons Image {
    width: 15px;
    height: 15px;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 0px;
    margin-right: 6px;
    display: none;
}

.rtl .room-info-player-cell-icons Image {
    margin-left: 6px;
    margin-right: 0px;
}

.room-info-player-cell-icons-speaker Image {
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.room-info-player-cell-icons-listener Image {
    --unity-image-tint-color: var(--color-fishbase-salmon);
}

.room-info-player-cell-icons-muted Image {
    --unity-image-tint-color: var(--color-basic-destructive);
}

.room-info-player-cell-mute-icon-disabled {
    --unity-image: var(--image-icon-voice-no-permissions);
}

.room-info-player-cell-mute-icon-muted {
    --unity-image: var(--image-icon-voice-muted-new);
}

.room-info-player-cell-mute-icon-unmuted {
    --unity-image: var(--image-icon-voice);
}
