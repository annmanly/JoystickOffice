/*

    Chat

*/

.chat .blur-darken {
    background-color: rgba(2,0,1,0.3);
}

.chat UITextField {
    background-color: rgba(0,0,0,0);
    color: var(--color-fishbase-bonito);
    border-width: 0;
    flex-grow: 1;
    padding: 0;
    margin: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.chat .unity-text-field__input {
    border-radius: 0px;
    border-width: 0px;
    padding: 0;
    padding-left: 44px;
    padding-right: 44px;
    margin: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.chat .text-field .text-field__input {
    color: var(--color-fishbase-bonito);
    -unity-text-align: middle-left;
}

/*

    Voice

*/

.chat #_voiceButton {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    overflow: hidden;
    display: none;
    flex-shrink: 0;
}

.chat.chat--has-voice #_voiceButton {
    display: flex;
}

.chat #_voiceButton > Image {
    width: 28px;
    height: 28px;
    margin: auto;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.chat.chat--is-muted #_voiceButton Image {
    --unity-image: var(--image-icon-voice-muted);
}

/*

    Dismiss

*/

.chat #_above {
    flex-direction: row;
    margin-bottom: 64px;
}

.chat.chat--show-history #_above {
    margin-bottom: 8px;
}

.chat #_controls {
    margin-left: auto;
    margin-right: auto;
    flex-direction: row;
}

.chat #_voiceButton {
    margin-left: 8px;
}

/*

    Action Menu

*/

.chat UIActionPicker {
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 8px;
    display:none;
}

.landscape .chat UIActionPicker {
    margin-right: 0;
}

/*

    History

*/

.chat #_history {
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 0px;
    padding-bottom: 60px;
    background-color: var(--color-fishbase-blackfish-80);
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    display: none;
}

.landscape .chat #_historyCollection {
    height: 340px;
}

.portrait .chat #_historyCollection {
    height: 268px;
    margin-left: 0px;
    margin-right: 0px;
    flex-shrink: 1;
}


.chat #_slideoutHandle {
    background-color: var(--color-fishbase-bonito-50);
    border-radius: var(--border-width-s);
    width: 58px;
    height: 6px;
    margin: 9px auto;
}

.chat #_historyDrawer {
    height: initial;
    display: none;
}

.chat.chat #_historyDrawer {
    background-color: var(--color-fishbase-blackfish-60);
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.chat #_history .message-view {
    margin-top: auto;
}

.chat #_history .message-view .scroll-bar {
    margin-top: 16px;
    margin-bottom: 16px;
}

/*

    Chat Bar

*/

.chat-chat-bar-container {
    flex-direction: row;
    flex-grow: 1;
    width: auto;
    margin: 0px 8px 12px;
    align-items: center;
}

.chat #_chatBarParent {
    flex-grow: 1;
}

.chat #_chatBar {
    flex-grow: 1;
    min-height: 48px;
    padding-left: 6px;
    padding-right: 6px;
    align-items: center;
}

.chat #_chatInputContainer {
    flex-grow: 1;
    margin-right: 8px;
}

.chat #_chatInput {
    min-height: 50px;
    padding-top: 6px;
    padding-bottom: 6px;
}

.chat #_chatBarBackground {
    overflow: hidden;
    border-radius: 12px;
}

.chat.chat--show-history #_chatBar .blur-darken {
    background-color: rgba(2,0,1,0.7);
}

.chat #_chatBar .button {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    padding: 0px;
    background-color: var(--color-fishbase-bonito-15);
}

.chat #_chatBar .button Image {
    width: 22px;
    height: 22px;
}

.chat #_chatBar .button__content {
    flex-grow: 1;
}

.chat.chat--show-history #_historyButton {
    background-color: var(--color-accents-secondary-25);
}

.chat.chat--show-history #_historyButton Image {
    --unity-image-tint-color: var(--color-accents-secondary);
}

.chat #_chatInput .text-field__input .label {
    color: var(--color-fishbase-bonito-50);
    -unity-font-definition: var(--font-regular);
}

.chat #_sendMessageButton {
    width: 36px;
    height: 36px;
    display: none;
    align-self: flex-end;
    margin-bottom: 6px;
    margin-top: auto;
    transition-duration: .15s;
    transition-property: translate;
    translate: 80px 0 0;
    padding: 4px;
}

.chat.chat--has-text #_sendMessageButton {
    translate: 0 0 0;
    display: flex;
}

.chat #_sendMessageButton Image {
    width: 24px;
    height: 24px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image-tint-color: var(--color-accents-primary);
}

.chat.chat--has-text #_emotesButton {
    display: none;
}

.chat.chat--show-emotes .chat-keyboard-container {
    display: none;
}

/*

    Emotes

*/

.chat #_emotes {
    background-color: var(--color-fishbase-eel);
    flex-shrink: 0;
    flex-grow: 1;
    height: 0px;
    opacity: 0;
}

.landscape .world-chat #_emotes {
    width: 40%;
    min-width: var(--landscape-chat-min-width);
    margin-left: auto;
    margin-right: auto;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

.landscape .room-chat #_emotes {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

.chat #_emotes .scroll-view__gradients {
    display: none;
}

.chat.chat--show-emotes #_emotesButton,
.chat--show-emotes #_emotesButton {
    background-color: var(--color-accents-secondary-25);
}

.chat.chat--show-emotes #_emotesButton Image,
.chat--show-emotes #_emotesButton Image{
    --unity-image-tint-color: var(--color-accents-secondary);
}

/*

    Typing Indicator

*/

.chat #_typingIndicator {
    color: var(--color-fishbase-mackerel);
    -unity-font-definition: var(--font-thin-italic);
    font-size: 11px;
    padding: 0;
    margin: 0;
    margin-top: 4px;
    margin-bottom: 4px;
}

.chat--show-history #_typingIndicator {

}


    /*

        Whisper

    */

.chat #_userSuggestionsContainer {
    bottom: 52px;
    max-height: 172px;
    margin-right: 36px;
}

.chat #_userSuggestions {
    background-color: var(--color-fishbase-catfish);
    border-radius: 16px;
    margin-right: auto;
    padding: 6px;
}

.chat #_userSuggestions .scroll-bar__thumb {
    min-height: 16px;
}

.chat .text-field__input {
    margin-left: 8px;
}

/*

    New messages indicator

*/

.room-chat__new-messages-indicator-container {
    bottom: 64px;
    align-items: flex-end;
    display: none;
    right: 16px;
    flex-shrink: 1;
}

.chat #_newMessagesIndicatorLabel,
.chat-container #_newMessagesIndicatorLabel{
    background-color: var(--color-fishbase-tuna);
    color: var(--color-fishbase-bonito);
    border-radius: 8px;
    font-size: 15px;
    -unity-font-definition: var(--font-bold);
    padding: 4px 8px;
}

/*

    Unread Messages Indicator

 */

.chat #_historyUnreadIndicator,
.chat-container #_historyUnreadIndicator {
    top: 6px;
    right: -3px;
    display: none;
}
