<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UITrustAndSafetyPopup class="trust-and-safety-popup">
    
    <Image name="_icon" class="icon-shield-warning"/>
    <hr:UILabel name="_title"/>
    <hr:UILabel name="_subtitle"/>
    <hr:UILabel name="_message"/>
    <hr:UILabel name="_timer"/>

    <VisualElement name="_bulletsContainer"/>

    <VisualElement name="_reasonContainer">
      <hr:UIScrollView class="trust-and-safety-popup-reason-scrollview">
        <hr:UILabel name="_reason"/>
      </hr:UIScrollView>
    </VisualElement>
    
    <hr:UILabel name="_footer"/>

    <hr:UIButton class="button-primary" name="_confirmButton">
      <hr:UILabel key="okay" name="_confirmButtonLabel" />
    </hr:UIButton>

    <hr:UIButton class="button-primary-text-no-outline" name="_cancelButton">
      <hr:UILabel key="cancel" name="_cancelButtonLabel" />
    </hr:UIButton>

    <hr:UIKeyboardContainer/>
  </hr:UITrustAndSafetyPopup>

</UXML>