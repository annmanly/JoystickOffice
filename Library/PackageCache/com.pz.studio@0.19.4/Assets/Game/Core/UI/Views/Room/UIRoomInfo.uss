.room-info {
    flex-grow: 1;
    height: 100%;
}

.room-info .collection {
    flex-grow: 1;
}

.room-info .collection-section {
    padding: 0px 8px;
}

/** Header **/

.room-info__header-and-radio {
    margin: 0 -8px;
    background-color: var(--color-fishbase-catfish);
}

/** Player Count **/

.room-info-player-count {
    height: 24px;
    padding: 4px 2px 0px;
}

.room-info-player-count .label {
    color: var(--color-fishbase-salmon);
    font-size: var(--font-size-s);
    -unity-font-style: bold;
    margin: 0;
    padding: 0;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 4px;
}

.rtl .room-info-player-count .label {
    margin-left: 0;
    margin-right: 4px;
}

.room-info-player-count Image {
    width: 16px;
    height: 16px;
    --unity-image-tint-color: var(--color-fishbase-salmon);
    margin-top: auto;
    margin-bottom: auto;
}

/** Spectator **/

.room-info-spectator-count {
    height: 36px;
}

.room-info-spectator-count .label {
    color: var(--color-fishbase-anchovy);
    font-size: 15px;
    -unity-font-style: bold;
    margin: 0;
    padding: 0;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 10px;
}

.room-info-spectator-count Image {
    width: 18px;
    height: 18px;
    --unity-image-tint-color: var(--color-fishbase-salmon);
    margin-top: auto;
    margin-bottom: auto;
}

.room-info-spectator-count .icon-spectator {
    margin-left: 2px;
}

.rtl .room-info-spectator-count .icon-spectator {
    margin-right: 2px;
}

.room-info-spectator-in-channel .room-info-spectator-count .icon-spectator {
    margin-left: 22px;
}

.rtl .room-info-spectator-in-channel .room-info-spectator-count .icon-spectator {
    margin-right: 22px;
    margin-left: 10px;
}

/** Scroll padding **/

.room-info-bottom-scroll-padding {
    height: 36px;
}

.room-info-bottom-scroll-padding--voice {
    height: 60px;
}

.room-info-bottom-scroll-padding--boost {
    height: 150px;
}

/*
    Footer
 */

.room-info__footer {
    position: absolute;
    left: 0px;
    right: 0px;
    bottom: 0px;
    align-items: center;
}

.room-info__footer #_roomBoost {
    margin-bottom: 15px;
}

.room-info__controls {
    width: 100%;
    padding-bottom: var(--safe-area-bottom);
    background-color: var(--color-fishbase-eel);
    border-top-width: 1px;
    border-top-color: var(--color-fishbase-catfish);
    align-items: center;
}

.room-info__controls .room-info__leave-button {
    background-color: var(--color-transparent);
    margin-right: 8px;
}

.rtl .room-info__controls .room-info__leave-button {
    margin-right: 0;
    margin-left: 8px;
}

.room-info__voice-controls-container {
    flex-grow: 1;
}

.room-info__controls .room-info__leave-button UIImage {
    --unity-image-tint-color: var(--color-basic-destructive);
    margin-right: 4px;
}

.rtl .room-info__controls .room-info__leave-button UIImage {
    margin-right: 4px;
    margin-left: 4px;
}

/** Landscape **/
.landscape .game .room-info {
    width: 375px;
    flex-shrink: 0;
}
