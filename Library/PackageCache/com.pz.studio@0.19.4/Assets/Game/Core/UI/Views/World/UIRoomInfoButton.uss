.room-info-button {
    height: 36px;
    border-radius: 12px;
    flex-direction: row;
    color: var(--color-fishbase-bonito);
    background-color: rgba(2,0,1,0.3);
    padding-left: 12px;
    padding-right: 12px;
    font-size: var(--font-size-l);
    overflow: hidden;
}

.room-info-button .room-info-button__spectators Image,
.room-info-button .room-info-button__avatars Image {
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.room-info-button__avatars {
    flex-direction: row;
}

.rtl .room-info-button__avatars {
    flex-direction: row-reverse;
}

.room-info-button__avatars Image {
    width: 16px;
    height: 16px;
    margin-top: auto;
    margin-bottom: auto;
    margin-right: 2px;
    --unity-image: var(--image-icon-visitors);
}

.rtl .room-info-button__avatars Image {
    margin-right: 0;
    margin-left: 2px;
}

.room-info-button__spectators {
    flex-direction: row;
    margin-left: 4px;
    margin-right: 4px;
}

.room-info-button__spectators Image {
    width: 22px;
    height: 22px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image: var(--image-icon-spectators);
}

.room-info-button__avatars .unity-label {
    padding:0;
    margin: 0;
    align-self: center;
    padding-right: 4px;
    -unity-font-definition: var(--font-bold);
}
