.text-commands {
    height: 100%;
}

.text-commands .text-commands-panel-container {
    padding: 8px;
    max-height: 246px;
}

.text-commands .text-commands-panel-container .text-commands-panel {
    background-color: var(--color-fishbase-catfish);
    border-radius: 16px;
}

.text-commands .top-space {
    flex-grow: 1;
}

.text-commands.text-commands-small .text-commands-panel-container {
    max-height: 150px;
}

.text-commands-panel {
    max-width: var(--lanscape-dialog-max-width);
}

.landscape .text-commands UIKeyboardContainer {
    display: none;
}

.landscape .text-commands-wide UIKeyboardContainer {
    display: flex;
}