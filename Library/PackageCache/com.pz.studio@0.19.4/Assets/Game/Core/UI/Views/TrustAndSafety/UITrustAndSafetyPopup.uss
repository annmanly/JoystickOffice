.trust-and-safety-popup {
    border-radius: 20px;
    background-color: var(--color-fishbase-catfish);
    margin: 16px;
    margin-top: auto;
    bottom: var(--safe-area-bottom);
    padding-bottom: 16px;
}

.landscape .trust-and-safety-popup {
    width: var(--lanscape-dialog-max-width);
    margin-left: auto;
    margin-right: auto;
}

.trust-and-safety-popup #_icon{
    width: 118px;
    height: 118px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 24px;
}

.trust-and-safety-popup #_title {
    -unity-text-align: middle-center;
    white-space: normal;
    color: var(--color-fishbase-whitefish);
    margin-top: 24px;
    margin-left: 16px;
    margin-right: 16px;
    -unity-font-style: bold;
    font-size: 24px;
}

.trust-and-safety-popup #_subtitle {
    display: none;
    -unity-text-align: middle-center;
    white-space: normal;
    color: var(--color-fishbase-mackerel);
    margin-top: 16px;
    margin-left: 16px;
    margin-right: 16px;
    font-size: 15px;
}

.trust-and-safety-popup #_footer {
    display: none;
    -unity-text-align: middle-center;
    white-space: normal;
    color: var(--color-fishbase-mackerel);
    margin-top: 24px;
    margin-left: 16px;
    margin-right: 16px;
    font-size: 15px;
}

.trust-and-safety-popup #_bulletsContainer {
    display: none;
    margin: 16px;
    margin-left: 32px;
    margin-right: 32px;
    margin-bottom: 16px;
}

.trust-and-safety-popup #_bulletsContainer .flex-row {
    margin-top: 8px;
}

.trust-and-safety-popup #_bulletsContainer UILabel {
    color: var(--color-fishbase-whitefish);
    white-space: normal;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 8px;
    font-size: 17px;
}

.trust-and-safety-popup #_bulletsContainer Image {
    width: 12px;
    height: 12px;
    margin-top: auto;
    margin-bottom: auto;
    background-color: var(--color-accents-primary);
    border-radius: 190px;
}

.trust-and-safety-popup #_reasonContainer {
    display: none;
    margin: 16px;
    margin-bottom: 0;
    border-radius: 16px;
    background-color: var(--color-fishbase-eel);
    max-height: 120px;
    overflow: hidden;
}

.trust-and-safety-popup #_reason {
    padding: 12px;
    font-size: 15px;
    white-space: normal;
    color: var(--color-fishbase-mackerel);
}

.trust-and-safety-popup #_message {
    display: none;
    -unity-text-align: middle-center;
    white-space: normal;
    color: var(--color-fishbase-mackerel);
    margin-top: 8px;
    margin-left: 16px;
    margin-right: 16px;
    font-size: 15px;
}

.trust-and-safety-popup #_timer {
    display: none;
    -unity-text-align: middle-center;
    color: var(--color-fishbase-whitefish);
    font-size: 17px;
    -unity-font-definition: var(--font-bold);
    padding: 8px;
    margin-top: 20px;
}

.trust-and-safety-popup #_checkboxContainer {
    display: none;
    margin-left: 8px;
    margin-top: 8px;
    flex-direction: row;
}


.trust-and-safety-popup #_confirmButton {
    margin: 20px 16px 0px;
    margin-top: 20px;
    font-size: 17px;
    border-radius: 12px;
    -unity-font-definition: var(--font-bold);
}

.trust-and-safety-popup #_cancelButton {
    margin: 8px 16px 0px;
    font-size: 17px;
}

.trust-and-safety-popup .unity-toggle > .unity-toggle__input > .unity-toggle__checkmark
{
    background-color: var(--color-basic-destructive);
}

.trust-and-safety-popup .unity-toggle > .unity-toggle__input:checked > .unity-toggle__checkmark
{
    background-color: var(--color-accents-primary);
}

.trust-and-safety-popup .unity-toggle > .unity-toggle__input > .unity-toggle__text
{
    white-space: normal;
    flex-shrink: 1;
    margin-left: 8px;
    margin-right: 16px;
    margin-top: auto;
    margin-bottom: auto;
    font-size: 15px;
    color: var(--color-basic-destructive);
}

.trust-and-safety-popup .unity-toggle > .unity-toggle__input:checked > .unity-toggle__text
{
    color: var(--color-accents-primary);
}

.trust-and-safety-popup #_communityGuidelinesButton
{
    color: var(--color-accents-primary);
}