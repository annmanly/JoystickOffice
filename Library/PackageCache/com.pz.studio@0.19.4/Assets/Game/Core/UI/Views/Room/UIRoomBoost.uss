.room-boost {
}

.room-boost__container {
    height: 52px;
    width: 52px;
    border-radius: 20px;
    background-color: var(--color-tertiary-strawberry);
    justify-content: center;
}

.room-boost__count-container {
    justify-content: center;
    align-items: center;
}

.room-boost__count-container UILabel {
    color: var(--color-fishbase-whitefish);
    -unity-font-style: bold;
    font-size: 13px;
}

.room-boost__progress {
    height: 62px;
    width: 62px;
    border-radius: 24px;
    justify-content: center;
    align-items: center;
    --track-color: var(--color-tertiary-strawberry-25);
    --progress-color: var(--color-fishbase-whitefish);
    overflow: hidden;
}

.room-info .room-info-avatar {
    padding-top: 2px;
    padding-bottom: 2px;
}

.room-boost__container .icon-boost {
    width: 32px;
    height: 32px;
    --unity-image-tint-color: var(--color-fishbase-eel);
    align-self: center;
}

.room-boost__container--enabled .icon-boost {
    width: 32px;
    height: 32px;
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.room-boost__container #_boostCountLabel {
    display: none;
}

.room-boost__container--enabled #_boostCountLabel {
    display: none;
}

.room-boost__container--enabled-more-than-one .icon-boost {
    width: 18px;
    height: 18px;
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.room-boost__container--enabled-more-than-one #_boostCountLabel {
    display: flex;
}
