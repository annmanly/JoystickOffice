.expanded-vertical-hud-head {
    border-radius: 12px 12px 4px 4px;
    width: 52px;
    height: 68px;
    align-items: center;
}

.expanded-vertical-hud-head__image-container {
    width: 100%;
}

.expanded-vertical-hud-head__image-container > UILabel {
    -unity-font-definition: var(--font-bold-italic);
    color: var(--color-fishbase-whitefish);
    -unity-text-align: middle-center;
    height: 16px;
    padding-left: 4px;
    padding-right: 4px;
}

.expanded-vertical-hud-head__image-container > #_image {
    height: 60px;
    width: 60px;
    margin-top: -30px;
    margin-left: -4px;
}

.expanded-vertical-hud-head__additional-container {
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: var(--color-fishbase-blackfish-20);
    width: 52px;
    flex-grow: 1;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

.expanded-vertical-hud-head__additional-container > UIImage {
    height: 16px;
    width: 16px;
    flex-shrink: 0;
}

.expanded-vertical-hud-head__additional-container > UILabel {
    color: var(--color-fishbase-whitefish);
    padding-right: 4px;
    padding-left: 2px;
    -unity-text-align: middle-center;
}

.expanded-vertical-hud-head__gradient {
    margin: 2px 4px;
    background-image: var(--image-vgradient);
    border-top-right-radius: 12px;
    border-top-left-radius: 12px;
    -unity-background-image-tint-color: var(--color-fishbase-blackfish-20);
}

.expanded-vertical-hud-head__main-gradient {
    background-image: var(--image-vgradient-exp-180);
    border-radius: 12px 12px 4px 4px;
}
