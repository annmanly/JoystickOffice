.expanded-hud-head {
    flex-direction: row;
    height: 44px;
}

.expanded-hud-head .expanded-hud-head__texts-container {
    background-color: var(--color-fishbase-eel);
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}

.expanded-hud-head #_icon {
    width: 16px;
    height: 16px;
    padding: 1px;
    margin-right: 2px;
}

.expanded-hud-head #_additionalTextLabel {
    font-size: 11px;
    color: var(--color-fishbase-mackerel);
}

.expanded-hud-head .expanded-hud-head__info-container {
    height: 28px;
    justify-content: center;
    flex-direction: row;
    align-items: center;
}

.expanded-hud-head #_titleLabel {
    font-size: 10px;
    -unity-text-align: middle-center;
    -unity-font-style: bold-and-italic;
    color: var(--color-fishbase-anchovy);
    background-color: var(--color-fishbase-catfish);
    border-bottom-left-radius: 8px;
    padding: 2px;
    min-width: 68px;
}

.expanded-hud-head .expanded-hud-head__thumbnail-container {
    width: 44px;
    height: 44px;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

.expanded-hud-head .expanded-hud-head__thumbnail-container > #_thumbnail {
    margin: auto;
    width: 38px;
    height: 38px;
    border-radius: 5px;
}

.expanded-hud-head .expanded-hud-head__gradient {
    background-image: var(--image-vgradient);
    -unity-background-image-tint-color: rgba(2, 0, 18, 0.2);
    margin: 3px;
    border-radius: 5px;
}
