.mini-profile {
    margin-bottom: var(--safe-area-bottom);
}

.mini-profile__popup {
    width: initial;
    height: initial;
    margin: auto 16px 16px;
}

/* Reactions */

.mini-profile__reactions {
    background-color: var(--color-fishbase-catfish);
    border-radius: 16px;
    padding-top: 4px;
    padding-left: 4px;
    padding-right: 4px;
    padding-bottom: 4px;
    margin-left: auto;
    margin-right: auto;
    align-items: center;
}

.landscape .mini-profile #_drawer {
    align-self: center;
    min-width: 375px;
    max-width: 428px;
}

.mini-profile .reaction-button {
    width: 40px;
    height: 40px;
}

.mini-profile #_reactionsGift {
    padding: 5px;
    --unity-image-tint-color: var(--color-fishbase-mackerel);
}

.mini-profile .reaction-background {
    margin: auto;
    width: 32px;
    height: 32px;
    border-radius: 100px;
    background-color: var(--color-fishbase-tuna);
}

.mini-profile #_reactionDivider {
    height: 32px;
    display: none;
    width: 1px;
    margin-left: 4px;
    margin-right: 4px;
    background-color: var(--color-fishbase-tuna);
}

.mini-profile__reactions-carrot {
    --unity-image: var(--image-ui-carrot-bottom);
    width: 13px;
    height: 6px;
    --unity-image-tint-color: var(--color-fishbase-catfish);
    align-self: center;
    margin-bottom: 6px;
}

/* Main */

.mini-profile__main {
    height: auto;
    min-height: 296px;
    max-height: 386px;  
    width: 100%;  
    min-width: 343px;
    max-width: 396px;
    align-self: center;
}

/* Top half */

.mini-profile__top {
    overflow: hidden;
    height: 192px;
    flex-shrink: 0;
    background-color: var(--color-fishbase-tuna);
    border-top-left-radius: var(--border-radius-xl);
    border-top-right-radius: var(--border-radius-xl);
}

.mini-profile__details {
    margin-top: auto;
}
/* is this following block obsolete with the gradient Ian made? */
.mini-profile__details-background {
    background-image: var(--image-vgradient);
    -unity-background-image-tint-color: var(--color-fishbase-catfish);
    rotate: 180deg;
    opacity: .6;
    translate: 0 20px 0;
    scale: 1 1.5 1;
}

.mini-profile__nameAndStatus {
    flex-shrink: 0;
    flex-direction: column;
    justify-content: flex-end;
    margin-top: auto;
    margin-right: 4px;
    padding: 12px;
    min-height: 64px;
}

.mini-profile #_displayName {
    font-size: 22px;
    height: 27px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-black);
    text-shadow: 0px 1px 16px rgba(27, 24, 42, 0.7);
}

.mini-profile #_username {
    font-size: 15px;
    opacity: 0.75;
    height: 18px;
    color: var(--color-fishbase-whitefish);
    -unity-font-definition: var(--font-bold);
    text-shadow: 0px 1px 16px rgba(27, 24, 42, 0.7);
    margin: 0;
    padding: 0;
}

.mini-profile #_roomLabel {
    color: var(--color-fishbase-whitefish);
    margin: 0;
    padding: 0;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    display: none;
}

.mini-profile__online-indicator {
    border-radius: 12px;
    width: 12px;
    flex-shrink: 0;
    height: 12px;
    background-color: var(--color-accents-primary);
    margin-top: auto;
    margin-bottom: auto;
    margin-right: var(--spacing-s);
    display: none;
}

.rtl .mini-profile__online-indicator {
    margin-left: var(--spacing-s);
    margin-right: 0;
}

.mini-profile__online .mini-profile__online-indicator,
.mini-profile__online #_roomLabel {
    display: flex;
}

.mini-profile__status {
    margin-top: 8px;
}

.rtl .mini-profile__status {
    margin-left: auto;
}

.mini-profile__gradient {
    background-image: var(--image-vgradient-exp-180);
    -unity-background-image-tint-color: var(--color-fishbase-blackfish-40);
    width:100%;
    height:92px;
}

.mini-profile__portrait-buttons {
    position: absolute;
    top: var(--spacing-l);
    right: var(--spacing-m);
}

.rtl .mini-profile__portrait-buttons {
    left: var(--spacing-m);
    right: auto;
}

.mini-profile__portrait-buttons > VisualElement {
    background-color: var(--color-fishbase-blackfish-40);
    border-radius: 12px;
    width: 36px;
    height: 36px;
    margin-left: var(--spacing-s);
    margin-right: var(--spacing-s);
}

.mini-profile__portrait-buttons Image {
    width: 24px;
    height: 24px;
    margin: auto;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

/* Bottom half */

.mini-profile__bottom {
    flex-grow: 1;
    height: auto;
    min-height: 104px;
    max-height: 194px;
    background-color: var(--color-fishbase-eel);
    border-bottom-left-radius: var(--border-radius-xl);
    border-bottom-right-radius: var(--border-radius-xl);
}

.mini-profile #_bio {
    display: none;
    margin-left: 12px;
    margin-right: 12px;
    margin-top: 16px;
    -unity-text-align: upper-center;
}

.mini-profile__buttons {
    flex-shrink: 0;
    margin-left: 16px;
    margin-right: 16px;
    justify-content: center;
    margin-top: 16px;
    margin-bottom: 12px;
    height: 76px;
}

.mini-profile__buttons #_join {
    display: none;
}

.mini-profile__button-primary > VisualElement,
.mini-profile__button-secondary > VisualElement,
.mini-profile__button-destructive > VisualElement {
    border-radius: var(--border-radius-l);
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    margin-left: auto;
    margin-right: auto;
}

.mini-profile__button-primary Image {
    --unity-image-tint-color: var(--color-accents-primary);
    width: 24px;
    height: 24px;
    margin: 12px;
    flex-grow: 0;
    flex-shrink: 0;
}

.mini-profile__button-secondary Image {
    --unity-image-tint-color: var(--color-fishbase-eel);
    width: 24px;
    height: 24px;
    margin: 12px;
    flex-grow: 0;
    flex-shrink: 0;
}

.mini-profile__button-destructive Image {
    --unity-image-tint-color: var(--color-basic-destructive);
    width: 24px;
    height: 24px;
    margin: 12px;
    flex-grow: 0;
    flex-shrink: 0;
}

.mini-profile__button-primary > VisualElement {
    background-color: var(--color-accents-primary-25);
}

.mini-profile__button-secondary > VisualElement {
    background-color: var(--color-accents-secondary);
}

.mini-profile__button-destructive > VisualElement {
    background-color: var(--color-basic-destructive-25);
}

.mini-profile__buttons #_message > VisualElement {
    background-color: var(--color-accents-primary);
}

.mini-profile__button-primary:disabled,
.mini-profile__button-secondary:disabled,
.mini-profile__button-destructive:disabled {
    opacity: 1;
    color: var(--color-fishbase-tuna);
}

.mini-profile__button-primary:disabled > VisualElement,
.mini-profile__button-secondary:disabled > VisualElement,
.mini-profile__button-destructive:disabled > VisualElement {
    background-color: var(--color-fishbase-catfish);
}

.mini-profile__button-primary:disabled Image,
.mini-profile__button-secondary:disabled Image,
.mini-profile__button-destructive:disabled Image {
    --unity-image-tint-color: var(--color-fishbase-tuna);
}

.mini-profile__button-primary:disabled UILabel,
.mini-profile__button-secondary:disabled UILabel,
.mini-profile__button-destructive:disabled UILabel {
    color: var(--color-fishbase-tuna);
}

.mini-profile__buttons #_messageIcon {
    --unity-image-tint-color: var(--color-fishbase-catfish);
}

.mini-profile__buttons UILabel {
    flex-grow: 0;
    white-space: normal;
    width: 64px;
    height: 24px;
    margin: 0;
    margin-top: 4px;
    padding: 0;
    font-size: var(--font-size-xs);
    -unity-text-align: upper-center;
}

.mini-profile__button-primary UILabel {
    color: var(--color-accents-primary);
}

.mini-profile__button-secondary UILabel {
    color: var(--color-accents-secondary);
}

.mini-profile__button-destructive UILabel {
    color: var(--color-basic-destructive);
}

.mini-profile .image-user {
    scale: 2.5 2.5 1;
    translate: 0 70px 0;
}

.mini-profile__popup .expandable-text__see-more {
    display: none;
    -unity-font-definition: var(--font-bold);
    color: var(--color-accents-secondary);
}

.emoji-reaction-text {
    flex-grow: 1;
    margin: auto;
    padding-bottom: 1px;
    -unity-text-align: middle-center;
    font-size: 18px;
}

.emoji-reaction-more-icon {
    --unity-image: var(--image-icon-add);
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    margin: auto;
    width: 20px;
    height: 20px;
}
