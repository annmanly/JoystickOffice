/*

    Loading Indicator

*/

.loading-indicator {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -24px;
    margin-top: -24px;
    width: 48px;
    height: 48px;
    flex-grow: 0;
    flex-shrink: 1;
    opacity: 0.3;
    background-image: var(--image-loading-indicator);
    -unity-background-image-tint-color: var(--color-fishbase-mackerel);
}

.loading-indicator-small .loading-indicator,
.loading-indicator-small.loading-indicator {
    margin-left: -12px;
    margin-top: -12px;
    width: 24px;
    height: 24px;
}

.loading-indicator.intense {
    opacity: 1;
}

UIImage > .loading-indicator {
    opacity: 0;
}

/*

    TabbedView

*/

.highrise-tabbed-view {
    flex-shrink: 0;
    padding-left: 16px;
    background-color: var(--color-fishbase-blackfish);
}

.highrise-tabbed-view__tabs {
    flex-direction: row;
}

.highrise-tabbed-view__content {

}

.highrise-tab-button {
    height: 44px;
    margin-right: 24px;
    flex-direction: row;
    border-bottom-width: 4px;
    -unity-text-align: upper-left;
    -unity-font-style: bold;
    font-size: var(--font-size-l);
    align-items: center;
}

.highrise-tab-button__title {
    border-width: 3px;
    margin: auto;
    color: var(--color-fishbase-anchovy);
}

.highrise-tab-button:checked {
    border-bottom-width: 4px;
    border-bottom-color: var(--color-accents-secondary);
}

.highrise-tab-button:checked .highrise-tab-button__title {
    color: var(--color-fishbase-whitefish);
}

.highrise-tab-button:hover {
    border-color: var(--color-accents-secondary-50);
}

.highrise-tab-button:checked:hover {
    border-color: var(--color-accents-secondary);
}

.highrise-tab-button__close {
    width: 24px;
    height: 24px;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 16px;
    background-image: var(--image-icon-close);
    -unity-background-image-tint-color: rgba(0,0,0,0);
}

.highrise-tab-button:hover .highrise-tab-button__close,
.highrise-tab-button:checked .highrise-tab-button__close {
    -unity-background-image-tint-color: #89899a;
}

.highrise-tab-button:hover .highrise-tab-button__close:hover,
.highrise-tab-button:checked .highrise-tab-button__close:hover {
    -unity-background-image-tint-color: white;
}

.highrise-tab-button__count-badge {
    width: 18px;
    height: 18px;
    background-color: var(--color-basic-alert);
    color: var(--color-fishbase-eel);
    border-radius: 7px;
    padding: 0;
    font-size: 13px;
    margin: 2px;
    -unity-text-align: middle-center;
}

/*

    Pagination

*/
.highrise-pagination {
    flex-direction: row;
    margin-left: auto;
    margin-right: auto;
    margin-top: 64px;
}

.highrise-pagination__pages {
    flex-direction: row;
}

.highrise-pagination__page {
    width: 64px;
    height: 64px;
    font-size: 130%;
    -unity-text-align: middle-center;
    border-width: 2px;
}

.highrise-pagination__page:hover {
    border-radius: 16px;
    background-color: #2f2d3d;
}

.highrise-pagination__page:disabled {
    opacity: 1.0;
    color: #4f4d5d;
}

.highrise-pagination__page:disabled:hover {
    background-color: rgba(0,0,0,0);
}

.highrise-pagination__page--selected {
    -unity-font-style: bold;
    border-bottom-width: 2px;
    border-bottom-color: #db5f69;
    font-size: 140%;
}

.highrise-pagination__page--selected:hover {
    border-radius: 16px;
    border-color: #db5f69;
    background-color: rgba(0,0,0,0);
}

/*

    TwoPaneSplitView

*/

#unity-dragline-anchor {
    background-color: #2f2d3d;
}

.unity-two-pane-split-view__dragline-anchor--horizontal {
    width: 4px;
}

.unity-two-pane-split-view__dragline-anchor--vertical {
    height: 4px;
}

/*

    Outliner

*/

.outliner__item__expand > .unity-toggle__input:hover > .unity-toggle__checkmark,
.outliner__item__expand > .unity-toggle__input:focus > .unity-toggle__checkmark,
.outliner__item__expand > .unity-toggle__input > .unity-toggle__checkmark {
    background-color: rgba(0,0,0,0);
    border-width: 0;
    background-image: var(--image-outliner-collapsed);
    -unity-background-image-tint-color: #494758;
}

.outliner__item__expand > .unity-toggle__input:checked > .unity-toggle__checkmark,
.outliner__item__expand > .unity-toggle__input:checked:hover > .unity-toggle__checkmark,
.outliner__item__expand > .unity-toggle__input:focus:checked > .unity-toggle__checkmark,
.outliner__item__expand > .unity-toggle__input:focus:checked:hover > .unity-toggle__checkmark {
    background-color: rgba(0,0,0,0);
    border-width: 0;
    background-image: var(--image-outliner-expanded);
    -unity-background-image-tint-color: #494758;
}


/*

    Scroller

*/

.unity-base-slider__dragger {
    min-height: 64px;
}

.unity-scroller > .unity-scroller__low-button,
.unity-scroller > .unity-scroller__high-button {
    display: none;
}

#unity-slider {
    margin: 0px;
    min-width: 12px;
    width: 12px;
}

#unity-tracker {
    background-color: rgba(0,0,0,0);
    border-width: 0;
}

#unity-dragger {
    background-color: #393748;
    border-width: 0;
    border-radius: 2px;
}

#unity-drag-container:active #unity-dragger,
#unity-dragger:hover {
    border-radius: 8px;
    background-color: var(--color-accents-secondary);
}

/*****   Popup   *****/

.popup {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.popup__background {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.popup__background__dimmed {
    background-color: var(--color-fishbase-blackfish-60);
}

.popup__background__hidden {
    background-color: initial;
    display: none;
}

.popup__input-blocker {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.builder .navigation-controller__view {
    width: 375px;
    height: auto;
    max-height: 60%;
    margin: auto;
    overflow: hidden;
}

.popup__close {
    padding: 6px;
    width: 36px;
    height: 36px;
}

.popup__close Image {
    background-image: var(--image-icon-close);
    -unity-background-image-tint-color: var(--color-fishbase-whitefish);
    width: 24px;
    height: 24px;
    margin: 0;
    padding: 0;
}

.popup-displayed {
    display: none;
}

.popup .popup-displayed {
    display: flex;
}


/*

    Fields

*/

.unity-base-field__label {
    color: #89899a !important;
}

.unity-base-field:focus > .unity-base-field__label {
    color: #db5f69;
}

.unity-base-field > Label {
    margin-top: auto;
    margin-bottom: auto;
}


/*

    Drop Down

*/

.unity-base-popup-field {
    padding: 4px 0px;
}

.unity-base-popup-field .unity-base-popup-field__arrow {
    -unity-background-image-tint-color: #89899a;
}

.unity-base-popup-field:disabled .unity-base-popup-field__arrow {
    -unity-background-image-tint-color: #5f5d6d;
}

.unity-base-popup-field .unity-base-popup-field__text {
    color: #89899a;
}

.unity-base-popup-field:disabled .unity-base-popup-field__text {
    color: #5f5d6d;
}

.unity-base-popup-field__input {
    font-size: 100%;
    border-radius: 8px;
    border-width: 1px;
    border-color: #2f2d3d;
    background-color: #2f2d3d;
    padding: 10px 12px 9px 8px;
    margin-left: 2px;
}

.unity-base-dropdown__separator {
    background-color: #494758;
}

.unity-base-popup-field:hover > .unity-base-popup-field__input,
.unity-base-popup-field:active > .unity-base-popup-field__input {
    background-color: #393748;
    border-color: #393748;
}

.unity-base-popup-field:disabled:hover > .unity-base-popup-field__input,
.unity-base-popup-field:disabled > .unity-base-popup-field__input {
    color: #5f5d6d;
    background-color: #2d2b3b;
    border-color: #2f2d3d;
}

.unity-base-popup-field__input PopupTextElement {
    padding: 2px 0px;
}

.unity-base-dropdown__container-outer {
    border-width: 0;
    margin: 0 -2px 0 -2px;
}

.unity-base-dropdown ScrollView {
    background-color: #292738;
    border-radius: 8px;
    border-width: 1px;
    border-color: #292738;
    padding: 4px;
}



.unity-base-dropdown__item > .unity-base-dropdown__label {
    color: #89899a;
    font-size: 100%;
}

.landscape .unity-base-dropdown__item > .unity-base-dropdown__label  {
    font-size: 22px;
}

.unity-base-dropdown__checkmark {
    -unity-background-image-tint-color: #89899a;
}

.unity-base-dropdown__item:checked {
    padding-right: 0px;
}

/*

    Item Palette Field

*/


.highrise-palette-field {
    width: 100%;
    height: 48px;
    flex-direction: row;
}

.highrise-palette-field > Label {
    margin-top: auto;
    margin-bottom: auto;
}

.highrise-palette-field__preview-container {
    width: 100%;
}

.highrise-palette-field__preview {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    border-width: 4px;
    border-color: #2f2d3d;
}

.highrise-palette-field-dropdown {
    flex-direction: row;
    flex-wrap: wrap;
    padding: 4px;
}

.highrise-palette-field-dropdown__item {
    margin: 4px;
    width: 48px;
    height: 48px;
    border-width: 4px;
    border-color: #393748;
    border-radius: 8px;
    flex-grow: 0;
    flex-shrink: 0;
}

.highrise-palette-field-dropdown__item:hover {
    border-color: white;
}

.highrise-palette-field-dropdown__item:checked {
    border-color: #db5f69;
}

/*

    Simple List

*/

.simple-list {
    padding: 8px;
}

.simple-list__content {
    width: 100%;
    height: 100%;
}

.simple-list__item {
    flex-shrink: 0;
}


/*

    Progress Bar

*/

.unity-progress-bar__container {
    max-height: 24px;
}

.unity-progress-bar__background {
    border-radius: 8px;
    border-width: 0;
    background-color: var(--color-fishbase-tuna);
    overflow: hidden;
}

.unity-progress-bar__progress {
    border-radius: 6px;
    background-color: var(--color-accents-secondary);
}


/*

    ListView

*/

.unity-collection-view__item:hover:enabled {
    background-color: var(--color-fishbase-catfish);
}

/**

    Preview images

*/

.missing-preview
{
    --unity-image: var(--image-icon-no-preview);
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    opacity: .6;
    margin: auto;
}

.horizontal_spacer {
    border-bottom-width: var(--border-width-m);
    border-color: var(--color-fishbase-catfish);
}

/**

    Badges

*/

.badge {
    height: 18px;
    border-radius: 8px;
    background-color: var(--color-basic-alert);
    padding: 0px;
    color: var(--color-fishbase-eel);
    min-width: 18px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    margin: 0px;
}

.tab-indicator {
    height: 8px;
    width: 8px;
    border-radius: 3px;
    background-color: var(--color-basic-destructive);
    margin-top: 3px;
    margin-right: -3px;
}

/**

    Toggles

*/

.unity-toggle Label {
    color: var(--color-fishbase-salmon);
}

.unity-toggle__input:hover > .unity-toggle__checkmark,
.unity-toggle__input:focus > .unity-toggle__checkmark,
.unity-toggle__input > .unity-toggle__checkmark {
    background-color: var(--color-fishbase-catfish);
    border-radius: var(--border-radius-m);
    border-width: 0px;
    padding: 4px;
}

.unity-toggle .unity-toggle__input:checked > .unity-toggle__checkmark,
.unity-toggle .unity-toggle__input:checked:hover > .unity-toggle__checkmark,
.unity-toggle .unity-toggle__input:focus:checked > .unity-toggle__checkmark,
.unity-toggle .unity-toggle__input:focus:checked:hover > .unity-toggle__checkmark {
    border-width: 0px;
    background-color: var(--color-accents-secondary);
    background-image: var(--image-icon-checkmark);
    -unity-background-image-tint-color: var(--color-fishbase-eel);
}

.unity-foldout > .unity-toggle > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:checked > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:checked:hover > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:focus:checked > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:focus:checked:hover > .unity-toggle__input > .unity-foldout__checkmark
{
    position: absolute;
    top: 8px;
    right: 0;
    bottom: 0;
    width: 16px;
    height: 10px;
    background-image: var(--image-icon-carrot);
    -unity-background-image-tint-color: var(--color-fishbase-whitefish);
    background-color: var(--color-transparent);
}

.unity-foldout > .unity-toggle:checked > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:checked:hover > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:focus:checked > .unity-toggle__input > .unity-foldout__checkmark,
.unity-foldout > .unity-toggle:focus:checked:hover > .unity-toggle__input > .unity-foldout__checkmark
{
    rotate: 180deg;
}

.unity-foldout__toggle > .unity-toggle__input > .unity-label,
.unity-foldout__toggle > .unity-toggle__input:checked .unity-label,
.unity-foldout__toggle > .unity-toggle__input:checked:hover .unity-label,
.unity-foldout__toggle > .unity-toggle__input:focus .unity-label,
.unity-foldout__toggle > .unity-toggle__input:focus:checked .unity-label,
.unity-foldout__toggle > .unity-toggle__input:focus:checked:hover .unity-label
{
    color:  var(--color-fishbase-bonito);
    -unity-font-style: bold;
    padding-left: 8px;
}

.radio-button-group-vertical {
    flex-direction: column;
    -unity-text-align: middle-left;
}

.unity-radio-button {
    background-color: var(--color-transparent);
    border-radius: var(--border-radius-m);
    padding: 8px;
}

.unity-radio-button:checked {
    background-color: var(--color-fishbase-catfish);
    border-radius: var(--border-radius-m);
}

.unity-radio-button__text {
    font-size: var(--font-size-l);
    color: var(--color-fishbase-anchovy);
    margin-left: var(--spacing-m);
}

.unity-radio-button__input:checked .unity-radio-button__text {
    color: var(--color-accents-secondary);
    -unity-font-style: bold;
}

.unity-radio-button__checkmark-background {
    background-color: var(--color-accents-secondary);
}

.unity-radio-button__checkmark {
    color: var(--color-fishbase-catfish);
}

/** UITextField */

UITextField > .unity-label
{
    color: var(--color-fishbase-whitefish);
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 0;
    margin-right: 0;
    padding: 0;
}




/*** UIPageControl ***/

.page-control {
    flex-direction: row;
}

.page-control__page {
    width: 6px;
    height: 6px;
    border-radius: 3px;
    background-color: var(--color-fishbase-catfish);
    margin-left: 4px;
    margin-right: 4px;
    margin-top: auto;
    margin-bottom: auto;
    transition: background-color linear 0.2s;
}

.page-control__page:checked {
    background-color: var(--color-accents-primary);
}


/*** UIPageView ***/

.page-view {
    overflow: hidden;
}

.page-view__pages {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.page-view__page {
    flex-grow: 1;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: -1px;
}

/*** UILoadingCell ***/

.loading-cell {
    padding: 16px;
}

.loading-cell LoadingIndicator {
    margin: auto;
    width: 44px;
    height: 44px;
}

/*** UICollection ***/

.collection {
    flex-grow: 1;
}

.collection .scroll-view {
    flex-grow: 1;
}

.collection-section {
    flex-shrink: 0;
}

.collection-cells {
    flex-shrink: 0;
}

/*** Label ***/

.label {
    flex: 0 0 auto;
    white-space: nowrap;
}

.label.UserNameBadge-None {
    color: var(--color-fishbase-whitefish);
}
.label.UserNameBadge-Staff {
    color: var(--color-tertiary-tangerine);
}
.label.UserNameBadge-Bot,
.label.UserNameBadge-Owner {
    color: var(--color-tertiary-blueberry);
}


/*** Settings wrapper ***/

.settings-button-wrapper {
    border-radius: 10px;
    background-color: var(--color-fishbase-catfish);
}

/*** Search ***/

.search-field #_searchContainer {
    margin-top: 8px;
    height: 40px;
    align-items: center;
}

.search-field #_searchInput {
    flex-grow: 1;
    margin: 12px;
}

.search-field #_cancelSearchButton {
    display: none;
    margin-right: 16px;
    align-self: center;
    -unity-font-style: normal;
    -unity-font-definition: var(--font-regular);
    color: var(--color-fishbase-salmon);
}

.amount-label {
    background-color: var(--color-fishbase-tuna);
    border-radius: 4px;
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 1px;
    padding-bottom: 1px;
    -unity-font-definition: var(--font-bold-italic);
    font-size: 11px;
    color: var(--color-fishbase-mackerel);
}

.amount-label--empty {
    color: var(--color-fishbase-salmon);
}


/*

    UISplitView

*/

.split-view
{
    flex-direction: row;
}

.split-view.split-view--vertical
{
    flex-direction: column;
}

.split-view__dragline {
    background-color: var(--color-fishbase-eel);
    flex-shrink: 0;
}

.split-view.split-view--horizontal > .split-view__dragline {
    width: 8px;
}

.split-view.split-view--vertical > .split-view__dragline {
    height: 8px;
}

.split-view.split-view--horizontal > *
{
    height: 100%;
}

.split-view.split-view--vertical > *
{
    width: 100%;
}

/*
    Unread indicator
*/

.unread-indicator {
    border-radius: 50%;
    width: 8px;
    height: 8px;
    background-color: var(--color-basic-destructive);
}

.unread-indicator-bordered {
    border-radius: 4px;
    width: 10px;
    height: 10px;
    background-color: var(--color-basic-destructive);
    border-width: 2px;
    border-color: var(--color-fishbase-catfish);
}

/*
    Thumbstick
*/

.thumbstick__container {
  display: flex;
  position: absolute;
  width: 120px;
  height: 120px;
  align-items: center;
  justify-content: center;
}

.thumbstick__background {
  position: absolute;
  left: 0px;
  top: 0px;
  right: 0px;
  bottom: 0px;
  border-radius: 50%;
  background-color: var(--color-fishbase-whitefish-15);
  border-color: var(--color-fishbase-bonito);
  border-width: 2px;
}

.thumbstick__knob {
  position: absolute;
  width: 40px;
  height: 40px;
  background-image: var(--image-vgradient);
  background-size: 100px 100px;
  border-radius: 50%;
  border-color: var(--color-fishbase-bonito);
  border-width: 2px;
  rotate: 135deg;
  overflow: hidden;
}

.desktop .thumbstick.hide-on-desktop {
    display: none;
}

/*
    Movement Thumbstick
*/

.movement-thumbstick {
    position: absolute;
    left: 0px;
    bottom: 0px;
    right: 0px;
    height: 200px;
}

.movement-thumbstick .thumbstick__container {
    left: 20px;
    bottom: 20px;
}

.favorite-button {
    width: 44px;
    height: 44px;
}

.favorite-button.favorited {
    background-color: var(--color-fishbase-catfish);
}

.favorite-button UIImage {
    margin: auto;
    width: 24px;
    height: 24px;
    --unity-image-tint-color: var(--color-accents-primary);
    --unity-image: var(--image-icon-star-unfilled);
}


.favorite-button.favorited UIImage {
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    --unity-image: var(--image-icon-star-filled);
}