/* 

    Default TextField

*/

.unity-text-field {
    border-radius: 12px;
    padding-top: 4px;
    padding-bottom: 4px;
}

.unity-text-field__input {
    border-radius: 8px;
    border-width: 1px;
    border-color: var(--color-fishbase-tuna);
    background-color: var(--color-fishbase-tuna);
    color: var(--color-fishbase-whitefish);
    --unity-selection-color: var(--color-accents-primary-50);
    --unity-cursor-color: white;
}

.unity-text-field:active .unity-text-field__input,
.unity-text-field:hover:focus .unity-text-field__input,
.unity-text-field:hover .unity-text-field__input {
    border-color: var(--color-fishbase-whitefish);
}

.unity-text-field:focus .unity-text-field__input {
    border-color: var(--color-accents-primary);
}

.unity-text-field:disabled:hover .unity-text-field__input,
.unity-text-field__input:disabled {
    color: #5f5d6d;
    background-color: #2d2b3b;
    border-color: #2f2d3d;
}

.unity-base-field .unity-text-field__placeholder {
    color: var(--color-fishbase-mackerel);
    padding: 10px;
    margin: 0;
    margin-left: 2px;
    border-width: 1px;
    flex-grow: 1;
}


/* 

    Scroller

*/

.unity-scroller RepeatButton {
    display: none;
}

.unity-scroller #unity-tracker {
    display: none;
}

.unity-scroller--vertical {
    width: 8px;
    position: absolute;
    top: 4px;
    bottom: 4px;
    right: 2px;
}

.unity-scroller--horizontal {
    height: 8px;
    position: absolute;
    left: 4px;
    right: 4px;
    bottom: 2px;
}


.unity-scroller--vertical #unity-slider {
    width: 8px;
}

.unity-scroller--horizontal #unity-slider {
    height: 8px;
}

.unity-scroller--vertical #unity-drag-container:active #unity-dragger,
.unity-scroller--vertical:hover #unity-dragger,
.unity-scroller--vertical #unity-dragger {
    left: 0;
    right: 0;
    width: 8px;
    border-radius: 4px;
    min-width: 0;
}

.unity-scroller--horizontal #unity-drag-container:active #unity-dragger,
.unity-scroller--horizontal:hover #unity-dragger,
.unity-scroller--horizontal #unity-dragger {
    bottom: 0;
    top: 0;
    height: 8px;
    border-radius: 4px;
    min-height: 0;
}
.unity-scroller--vertical #unity-drag-container:active #unity-dragger {
    background-color: var(--color-accents-secondary);
}