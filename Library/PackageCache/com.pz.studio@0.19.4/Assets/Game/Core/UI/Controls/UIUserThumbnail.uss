/*

    UIUserThumbnail

*/

.user-thumbnail {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
}

.user-thumbnail__image-container UIImage {
    flex-shrink: 0;    
    width: 100%;
    height: 100%;
}

.user-thumbnail__image-container {
    flex-grow: 1;
    border-radius: 16px;
    overflow: hidden;
}

/*

    Single user

*/


.user-thumbnail-user .user-thumbnail__image-container {
    background-color: var(--color-fishbase-tuna);
}

/*

    User Group

*/

.user-thumbnail-group .user-thumbnail__image-container {
    background-color: rgba(0,0,0,0);
    border-radius: 0;
    overflow: visible;
}

.user-thumbnail__user-0,
.user-thumbnail__user-1,
.user-thumbnail__user-2,
.user-thumbnail__user-3 {
    width: 48%;
    height: 48%;
    position: absolute;
}

.user-thumbnail-group > .user-thumbnail {    
    border-radius: 8px;
    background-color: var(--color-fishbase-catfish);
    overflow: hidden;
}

/*

    Group of 2

*/

.user-thumbnail-usergroup-2 > .user-thumbnail__user-0
{
    left: 0;
    top: 15%;
}

.user-thumbnail-usergroup-2 > .user-thumbnail__user-1
{
    top: 35%;
    right: 0;
}

/*

    Group of 3

*/

.user-thumbnail-usergroup-3 > .user-thumbnail__user-0
{
    left: 0;
    top: 0;
}

.user-thumbnail-usergroup-3 > .user-thumbnail__user-1
{
    top: 0;
    right: 0;
}

.user-thumbnail-usergroup-3 > .user-thumbnail__user-2
{
    left: 25%;
    bottom: 0;
}

/*

    Group of 4

*/

.user-thumbnail-usergroup-4 > .user-thumbnail__user-0
{
    left: 0;
    top: 0;
}

.user-thumbnail-usergroup-4 > .user-thumbnail__user-1
{
    bottom: 0;
    left: 0;
}

.user-thumbnail-usergroup-4 > .user-thumbnail__user-2
{
    top: 0;
    right: 0;
}

.user-thumbnail-usergroup-4 > .user-thumbnail__user-3
{
    bottom: 0;
    right: 0;
}

/*

    Online indicator

*/

.user-thumbnail__online-indicator {
    position: absolute;
    bottom: 1px;
    right: 1px;
    width: 12px;
    height: 12px;
    background-color: var(--color-accents-primary);
    border-radius: 6px;
    border-color: var(--color-fishbase-eel);
    border-width: 2px;
    display:none;
    flex-grow: 0;
    flex-shrink: 0;
}

.user-thumbnail--user-online .user-thumbnail__online-indicator {
    display: flex;
}

/*

    UIUserThumbnail Small Variations

*/

.user-thumbnail-small {
    width: 44px;
    height: 44px;
}

.user-thumbnail-small .user-thumbnail__image-container {
    border-radius: 12px;
}

.user-thumbnail-xs {
    width: 40px;
    height: 40px;
    border-radius: 12px;
}

.user-thumbnail-xxs {
    width: 36px;
    height: 36px;
    border-radius: 12px;
}

/*

    Badges

*/

.user-thumbnail__badge {
    height: 20px;
    width: 20px;
    position: absolute;
    right: -4px;
    top: -4px;
}

/*

    ActivityType badges

*/

.user-thumbnail__badge.ActivityType-LikedComment,
.user-thumbnail__badge.ActivityType-LikedPost {
    --unity-image: var(--image-icon-activity-like);
}

.user-thumbnail__badge.ActivityType-CommentedPost,
.user-thumbnail__badge.ActivityType-MentionedComment,
.user-thumbnail__badge.ActivityType-MentionedPost,
.user-thumbnail__badge.ActivityType-Reposted {
    --unity-image: var(--image-icon-activity-comment);
}

.user-thumbnail__badge.ActivityType-Followed,
.user-thumbnail__badge.ActivityType-ContactFound {
    --unity-image: var(--image-icon-activity-start);
}

.user-thumbnail__badge.ActivityType-FollowAccepted {
    --unity-image: var(--image-icon-activity-accepted);
}
