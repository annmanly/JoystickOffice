.currency {
    height: 36px;
    margin-top: auto;
    margin-bottom: auto;
    flex-shrink: 0;
    flex-direction: row;
}

.currency UIImage {
    margin-top: auto;
    margin-bottom: auto;
    margin-right: 4px;
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.rtl .currency UIImage {
    margin-left: 4px;
    margin-right: 0;
}

.currency .label {
    color: var(--color-fishbase-bonito);
    font-size: 17px;
    margin: auto 0;
    padding: 0;
}

.currency__disabled .label {
    color: var(--color-fishbase-salmon);
}
