.switch-toggle {
    background-color: var(--color-fishbase-tuna);
    border-radius: var(--border-radius-m);
    width: 42px;
    height: 24px;
}

.switch-toggle:checked {
    background-color: var(--color-accents-secondary-25);
}

.switch-toggle #_thumb {
    background-color: var(--color-fishbase-bonito);
    position: absolute;
    top: 2px;
    left: 2px;
    width: 20px;
    height: 20px;
    border-radius: 7px;
}

.switch-toggle:checked #_thumb {
    left: 19px;
    background-color: var(--color-accents-secondary);
}