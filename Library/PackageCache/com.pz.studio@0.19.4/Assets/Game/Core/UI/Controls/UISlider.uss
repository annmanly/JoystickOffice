.slider {
    height: 36px;
    overflow: visible;
    margin-top: 4px;
    margin-bottom: 4px;
}

.slider #unity-drag-container {
    background-color: transparent;
}

.slider #unity-tracker {
    background-color: transparent;
}

.slider #unity-dragger {
    background-color: transparent;
}

.slider #unity-drag-container:hover:active #unity-dragger,
.slider #unity-drag-container:active #unity-dragger,
.slider #unity-drag-container:hover #unity-dragger {
    background-color: transparent;
}

.slider__slider {
    height: 100%;
}

.slider__background {
    position: absolute;
    width: 100%;
    height: 16px;
    background-color: var(--color-fishbase-blackfish);
    border-radius: 4px;
    top: 10px;
    bottom: 10px;
}

.slider__foreground {
    position: absolute;
    height: 16px;
    background-color: var(--color-accents-secondary);
    border-radius: 4px;
    top: 10px;
    bottom: 10px;
}

.slider__knob {
    position: absolute;
    height: 28px;
    width: 28px;
    background-color: var(--color-fishbase-eel);
    border-radius: 12px;
    border-width: 4px;
    border-color: var(--color-accents-secondary);
    top: 4px;
    bottom: 4px;
}

.slider__dot-container {
    position: absolute;
    height: 100%;
    width: 100%;
    padding: 8px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.slider__dot {
    height: 8px;
    width: 8px;
    border-radius: 2px;
    background-color: var(--color-fishbase-eel);
}
