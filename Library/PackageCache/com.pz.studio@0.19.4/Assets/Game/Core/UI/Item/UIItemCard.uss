/*

    Card

*/

.item-card {
    border-radius: 8px;
    width: auto;
    min-width: 64px;
    max-width: 100px;
}

/* Options: Cost */
.item-card.item-card--cost {
    height: 100px;
}

/* Options: Name */
.item-card.item-card--name {
    height: 106px;
}

/* Options: Cost + Name */
.item-card.item-card--cost.item-card--name {
    height: 130px;
}

.item-card__content {
    border-radius: 8px;
    overflow: hidden;
    width: auto;
    min-width: 64px;
    max-width: 100px;
}

.item-card__border {
    border-width: 0px;
}

.item-card #_pinnedIcon {
    display: none;
    margin-top: 4px;
    margin-left: 4px;
    width: 16px;
    height: 16px;
}

.item-card:checked .item-card__border {
    border-color: var(--color-accents-primary);
    border-width: 3px;
}

.item-card.item-card--sold-out {
    opacity: 0.5;
}

/*

    Image

*/

.item-card #_imageContainer {
    height: auto;
    width: auto;
    max-height: 100%;
    max-width: 100%;
    min-height: 60px;
    min-width: 60px;
    flex-grow: 1;
    margin: 4px;
}

.item-card.item-card--cost #_imageContainer {
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 4px;
    padding-bottom: 0px;
    height: auto;
    width: auto;
    max-height: 100%;
    max-width: 100%;
    min-height: 64px;
    min-width: 64px;
}

.item-card.item-card--name #_imageContainer {
    width: auto;
    height: auto;
    min-height: 64px;
    min-width: 64px;
    max-height: 100%;
    max-width: 100%;
}

.item-card-image-gradient {
    display: none;
    height: 20px;
    position: absolute;
    width: 100%;
    bottom: 0;
    background-image: var(--image-vgradient-exp-180);
}

.item-card.item-card--on-head-item #_imageContainer {
    margin: initial;
    padding: 0;
}

.item-card .item-image-on-head-item {
    /* to eliminate weird misalignment of image & image gradient */
    bottom: 1px;
    right: -1.5px;
}

.item-card.item-card--background-item #_imageContainer {
    max-width: 64px;
    align-self: center;
}

.item-card.item-card--cost.item-card--name #_imageContainer {
    bottom: 58px;
}

.item-card.item-card--cost .item-card__name-gradient,
.item-card.item-card--name .item-card__name-gradient {
    height: 16px;
    background-image: var(--image-vgradient-exp-180);
    bottom: 0px;
    left: -7px;
    right: -7px;
}

/*

    Name

*/

.item-card #_name {
    display: none;
    -unity-font-definition: var(--font-black);
    -unity-text-align: upper-left;
    white-space: normal;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 11px;
    margin: 0;
    padding: 0;
    height: auto;
    max-height: 28px;
    min-height: 26px;
    margin-bottom: 4px;
    margin-left: 6px;
    margin-right: 6px;
}

.item-card.item-card--name #_name {
    display: flex;
}

.item-card.item-card--name.item-card--cost #_name {
    bottom: 26px;
}


/*

    Rarity

*/

.item-card #_rarity {
    rotate: 90deg;
    position: absolute;
    padding: 0;
    margin: 0;
    left: 3px;
    top: -8px;
    opacity: 0.25;
    font-size: 11px;
    letter-spacing: -5px;
    -unity-font-definition: var(--font-black);
    -unity-font-style: bold;
    transform-origin: left bottom;
}

.rtl .item-card #_rarity {
    rotate: -90deg;
    left: auto;
    right: 2px;
    transform-origin: right bottom;
}

.rarity-uncommon #_rarity {
    font-size: 10px;
}

/**

    Cost

*/


.item-card .item-card__cost {
    display: none;
    background-color: var(--color-fishbase-catfish);
    height: 24px;
    width: 100%;
    justify-content: center;
}

.item-card.item-card--cost .item-card__cost {
    display: flex;
    width: 100%;
}

.item-card .item-card__cost .currency {
    height: 16px;
    margin: auto;
}

.item-card .item-card__cost .currency .label {
    margin: auto;
    font-size: 13px;
    -unity-font-definition: var(--font-bold);
}

.item-card .item-card__cost #_costFree {
    display: none;
    font-size: 13px;
    -unity-font-definition: var(--font-black-italic);
    -unity-text-align: middle-center;
    color: var(--color-fishbase-whitefish);
}

/*

    Alt

*/

.item-card.alt .item-card__border {
}

.item-card.alt #_rarity {
    display: none;
}

.item-card.alt > .item-card__content.rarity-bg {
    background-color: var(--color-fishbase-blackfish);
}

/**

    NFI

*/

.item-card #_nfi {
    display: none;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-bonito);
    font-size: 11px;
    -unity-font-definition: var(--font-bold);
    border-radius: 4px;
    padding: 1px 2px;
    margin: 0;
    margin-right: 4px;
}

.item-card.item-card--nfi #_nfi {
    display: flex;
}

.item-card.item-card--cost #_nfi,
.item-card.item-card--name #_nfi {
    left: 4px;
    bottom: 0;
}

/**

    NFT

 */

.item-card #_nft {
    display: none;
    width: 18px;
    height: 18px;
    background-color: var(--color-tertiary-blueberry);
    --unity-image-tint-color: var(--color-fishbase-catfish);
    border-radius: 4px;
    margin-right: 4px;
}

.item-card.item-card--nft #_nft {
    display: flex;
}

.item-card.item-card--cost #_nft,
.item-card.item-card--name #_nft {
    left: 4px;
    bottom: 0;
}

/**

    Quantity

*/

.item-card #_quantity {
    display: none;
    position: absolute;
    top: -3px;
    right: -3px;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-anchovy);
    font-size: 11px;
    border-radius: 4px;
    margin: 0;
    height: 16px;
    padding-left: 2px;
    padding-right: 2px;
    -unity-text-align: middle-center;
    min-width: 16px;
}

.rtl .item-card #_quantity {
    left: -3px;
    right: auto;
}

.item-card.item-card--quantity #_quantity {
    display: flex;
}

.item-card:checked #_quantity {
    background-color: var(--color-accents-primary);
    color: var(--color-fishbase-eel);
}

/**

    Won

*/

.item-card #_won {
    position: absolute;
    display: none;
    top: 0;
    right: 0;
    width: 40px;
    height: 40px;
    --unity-image: var(--image-won);
}

.item-card.item-card--won #_won {
    display: flex;
}

/**

    Icon Container

*/

.item-card #_iconContainer {
    flex-direction: row;
    align-items: flex-start;
    position: absolute;
    left: 2px;
    bottom: 0px;
}

/**

    Account Bound

*/

.item-card #_accountBound {
    padding: 0;
    display:none;
    width: 16px;
    height: 16px;
    border-radius: 4px;
    margin-right: 4px;
    background-color: var(--color-fishbase-catfish);
    --unity-image: var(--image-icon-non-tradable);
    --unity-image-tint-color: var(--color-fishbase-anchovy);
}

.rtl .item-card #_accountBound {
    right: 4px;
    left: auto;
}

.item-card.item-card--account-bound #_accountBound {
    display:flex;
}

.item-card.item-card--gift #_accountBound {
    display:flex;
    padding: 1px;
    --unity-image: var(--image-icon-gift);
}

.item-card.item-card--lootbox #_accountBound {
    display:flex;
    padding: 1px;
    --unity-image: var(--image-icon-blind-box);
}


.item-card.item-card--nfi #_accountBound {
    display:none;
}

.item-card.item-card--cost #_accountBound,
.item-card.item-card--name #_accountBound {
    left: 4px;
    bottom: 0px;
}

.rtl .item-card.item-card--cost #_accountBound,
.rtl .item-card.item-card--name #_accountBound {
    right: 4px;
    left: auto;
}

.item-card.item-card--nft #_accountBound {
    background-color: var(--color-tertiary-blueberry);
    --unity-image-tint-color: var(--color-fishbase-catfish);
}


/** Discount **/
.item-card #_discount {
    display: none;
    position: absolute;
}


.item-card #_discountText {
    width: 50px;
    -unity-text-align: middle-center;
    font-size: 8px;
    -unity-font-definition: var(--font-black-italic);
    color: var(--color-fishbase-blackfish);
    rotate: -45deg;
    position: absolute;
    left: -8px;
    top: 8px;
    bottom: 6px;
}

.item-card #_discountRibbon {
    width: 50px;
    height: 50px;
}

/**
    New Badge
 */

.item-card #_newBadge {
    background-image: var(--image-star);
    -unity-background-image-tint-color: var(--color-basic-alert);
    height: 28px;
    width: 28px;
    align-items: center;
    justify-content: center;
    margin: auto -3px 30px auto;
    display: none;
}

.item-card #_newBadge > Label {
    color: var(--color-fishbase-eel);
    font-size: 8px;
    -unity-font-definition: var(--font-black-italic);
    -unity-text-align: middle-center;
    rotate: -11deg;
    margin: 0;
    padding: 0;
}

.item-card__boost-badge {
    display: none;
    width: 28px;
    height: 28px;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 34px;
    margin-right: -3px;
    border-radius: 8px;
    background-color: var(--color-fishbase-tuna);
}

.item-card__boost-badge Image {
    width: 12px;
    height: 12px;
    margin:  3px auto auto auto;
    --unity-image-tint-color: var(--color-tertiary-banana);
}

.item-card__boost-badge UILabel {
    font-size: 9px;
    margin: auto;
    color: var(--color-tertiary-banana);
    -unity-font-definition: var(--font-bold-italic);
}

/*
    Effects icon
*/
.item-card #_effectsIcon {
    display: none;
    position: absolute;
    top: 2px;
    right: 2px;
    width: 24px;
    height: 24px;
    opacity: 0.25;
}

/*

    Large

    NOTE: values here are 2x Figma reference values because this item cell
    is rendered in screen space, not ui space. Also requires further work once all cell components are supported.

*/


.item-card.item-card-large {
    height: 328px;
    width: 240px;
    margin-left: 44px;
    margin-right: 44px;
    max-width: 240px;
}

.item-card.item-card-large.scale3x .item-card__content {
    scale: 3 3 1;
    translate: 328px 328px 0;
}

.item-card.item-card-large.scale3x #_quantity {
    scale: 3 3 1;
    translate: 528px 24px 0;
}

.item-card.item-card-large .item-card__content {
    border-radius: 16px;
    max-width: 240px;
}

.item-card.item-card-large .item-card__border {
    border-radius: 8px;
}

.item-card.item-card-large.alt .item-card__border {
    border-width: 4px;
}

.item-card.item-card-large #_name {
    font-size: 30px;
    max-height: 72px;
    height: 72px;
    margin-left: 16px;
    margin-right: 16px;
    margin-bottom: 16px;
    -unity-text-align: lower-left;
}

.item-card.item-card-large #_imageContainer {
    padding-left: 4px;
    padding-right: 4px;
    padding-top: 4px;
    padding-bottom: 0px;
    width: auto;
    height: auto;
    min-height: 65%;
    min-width: 80%;
    margin-top: 18px;
    margin-left: auto;
    margin-right: auto;
}

.item-card.item-card-large #_rarity {
    left: 12px;
    top: -14px;
    font-size: 30px;
}

.item-card.item-card-large #_accountBound {
    left: 12px;
    bottom: 0px;
    width: 36px;
    height: 36px;
    border-radius: 4px;
}

.item-card.item-card-large #_quantity {
    top: 0px;
    right: -6px;
    font-size: 17px;
    border-radius: 6px;
    padding: 4px;
    height: 24px;
}

.item-card.item-card-large #_nfi {
    bottom: 0px;
    left: 10px;
    -unity-font-definition: var(--font-bold);
    font-size: 17px;
}

.item-card.item-card-large #_effectsIcon {
    top: 4px;
    right: 4px;
    width: 48px;
    height: 48px;
}

/* Medium */
.item-card.item-card-medium {
    height: 164px;
    max-width: 120px;
}

.item-card.item-card-medium .rarity-bg {
    width: auto;
    max-width: 100%;
}

.item-card.item-card-medium.item-card__content {
    max-width: 100%;
    height: 164px;
}

.item-card.item-card-medium #_imageContainer {
    margin-left: auto;
    margin-right: auto;
    max-width: 104px;
    width: 104px;
    height: 104px;
}

.item-card.item-card-medium .item-image-profile-background-item {
    max-height: 104px;
    top: 12px;
}

.item-card.item-card-medium.item-card--on-head-item #_imageContainer,
.item-card.item-card-large.item-card--on-head-item #_imageContainer
{
    margin-left: initial;
    margin-right: initial;
    margin-top: initial;
    max-width: initial;
    width: 100%;
    padding: 0;
}

.item-card.item-card-medium #_name {
    font-size: 11px;
    max-height: 42px;
    flex-grow: 1;
    bottom: 4px;
    min-height: 36px;
}

.item-card.item-card-medium #_rarity {
    font-size: 11px;
}

.item-card.item-card-medium #_effectsIcon {
    top: 3px;
    right: 3px;
}

.item-card #_imageShadow {
    opacity: 0.8;
    --unity-image-tint-color: var(--color-fishbase-eel);
    translate: 0 2px;
}

/* Mythical background */

.item-card UIMythicalBackground {
    display: none;
}

.item-card .mythical-background-mask {
    display: none;
}

.item-card.rarity-mythical UIMythicalBackground {
    display: flex;
}

.item-card.alt.rarity-mythical .mythical-background-mask {
    display: flex;
}

/* Premium gold cell */
.item-card.item-card--premium-gold #_border {
    border-width: 2px;
    border-color: #FACC6E;
}

.item-card.item-card--premium-gold #_name {
    color: #FACC6E;
}

/* Type image */

.item-card #_typeImage {
    width: 16px;
    height: 16px;
}