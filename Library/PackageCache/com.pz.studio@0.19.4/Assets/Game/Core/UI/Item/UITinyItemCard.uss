.tiny-item-card {
    width: 36px;
    height: 36px;
    border-radius: 8px;
}

.tiny-item-card #_itemImage {
    width: 28px;
    height: 28px;
    margin: auto;
}

.tiny-item-card.rarity-border {
    border-width: 2px;
}

.tiny-item-card.alt {
    background-color: var(--color-fishbase-blackfish);
}

.tiny-item-card .item-image-on-head-item#_itemImage {
    margin: 0;
    width: 100%;
    height: 100%;
}

.tiny-item-card #_quantity {
    display: none;
    position: absolute;
    top: -3px;
    right: -3px;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-anchovy);
    font-size: 11px;
    border-radius: 4px;
    margin: 0;
    height: 16px;
    padding-left: 2px;
    padding-right: 2px;
    -unity-text-align: middle-center;
    min-width: 16px;
}

.rtl .tiny-item-card #_quantity {
    left: -3px;
    right: auto;
}

/* Mythical background */

.tiny-item-card UIMythicalBackground {
    display: none;
}

.tiny-item-card .mythical-background-mask {
    display: none;
}

.tiny-item-card.rarity-mythical UIMythicalBackground {
    display: flex;
}

.tiny-item-card.alt.rarity-mythical .mythical-background-mask {
    display: flex;
}

/* Outlined quantity */
.tiny-item-card > #_outlinedQuantity {
    font-size: 13px;
    -unity-font-definition: var(--font-extra-black);
    color: white;
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.4);
    -unity-text-outline-color: black;
    -unity-text-outline-width: 3px;
    -unity-text-align: middle-center;
}

/* Effects icon */

.tiny-item-card #_effectsIcon {
    display: none;
    position: absolute;
    top: 2px;
    right: 2px;
    width: 12px;
    height: 12px;
    --unity-image-tint-color: var(--color-fishbase-eel-25);
}
