.mythical-background {
    border-radius: 8px;
    overflow: hidden;
}

.mythical-background-gradient {
    background-image: var(--image-mythical-gradient);
    -unity-background-scale-mode: stretch-to-fill;
}

.mythical-background-glare {
    background-image: var(--image-mythical-glare);
    -unity-background-scale-mode: stretch-to-fill;
}

.mythical-background-mask {
    margin: 2px;
    background-color: var(--color-fishbase-blackfish);
    border-radius: 6px;
}
