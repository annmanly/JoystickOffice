:root {
    --view-selector-height: 80px;
}

.room__chat-input {
    margin-bottom: 0px;
}

#messenger__messages #unity-content-container {
}

/** Scrollbar */

.unity-scroller--vertical #unity-slider {
    margin: 0px;
    min-width: 4px;
    width: 4px;
}

.unity-scroller--horizontal #unity-slider {
    margin: 0px;
    min-height: 4px;
    height: 4px;
}

#unity-dragger {
    background-color: var(--color-fishbase-tuna);
    border-width: 0;
    border-radius: 0;
}

#unity-drag-container:active #unity-dragger,
#unity-dragger:hover {
    border-radius: 0;
    border-width: 0;
}

.unity-scroller--vertical {
    width: 8px;
}

.unity-scroller--horizontal {
    height: 8px;
}

.login__logo {
    margin-top: 70px;
}

.portrait .alert {
    margin-left: var(--spacing-xl);
    margin-right: var(--spacing-xl);
    margin-bottom: var(--safe-area-bottom);
    margin-top: auto;
}